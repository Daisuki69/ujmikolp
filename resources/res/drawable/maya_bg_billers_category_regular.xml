<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/mayaContentViewBorderColor"/>
        </shape>
    </item>
    <item
        android:left="@dimen/maya_padding_3x_small"
        android:right="@dimen/maya_padding_3x_small">
        <shape android:shape="rectangle">
            <solid android:color="?attr/mayaContentViewBackgroundColor"/>
        </shape>
    </item>
    <item
        android:left="@dimen/maya_padding_3x_small"
        android:right="@dimen/maya_padding_3x_small">
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/mayaContentViewBackgroundColor"/>
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>
