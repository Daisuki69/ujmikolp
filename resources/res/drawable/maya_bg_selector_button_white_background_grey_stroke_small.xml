<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?attr/mayaButtonGreyFocusedMaskColor">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/maya_radius_12dp"/>
            <solid android:color="?attr/mayaColorBackgroundPrimary"/>
            <stroke
                android:width="@dimen/maya_stroke_width_small"
                android:color="?attr/mayaColorBackgroundSecondary"/>
        </shape>
    </item>
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/maya_radius_12dp"/>
                    <solid android:color="?attr/mayaColorBackgroundPrimary"/>
                    <stroke
                        android:width="@dimen/maya_stroke_width_small"
                        android:color="?attr/mayaButtonGreyDefaultColor"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/maya_radius_12dp"/>
                    <solid android:color="?attr/mayaColorBackgroundSecondary"/>
                    <stroke
                        android:width="@dimen/maya_stroke_width_small"
                        android:color="?attr/mayaButtonGreyDefaultColor"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/maya_radius_12dp"/>
            <solid android:color="?attr/mayaColorBackgroundPrimary"/>
            <stroke
                android:width="@dimen/maya_stroke_width_small"
                android:color="?attr/mayaButtonGreyDefaultColor"/>
        </shape>
    </item>
</ripple>
