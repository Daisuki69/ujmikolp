<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <size android:height="2dp"/>
                    <solid
                        android:width="2dp"
                        android:color="@color/pma_gray_00_tint"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <size android:height="2dp"/>
                    <solid
                        android:width="2dp"
                        android:color="@color/pma_gray_00_tint"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <size android:height="2dp"/>
                    <solid
                        android:width="2dp"
                        android:color="@color/pma_opacity_white_50"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
