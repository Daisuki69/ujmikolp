<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/pma_gray_60_tint"/>
            <corners android:radius="@dimen/pma_radius_4dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/pma_gray_40_tint"/>
            <corners android:radius="@dimen/pma_radius_4dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/pma_gray_00_tint"/>
            <corners android:radius="@dimen/pma_radius_4dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
</selector>
