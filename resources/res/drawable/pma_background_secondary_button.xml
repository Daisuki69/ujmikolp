<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/pma_button_blue_background_default">
    <item>
        <selector>
            <item
                android:state_enabled="true"
                android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/pma_radius_5dp"/>
                    <stroke
                        android:width="@dimen/pma_stroke_width_normal"
                        android:color="@color/pma_button_blue_background_pressed"/>
                    <solid android:color="@color/pma_button_blue_background_pressed"/>
                </shape>
            </item>
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/pma_radius_5dp"/>
                    <stroke
                        android:width="@dimen/pma_stroke_width_normal"
                        android:color="@color/pma_button_blue_background_default"/>
                    <solid android:color="@color/pma_button_blue_background_default"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/pma_radius_5dp"/>
                    <stroke
                        android:width="@dimen/pma_stroke_width_normal"
                        android:color="@color/pma_button_blue_background_default"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
