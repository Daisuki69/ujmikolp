<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?attr/mayaColorCheckableContentFillStatePressed">
    <item>
        <selector>
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/mayaColorCheckableContentFillStateChecked"/>
                    <corners android:radius="@dimen/pma_radius_16dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/mayaColorCheckableContentFillStateDefault"/>
                    <corners android:radius="@dimen/pma_radius_16dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="?attr/mayaColorCheckableContentStrokeStateDefault"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
