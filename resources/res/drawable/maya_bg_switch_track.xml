<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/mayaColorSwitchTrackChecked"/>
            <corners android:radius="@dimen/maya_radius_6dp"/>
            <size
                android:height="@dimen/maya_switch_height"
                android:width="@dimen/maya_switch_width"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/mayaColorSwitchTrackDefault"/>
            <corners android:radius="@dimen/maya_radius_6dp"/>
            <size
                android:height="@dimen/maya_switch_height"
                android:width="@dimen/maya_switch_width"/>
        </shape>
    </item>
</selector>
