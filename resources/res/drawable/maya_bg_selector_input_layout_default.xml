<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/pma_radius_16dp"/>
            <solid android:color="?attr/mayaColorInputLayoutBackgroundFillFocused"/>
            <stroke
                android:width="@dimen/pma_stroke_width_normal"
                android:color="?attr/mayaColorInputLayoutBackgroundStrokeFocused"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/pma_radius_16dp"/>
            <solid android:color="?attr/mayaColorInputLayoutBackgroundFillFocused"/>
            <stroke
                android:width="@dimen/pma_stroke_width_normal"
                android:color="?attr/mayaColorInputLayoutBackgroundStrokeFocused"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/pma_radius_16dp"/>
            <solid android:color="?attr/mayaColorInputLayoutBackgroundFillDefault"/>
            <stroke
                android:width="@dimen/pma_stroke_width_normal"
                android:color="?attr/mayaColorInputLayoutBackgroundStrokeDefault"/>
        </shape>
    </item>
</selector>
