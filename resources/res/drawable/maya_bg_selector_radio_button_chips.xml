<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/pma_radius_16dp"/>
            <solid android:color="?attr/mayaChipsSelectedColor"/>
            <stroke
                android:width="@dimen/pma_stroke_width_normal"
                android:color="?attr/mayaChipsSelectedBorderColor"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/pma_radius_16dp"/>
            <solid android:color="?attr/mayaChipsDefaultColor"/>
            <stroke
                android:width="@dimen/pma_stroke_width_normal"
                android:color="?attr/mayaChipsDefaultBorderColor"/>
        </shape>
    </item>
</selector>
