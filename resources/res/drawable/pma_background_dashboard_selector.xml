<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/frosted_mint"
                android:endColor="@color/frosted_mint_transparent"
                android:angle="270"
                android:type="linear"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/rainee"
                android:endColor="@color/rainee_transparent"
                android:angle="270"
                android:type="linear"/>
        </shape>
    </item>
</selector>
