<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="?attr/mayaColorProgressBarHorizontalBackgroundColor"/>
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:left="@dimen/maya_padding_3x_small"
        android:right="@dimen/maya_padding_3x_small">
        <scale android:scaleWidth="100%">
            <shape>
                <solid android:color="?attr/mayaColorProgressBarHorizontalProgressColor"/>
            </shape>
        </scale>
    </item>
</layer-list>
