<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/mayaContentViewBorderColor"/>
            <corners
                android:topLeftRadius="@dimen/maya_radius_16dp"
                android:topRightRadius="@dimen/maya_radius_16dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>
    <item
        android:left="@dimen/maya_padding_3x_small"
        android:top="@dimen/maya_padding_3x_small"
        android:right="@dimen/maya_padding_3x_small">
        <shape android:shape="rectangle">
            <solid android:color="?attr/mayaContentViewBackgroundColor"/>
            <corners
                android:topLeftRadius="@dimen/maya_radius_16dp"
                android:topRightRadius="@dimen/maya_radius_16dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>
</layer-list>
