<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/maya_radius_16dp"/>
            <solid android:color="?attr/mayaColorSearchInputBackgroundFillFocused"/>
            <stroke
                android:width="@dimen/maya_stroke_width_normal"
                android:color="?attr/mayaColorSearchInputBackgroundStrokeFocused"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/maya_radius_16dp"/>
            <solid android:color="?attr/mayaColorSearchInputBackgroundFillFocused"/>
            <stroke
                android:width="@dimen/maya_stroke_width_normal"
                android:color="?attr/mayaColorSearchInputBackgroundStrokeFocused"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/maya_radius_16dp"/>
            <solid android:color="?attr/mayaColorSearchInputBackgroundFillDefault"/>
            <stroke
                android:width="@dimen/maya_stroke_width_normal"
                android:color="?attr/mayaColorSearchInputBackgroundStrokeDefault"/>
        </shape>
    </item>
</selector>
