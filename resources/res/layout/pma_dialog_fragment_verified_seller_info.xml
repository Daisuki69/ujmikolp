<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_layout_pma_dialog_fragment_verified_seller_info"
    android:background="@drawable/pma_background_dialog_rounded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <dOYHB6.lN8Dz0.gDiks7
        android:id="@+id/content_scroll_view_pma_dialog_fragment_verified_seller_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_normal"
        android:layout_marginTop="@dimen/pma_margin_extra_large"
        android:layout_marginRight="@dimen/pma_margin_normal"
        android:layout_marginBottom="@dimen/pma_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/got_it_button_pma_dialog_fragment_verified_seller_info"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_normal"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:paddingStart="@dimen/pma_margin_small"
            android:paddingEnd="@dimen/pma_margin_small">
            <TextView
                android:id="@+id/title_text_view_pma_dialog_fragment_verified_sellers_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pma_label_title_about_verified_sellers"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/SubtitleDarkBold"/>
            <com.paymaya.common.widget.HtmlTextView
                android:id="@+id/information_text_view_pma_dialog_fragment_verified_sellers_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/pma_html_content_verified_sellers_info"
                android:lineSpacingExtra="@dimen/pma_line_spacing_6sp"
                app:layout_constraintTop_toBottomOf="@+id/title_text_view_pma_dialog_fragment_verified_sellers_info"
                style="@style/BodyDark"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </dOYHB6.lN8Dz0.gDiks7>
    <Button
        android:id="@+id/got_it_button_pma_dialog_fragment_verified_seller_info"
        android:layout_width="0dp"
        android:layout_height="@dimen/pma_button_min_height"
        android:layout_marginLeft="@dimen/pma_margin_extra_large"
        android:layout_marginTop="@dimen/pma_margin_normal"
        android:layout_marginRight="@dimen/pma_margin_extra_large"
        android:layout_marginBottom="@dimen/pma_margin_extra_large"
        android:text="@string/pma_label_got_it"
        android:fontFamily="@string/pma_font_family_roboto_medium"
        android:layout_marginStart="@dimen/pma_margin_extra_large"
        android:layout_marginEnd="@dimen/pma_margin_extra_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryButtonFloating"/>
</androidx.constraintlayout.widget.ConstraintLayout>
