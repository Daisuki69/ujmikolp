<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_view_add_favorite_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/text_view_add_favorite_value"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoSemiBoldSmallText.Tertiary"/>
    <TextView
        android:id="@+id/text_view_add_favorite_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/text_view_add_favorite_extra_value"
        app:layout_constraintTop_toBottomOf="@+id/text_view_add_favorite_label"
        app:layout_goneMarginBottom="@dimen/maya_margin_medium"
        style="@style/JekoSemiBoldLink.Primary"/>
    <TextView
        android:id="@+id/text_view_add_favorite_extra_value"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/text_view_add_favorite_sub_value"
        app:layout_constraintTop_toBottomOf="@+id/text_view_add_favorite_value"
        app:layout_goneMarginBottom="@dimen/maya_margin_medium"
        style="@style/JekoSemiBoldLink.Primary"/>
    <TextView
        android:id="@+id/text_view_add_favorite_sub_value"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:layout_marginBottom="@dimen/maya_margin_medium"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_add_favorite_extra_value"
        style="@style/JekoSemiBoldLink.Tertiary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
