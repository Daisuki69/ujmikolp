        android:layout_gravity="right"
        android:orientation="horizontal"
        android:paddingTop="@dimen/pma_padding_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:textSize="@dimen/pma_text_size_body"
            android:textColor="@color/pma_theme_home_text_color_primary"
            android:id="@+id/pma_dialog_fragment_allow_storage_permission_not_now_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pma_label_not_now"
            style="@style/pma_widget_dialog_button"/>
        <Button
            android:textSize="@dimen/pma_text_size_body"
            android:textColor="?attr/colorPrimary"
            android:id="@+id/pma_dialog_fragment_allow_storage_permission_open_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pma_label_open_settings"
            style="@style/pma_widget_dialog_button"/>
    </dOYHB6.lN8Dz0.d8NVX3>
</dOYHB6.lN8Dz0.d8NVX3>
