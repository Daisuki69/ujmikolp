<?xml version="1.0" encoding="utf-8"?>
<dOYHB6.lN8Dz0.d8NVX3 xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pma_padding_normal"
    android:paddingTop="@dimen/pma_padding_normal"
    android:paddingRight="@dimen/pma_padding_normal"
    android:paddingBottom="@dimen/pma_padding_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <dOYHB6.lN8Dz0.d8NVX3
        android:orientation="vertical"
        android:padding="@dimen/pma_padding_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/pma_text_size_title2"
            android:textColor="@color/pma_text_color_dark_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pma_margin_small"
            android:text="@string/pma_label_allow_paymaya_to_access_storage"
            android:fontFamily="@string/pma_font_family_roboto_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
