<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_swipe_refresh_layout_pma_fragment_shop_v3_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/empty_image_view_pma_fragment_shop_v3_page"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f08046e"
            app:layout_constraintBottom_toTopOf="@+id/empty_text_view_pma_fragment_shop_v3_page"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:gravity="center"
            android:id="@+id/empty_text_view_pma_fragment_shop_v3_page"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_extra_large"
            android:layout_marginTop="@dimen/pma_margin_medium"
            android:layout_marginRight="@dimen/pma_margin_extra_large"
            android:text="@string/pma_label_shop_purchase_history_empty_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/empty_image_view_pma_fragment_shop_v3_page"
            style="@style/Body2DarkLight"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/empty_constraint_group_pma_fragment_shop_v3_page"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="empty_image_view_pma_fragment_shop_v3_page,empty_text_view_pma_fragment_shop_v3_page"/>
        <androidx.recyclerview.widget.RecyclerView
            android:scrollbarSize="@dimen/pma_scrollbar_size_normal"
            android:scrollbarThumbVertical="@color/pma_theme_home_scrollbar_color"
            android:id="@+id/recycler_view_pma_fragment_shop_v3_page"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
