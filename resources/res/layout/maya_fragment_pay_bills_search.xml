<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/mayaColorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:textColorHint="?attr/mayaColorInputLayoutHintTextColor"
        android:layout_gravity="center_vertical"
        android:id="@+id/edit_text_search_input"
        android:background="@drawable/maya_bg_search_editable"
        android:paddingLeft="@dimen/maya_padding_large"
        android:paddingTop="@dimen/maya_padding_18dp"
        android:paddingRight="@dimen/maya_padding_large"
        android:paddingBottom="@dimen/maya_padding_18dp"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:hint="@string/maya_pay_bill_search_label"
        android:singleLine="true"
        android:drawablePadding="@dimen/maya_padding_normal"
        android:imeOptions="actionDone"
        android:drawableStart="?attr/mayaSearchIcon"
        android:paddingHorizontal="@dimen/maya_padding_large"
        android:paddingVertical="@dimen/maya_padding_18dp"
        app:layout_constraintEnd_toStartOf="@+id/image_view_clear_search"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoSemiBoldTextBody.Primary"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/image_view_clear_search"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingTop="@dimen/maya_margin_normal"
        android:paddingBottom="@dimen/maya_margin_normal"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_close"
        android:layout_marginStart="@dimen/maya_margin_medium"
        android:paddingVertical="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_search_input"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/edit_text_search_input"
        app:layout_constraintTop_toTopOf="@+id/edit_text_search_input"
        app:srcCompat="@drawable/maya_ic_close"/>
    <androidx.recyclerview.widget.RecyclerView
        android:scrollbarThumbVertical="@drawable/maya_bg_scrollbar_grey_quaternary"
        android:id="@+id/recycler_view_biller_items"
        android:background="?attr/mayaColorBackgroundPrimary"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_search_input"/>
    <ImageView
        android:id="@+id/image_view_empty_results_graphic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:src="0x7f0802e8"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/text_view_empty_results_title"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_search_input"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/text_view_empty_results_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_label_pay_bills_empty_results_title"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/text_view_empty_results_message"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/image_view_empty_results_graphic"
        style="@style/JekoSemiBoldH5.Primary"/>
    <TextView
        android:id="@+id/text_view_empty_results_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_label_pay_bills_empty_results_message"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/text_view_empty_results_title"
        style="@style/CerebriBookLink.Tertiary"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/constraint_group_empty_results_state"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="image_view_empty_results_graphic,         text_view_empty_results_title,         text_view_empty_results_message"/>
    <ImageView
        android:id="@+id/image_view_error_graphic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:src="0x7f0802f0"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/text_view_error_title"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_search_input"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/text_view_error_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_label_credit_error_dialog_title"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/text_view_error_message"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/image_view_error_graphic"
        style="@style/JekoSemiBoldH5.Primary"/>
    <TextView
        android:id="@+id/text_view_error_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_label_credit_error_dialog_description"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/text_view_error_title"
        style="@style/CerebriBookLink.Secondary"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/constraint_group_error_state"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="image_view_error_graphic,         text_view_error_title,         text_view_error_message"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_view_loading"
        android:background="@color/transparent"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_search_input"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/maya_loading_animation"/>
</androidx.constraintlayout.widget.ConstraintLayout>
