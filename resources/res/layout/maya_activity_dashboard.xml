<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include
        android:id="@+id/view_toast"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_52"
        android:layout_marginRight="@dimen/maya_margin_52"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:layout_marginHorizontal="@dimen/maya_margin_52"
        app:layout_constraintBottom_toTopOf="@+id/view_navigation"
        layout="@layout/maya_view_toast"/>
    <include
        android:id="@+id/view_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_2x_large"
        android:layout_marginRight="@dimen/maya_margin_2x_large"
        android:layout_marginHorizontal="@dimen/maya_margin_2x_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        layout="@layout/maya_view_floating_navigation"/>
</androidx.constraintlayout.widget.ConstraintLayout>
