<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container_pma_view_shop_v3_purchase_history_completed_item"
    android:background="@drawable/maya_bg_shop_history"
    android:paddingBottom="@dimen/maya_padding_large"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/maya_padding_normal"
    android:paddingEnd="@dimen/maya_padding_normal">
    <ImageView
        android:id="@+id/shop_history_completed_product_icon_image_view"
        android:background="@drawable/maya_bg_icon_circle_border"
        android:padding="@dimen/maya_padding_6dp"
        android:layout_width="@dimen/maya_shop_item_product_icon_size"
        android:layout_height="@dimen/maya_shop_item_product_icon_size"
        app:layout_constraintBottom_toBottomOf="@+id/shop_history_completed_product_price_text_view"
        app:layout_constraintDimensionRatio="0.88"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/shop_history_gaming_pin_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.4"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/shop_history_completed_product_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/maya_margin_medium"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constraintEnd_toStartOf="@+id/shop_history_completed_product_price_text_view"
        app:layout_constraintLeft_toRightOf="@+id/shop_history_completed_product_icon_image_view"
        app:layout_constraintStart_toEndOf="@+id/shop_history_completed_product_icon_image_view"
        app:layout_constraintTop_toTopOf="@+id/shop_history_completed_product_icon_image_view"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/JekoBoldTextBody.Primary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/shop_history_completed_product_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
        android:layout_marginStart="@dimen/maya_margin_medium"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constraintBottom_toBottomOf="@+id/shop_history_completed_product_icon_image_view"
        app:layout_constraintEnd_toStartOf="@+id/shop_history_completed_product_price_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/shop_history_completed_product_name_text_view"
        app:layout_constraintStart_toEndOf="@+id/shop_history_completed_product_icon_image_view"
        style="@style/JekoBoldLink.Secondary"/>
    <TextView
        android:id="@+id/shop_history_completed_product_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shop_history_completed_product_name_text_view"
        style="@style/JekoBoldTextBody.Primary"/>
    <TextView
        android:id="@+id/gifted_recipient_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        app:layout_constraintBottom_toTopOf="@+id/shop_history_completed_dynamic_fields_container_linear_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/shop_history_completed_product_description_text_view"
        app:layout_constraintTop_toBottomOf="@+id/shop_history_completed_product_description_text_view"
        style="@style/JekoBoldLink.Tertiary"/>
    <dOYHB6.lN8Dz0.d8NVX3
        android:orientation="vertical"
        android:id="@+id/shop_history_completed_dynamic_fields_container_linear_layout"
        android:background="?attr/mayaBillersCardBackground"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifted_recipient_text_view">
        <include
            android:visibility="gone"
            layout="@layout/maya_view_shop_purchase_history_list_dynamic_field"/>
        <include
            android:visibility="gone"
            layout="@layout/maya_view_shop_purchase_history_list_dynamic_field"/>
        <include
            android:visibility="gone"
            layout="@layout/maya_view_shop_purchase_history_list_dynamic_field"/>
    </dOYHB6.lN8Dz0.d8NVX3>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/shop_history_completed_gaming_pin_constraint_group"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="shop_history_completed_gaming_pin_background_view,         shop_history_completed_gaming_pin_code_label_text_view,         shop_history_completed_gaming_pin_code_value_text_view,         shop_history_completed_gaming_pin_copy_image_view,         shop_history_completed_gaming_pin_bottom_space"/>
    <View
        android:id="@+id/shop_history_completed_gaming_pin_background_view"
        android:background="?attr/mayaBillersCardBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="@+id/shop_history_completed_gaming_pin_bottom_space"
        app:layout_constraintTop_toBottomOf="@+id/shop_history_completed_dynamic_fields_container_linear_layout"/>
    <TextView
        android:id="@+id/shop_history_completed_gaming_pin_code_label_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_20"
        android:text="@string/maya_shop_history_code"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constraintLeft_toLeftOf="@+id/shop_history_completed_gaming_pin_background_view"
        app:layout_constraintRight_toLeftOf="@+id/shop_history_gaming_pin_guideline"
        app:layout_constraintTop_toTopOf="@+id/shop_history_completed_gaming_pin_background_view"
        app:layout_constraintVertical_bias="0"
        style="@style/JekoSemiBoldSmallText.Tertiary"/>
    <TextView
        android:gravity="start|center_vertical"
        android:id="@+id/shop_history_completed_gaming_pin_code_value_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constraintLeft_toRightOf="@+id/shop_history_gaming_pin_guideline"
        app:layout_constraintRight_toLeftOf="@+id/shop_history_completed_gaming_pin_copy_image_view"
        app:layout_constraintTop_toTopOf="@+id/shop_history_completed_gaming_pin_code_label_text_view"
        style="@style/JekoRegularLongRead.Primary"/>
    <ImageView
        android:id="@+id/shop_history_completed_gaming_pin_copy_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_copy"
        android:layout_marginEnd="@dimen/maya_padding_medium"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@+id/shop_history_completed_gaming_pin_code_value_text_view"
        app:layout_constraintRight_toRightOf="@+id/shop_history_completed_gaming_pin_background_view"
        app:layout_constraintTop_toTopOf="@+id/shop_history_completed_gaming_pin_code_value_text_view"/>
    <Space
        android:id="@+id/shop_history_completed_gaming_pin_bottom_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/shop_history_completed_gaming_pin_background_view"
        app:layout_constraintStart_toStartOf="@+id/shop_history_completed_gaming_pin_background_view"
        app:layout_constraintTop_toBottomOf="@+id/shop_history_completed_gaming_pin_code_value_text_view"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/shop_history_completed_treats_constraint_group"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="shop_history_completed_treats_background_view,         shop_history_completed_treats_code_label_text_view,         shop_history_completed_treats_code_value_text_view,         shop_history_completed_treat_copy_image_view,         shop_history_completed_treats_bottom_space"/>
    <View
        android:id="@+id/shop_history_completed_treats_background_view"
        android:background="?attr/mayaBillersCardBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="@+id/shop_history_completed_treats_bottom_space"
        app:layout_constraintTop_toBottomOf="@+id/shop_history_completed_gaming_pin_background_view"/>
    <TextView
        android:id="@+id/shop_history_completed_treats_code_label_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_normal"
        android:layout_marginTop="@dimen/maya_margin_20"
        android:layout_marginRight="@dimen/maya_margin_small"
        android:text="@string/maya_shop_history_code"
        app:layout_constraintLeft_toLeftOf="@+id/shop_history_completed_treats_background_view"
        app:layout_constraintRight_toLeftOf="@+id/shop_history_gaming_pin_guideline"
        app:layout_constraintTop_toTopOf="@+id/shop_history_completed_treats_background_view"
        style="@style/JekoBoldSmallText.Tertiary"/>
    <TextView
        android:gravity="start|center_vertical"
        android:id="@+id/shop_history_completed_treats_code_value_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/maya_margin_small"
        android:maxLines="3"
        app:layout_constraintLeft_toRightOf="@+id/shop_history_gaming_pin_guideline"
        app:layout_constraintRight_toLeftOf="@+id/shop_history_completed_treat_copy_image_view"
        app:layout_constraintTop_toTopOf="@+id/shop_history_completed_treats_code_label_text_view"
        style="@style/JekoRegularLongRead.Primary"/>
    <ImageView
        android:id="@+id/shop_history_completed_treat_copy_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_copy"
        android:layout_marginEnd="@dimen/maya_padding_medium"
        app:layout_constraintLeft_toRightOf="@+id/shop_history_completed_treats_code_value_text_view"
        app:layout_constraintRight_toRightOf="@+id/shop_history_completed_treats_background_view"
        app:layout_constraintTop_toTopOf="@+id/shop_history_completed_treats_code_value_text_view"/>
    <Space
        android:id="@+id/shop_history_completed_treats_bottom_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/shop_history_completed_treats_background_view"
        app:layout_constraintStart_toStartOf="@+id/shop_history_completed_treats_background_view"
        app:layout_constraintTop_toBottomOf="@+id/shop_history_completed_treats_code_value_text_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>
