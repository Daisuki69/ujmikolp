<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_container"
    android:background="@drawable/maya_bg_content_border"
    android:paddingTop="@dimen/pma_padding_10dp"
    android:paddingBottom="@dimen/pma_padding_10dp"
    android:layout_width="@dimen/maya_view_holder_bank_transfer_favorite_card_min_width"
    android:layout_height="match_parent"
    android:minHeight="@dimen/maya_view_holder_bank_transfer_favorite_card_min_height"
    android:layout_marginEnd="@dimen/pma_margin_small">
    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="@dimen/pma_view_holder_favorite_icon_size"
        android:layout_height="@dimen/pma_view_holder_favorite_icon_size"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_alias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
        android:layout_marginStart="@dimen/pma_margin_medium"
        android:layout_marginEnd="@dimen/pma_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/text_view_line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/JekoBoldSmallText.Primary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_line2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
        android:layout_marginStart="@dimen/pma_margin_medium"
        android:layout_marginEnd="@dimen/pma_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/text_view_line1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_image"
        app:layout_constraintTop_toBottomOf="@+id/text_view_alias"
        style="@style/JekoBoldSmallText.Tertiary"/>
    <TextView
        android:id="@+id/text_view_line1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
        android:layout_marginStart="@dimen/pma_margin_medium"
        android:layout_marginEnd="@dimen/pma_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/text_view_maintenance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_image"
        app:layout_constraintTop_toBottomOf="@+id/text_view_line2"
        style="@style/JekoSemiBoldSmallText.Tertiary"/>
    <TextView
        android:id="@+id/text_view_maintenance"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_temporarily_unavailable"
        android:maxLines="1"
        android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
        android:alpha="0.4"
        android:layout_marginStart="@dimen/pma_margin_medium"
        android:layout_marginEnd="@dimen/pma_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_image"
        app:layout_constraintTop_toBottomOf="@+id/text_view_line1"
        style="@style/JekoSemiBoldSmallText.Tertiary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
