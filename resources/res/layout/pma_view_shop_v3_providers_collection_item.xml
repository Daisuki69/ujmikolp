<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_layout_pma_view_shop_v3_providers_collection_item"
    android:background="@drawable/pma_selectable_background_stroke_rect_white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pma_shop_providers_collection_item_container_height">
    <ImageView
        android:id="@+id/provider_icon_image_view_pma_view_shop_v3_providers_collection_item"
        android:layout_width="@dimen/pma_shop_providers_collection_item_icon_length"
        android:layout_height="@dimen/pma_shop_providers_collection_item_icon_length"
        android:layout_marginLeft="@dimen/pma_margin_normal"
        android:src="0x7f08050e"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_max="@dimen/pma_shop_item_product_icon_max_width"/>
    <TextView
        android:textColor="@color/pma_theme_home_text_color_primary"
        android:ellipsize="end"
        android:id="@+id/provider_name_text_view_pma_view_shop_v3_providers_collection_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_medium"
        android:layout_marginRight="@dimen/pma_margin_40dp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/provider_icon_image_view_pma_view_shop_v3_providers_collection_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        style="@style/Body2Dark"/>
</androidx.constraintlayout.widget.ConstraintLayout>
