<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_view_maya_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:src="0x7f08029d"
        android:scaleType="centerInside"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@+id/image_view_updater_image"
        app:layout_constraintEnd_toEndOf="@+id/image_view_updater_image"
        app:layout_constraintStart_toStartOf="@+id/image_view_updater_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <ImageView
        android:id="@+id/image_view_updater_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="0x7f0802db"
        android:layout_marginStart="@dimen/maya_margin_48"
        android:layout_marginEnd="@dimen/maya_margin_48"
        app:layout_constraintBottom_toTopOf="@+id/text_view_updater_title"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_maya_logo"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/text_view_updater_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:text="@string/maya_label_updater_title"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/maya_margin_48"
        android:layout_marginEnd="@dimen/maya_margin_48"
        app:layout_constraintBottom_toTopOf="@+id/html_text_view_updater_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_updater_image"
        style="@style/JekoBoldH5"/>
    <com.paymaya.common.widget.HtmlTextView
        android:textColor="@color/maya_shades_of_grey_5"
        android:id="@+id/html_text_view_updater_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginBottom="@dimen/maya_margin_large"
        android:text="@string/maya_label_updater_description_with_update_faqs"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/maya_margin_48"
        android:layout_marginEnd="@dimen/maya_margin_48"
        app:layout_constraintBottom_toTopOf="@+id/button_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_updater_title"
        style="@style/CerebriBookLink"/>
    <Button
        android:id="@+id/button_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_48"
        android:text="@string/maya_label_update_now"
        android:layout_marginStart="@dimen/maya_margin_large"
        android:layout_marginEnd="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
