                    app:layout_constraintBottom_toTopOf="@+id/mobile_number_text_pma_fragment_request_money_v3"
                    app:layout_constraintEnd_toStartOf="@+id/upgraded_badge_image_pma_fragment_request_money_v3"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/upgraded_badge_image_pma_fragment_request_money_v3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/qr_code_image_pma_fragment_request_money_v3"
                    app:layout_constraintWidth="wrap_content_constrained"
                    style="@style/Title2DarkBold"/>
                <ImageView
                    android:id="@+id/upgraded_badge_image_pma_fragment_request_money_v3"
                    android:visibility="gone"
                    android:layout_width="@dimen/pma_request_money_account_status_badge_length"
                    android:layout_height="0dp"
