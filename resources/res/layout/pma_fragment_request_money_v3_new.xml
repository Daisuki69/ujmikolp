                        android:text="@string/pma_label_verified_seller_all_caps"
                        android:drawablePadding="@dimen/pma_padding_extra_small"
                        android:lineSpacingExtra="0sp"
                        android:letterSpacing="0.09"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/verified_seller_info_icon_image_view_pma_fragment_request_money_v3"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/CaptionSuccessNewBold"/>
                    <ImageView
