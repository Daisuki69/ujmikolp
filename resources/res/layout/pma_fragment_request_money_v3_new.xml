                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/pma_margin_extra_small"
                        android:src="@drawable/pma_ic_verified_seller_info"
                        app:layout_constraintBottom_toBottomOf="@+id/verified_seller_tag_text_view_pma_fragment_request_money_v3"
                        app:layout_constraintLeft_toRightOf="@+id/verified_seller_tag_text_view_pma_fragment_request_money_v3"
                        app:layout_constraintTop_toTopOf="@+id/verified_seller_tag_text_view_pma_fragment_request_money_v3"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/custom_values_container_pma_fragment_request_money_v3"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pma_margin_normal"
                    app:cardCornerRadius="@dimen/pma_radius_6dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/inner_qr_card_bottom_space_pma_fragment_request_money_v3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/verified_seller_tag_constraint_layout_pma_fragment_request_money_v3">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@drawable/pma_background_bordered_round_rect_jade_green_translucent"
                        android:padding="@dimen/pma_padding_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:id="@+id/amount_text_pma_fragment_request_money_v3"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toTopOf="@+id/purpose_text_pma_fragment_request_money_v3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/BodyDarkBold"/>
                        <TextView
                            android:gravity="center"
                            android:id="@+id/purpose_text_pma_fragment_request_money_v3"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:maxLines="2"
                            android:textAlignment="center"
                            app:autoSizeMaxTextSize="@dimen/pma_text_size_body2"
                            app:autoSizeMinTextSize="@dimen/pma_text_size_caption"
                            app:autoSizeStepGranularity="@dimen/pma_auto_size_step_granularity_1sp"
                            app:autoSizeTextType="uniform"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight="wrap_content_constrained"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/amount_text_pma_fragment_request_money_v3"
                            app:layout_goneMarginBottom="@dimen/pma_margin_extra_large"
                            app:layout_goneMarginTop="0dp"
                            style="@style/Body2Dark"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:id="@+id/inner_qr_card_bottom_space_pma_fragment_request_money_v3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight="wrap_content_constrained"
                    app:layout_constraintHeight_max="@dimen/pma_margin_large"
                    app:layout_constraintHeight_min="@dimen/pma_margin_normal"
                    app:layout_constraintTop_toBottomOf="@+id/custom_values_container_pma_fragment_request_money_v3"
                    app:layout_constraintVertical_bias="1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/options_barrier_pma_fragment_request_money_v3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="generate_custom_code_view_pma_fragment_request_money_v3,custom_qr_share_view_pma_fragment_request_money_v3"/>
    <dOYHB6.lN8Dz0.yf3D09
