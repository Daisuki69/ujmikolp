                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_max="@dimen/pma_request_money_qr_qr_length"
                    app:layout_constraintHeight_min="@dimen/pma_request_money_qr_qr_min_length"
