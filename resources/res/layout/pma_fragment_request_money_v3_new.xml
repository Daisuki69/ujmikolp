                    android:paddingLeft="@dimen/pma_padding_small"
                    android:paddingTop="@dimen/pma_padding_6dp"
                    android:paddingRight="@dimen/pma_padding_small"
                    android:paddingBottom="@dimen/pma_padding_6dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pma_margin_extra_small"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toTopOf="@+id/custom_values_container_pma_fragment_request_money_v3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mobile_number_text_pma_fragment_request_money_v3">
                    <TextView
                        android:id="@+id/verified_seller_tag_text_view_pma_fragment_request_money_v3"
                        android:layout_width="wrap_content"
