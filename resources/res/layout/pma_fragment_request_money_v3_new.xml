                    app:layout_constraintBottom_toBottomOf="@+id/name_text_pma_fragment_request_money_v3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@+id/name_text_pma_fragment_request_money_v3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/name_text_pma_fragment_request_money_v3"
