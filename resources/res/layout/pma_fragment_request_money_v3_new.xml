            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_container_pma_fragment_request_money_v3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/pma_margin_40dp"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:layout_marginRight="@dimen/pma_margin_40dp"
            android:layout_marginBottom="@dimen/pma_margin_large"
            app:cardCornerRadius="@dimen/pma_radius_6dp"
            app:cardElevation="0dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight="wrap_content_constrained"
            app:layout_constraintTop_toTopOf="parent">
