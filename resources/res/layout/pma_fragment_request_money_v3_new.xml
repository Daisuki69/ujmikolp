                    app:layout_constraintTop_toBottomOf="@+id/inner_qr_card_top_space_pma_fragment_request_money_v3"/>
                <ImageView
                    android:id="@+id/qr_code_image_pma_fragment_request_money_v3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/pma_margin_normal"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toTopOf="@+id/name_text_pma_fragment_request_money_v3"
