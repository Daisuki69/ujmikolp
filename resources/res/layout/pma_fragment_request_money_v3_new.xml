        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_normal"
        android:layout_marginRight="@dimen/pma_margin_normal"
        android:layout_marginBottom="@dimen/pma_margin_medium"
        android:layout_marginStart="@dimen/pma_margin_normal"
        android:layout_marginEnd="@dimen/pma_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/share_view_pma_fragment_request_money_v3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/secondaryButton">
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/generate_custom_code_text_pma_fragment_request_money_v3"
            android:background="@null"
            android:padding="@dimen/pma_padding_medium"
            android:clickable="false"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pma_label_generate_custom_qr_code"
            android:drawablePadding="@dimen/pma_padding_extra_small"
            android:fontFamily="@font/roboto_medium"
            style="@style/BodyLightLightMedium"/>
    </dOYHB6.lN8Dz0.yf3D09>
    <dOYHB6.lN8Dz0.yf3D09
        android:id="@+id/share_view_pma_fragment_request_money_v3"
        android:background="@drawable/pma_drawable_save_share_button_v2"
        android:padding="0dp"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_normal"
        android:layout_marginRight="@dimen/pma_margin_normal"
        android:layout_marginBottom="@dimen/pma_margin_large"
        android:layout_marginStart="@dimen/pma_margin_normal"
        android:layout_marginEnd="@dimen/pma_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginRight="@dimen/pma_margin_normal"
        style="?attr/primaryButtonFloating">
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/share_text_pma_fragment_request_money_v3"
            android:padding="@dimen/pma_padding_medium"
            android:clickable="false"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pma_label_share_save"
            android:drawablePadding="@dimen/pma_padding_extra_small"
            app:drawableStartCompat="@drawable/pma_ic_share_save"
            app:drawableTint="@color/primary"
            style="@style/BodyPrimaryMedium"/>
    </dOYHB6.lN8Dz0.yf3D09>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/default_options_group_pma_fragment_request_money_v3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="generate_custom_code_view_pma_fragment_request_money_v3,share_view_pma_fragment_request_money_v3"/>
    <dOYHB6.lN8Dz0.yf3D09
        android:id="@+id/custom_qr_share_view_pma_fragment_request_money_v3"
        android:background="@drawable/pma_drawable_back_to_home_button_v2"
        android:padding="0dp"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_normal"
        android:layout_marginRight="@dimen/pma_margin_normal"
        android:layout_marginBottom="@dimen/pma_margin_medium"
        android:layout_marginStart="@dimen/pma_margin_normal"
        android:layout_marginEnd="@dimen/pma_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/custom_qr_edit_view_pma_fragment_request_money_v3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
