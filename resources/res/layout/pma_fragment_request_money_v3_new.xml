                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pma_margin_extra_small"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toTopOf="@+id/verified_seller_tag_constraint_layout_pma_fragment_request_money_v3"
