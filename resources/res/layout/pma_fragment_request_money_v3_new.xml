                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toTopOf="@+id/logo_image_pma_fragment_request_money_v3"
                    app:layout_constraintHeight="wrap_content_constrained"
                    app:layout_constraintHeight_max="@dimen/pma_margin_large"
                    app:layout_constraintHeight_min="@dimen/pma_margin_normal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"/>
                <ImageView
                    android:id="@+id/logo_image_pma_fragment_request_money_v3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/pma_ic_paymaya_logo_green"
                    android:adjustViewBounds="true"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintBottom_toTopOf="@+id/qr_code_image_pma_fragment_request_money_v3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight="wrap_content_constrained"
                    app:layout_constraintHeight_max="@dimen/pma_request_money_qr_header_logo_max_height"
                    app:layout_constraintHeight_min="@dimen/pma_request_money_qr_header_logo_min_height"
