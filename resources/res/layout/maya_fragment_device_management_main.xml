<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarThumbVertical="@drawable/maya_bg_scrollbar_grey_quaternary_small_margin"
    android:id="@+id/nested_scroll_view_content"
    android:background="?attr/mayaColorBackgroundPrimaryAlt"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fadeScrollbars="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginHorizontal="@dimen/maya_margin_large">
        <TextView
            android:id="@+id/text_view_title_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:text="@string/maya_label_device_management_manage_devices"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldH4.Primary"/>
        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_small"
            android:text="@string/maya_label_device_management_manage_devices_description"
            app:layout_constraintBottom_toTopOf="@+id/text_view_update_my_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title_header"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/CerebriBookLongRead.Secondary"/>
        <TextView
            android:id="@+id/text_view_update_my_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_small"
            android:text="@string/maya_label_device_management_update_my_email"
            app:layout_constraintBottom_toTopOf="@+id/text_view_active_device_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_description"
            style="@style/CerebriMediumLink.Accent"/>
        <TextView
            android:id="@+id/text_view_active_device_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:text="@string/maya_label_device_management_active"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@+id/view_active_device"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_update_my_email"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/CerebriOverlineBig.Primary"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_active_device"
            android:background="@drawable/maya_bg_content_border_dashboard_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/text_view_logged_out_devices_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_active_device_title">
            <TextView
                android:id="@+id/text_view_active_device_icon"
                android:background="@drawable/maya_bg_content_information_grey_2_small"
                android:padding="@dimen/maya_margin_extra_small"
                android:layout_width="@dimen/maya_icon_size_length_large"
                android:layout_height="@dimen/maya_icon_size_length_large"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:layout_marginBottom="@dimen/maya_margin_normal"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/maya_margin_normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                style="@style/JekoSemiBoldH5.Primary"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/text_view_active_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginStart="@dimen/maya_margin_medium"
                android:layout_marginEnd="@dimen/maya_margin_medium"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/image_view_active_device_arrow"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/text_view_active_device_icon"
                app:layout_constraintTop_toTopOf="@+id/text_view_active_device_icon"
                style="@style/JekoSemiBoldTextBody.Primary"/>
            <ImageView
                android:id="@+id/image_view_active_device_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:src="@drawable/maya_ic_service_help_grey_arrow"
                android:layout_marginEnd="@dimen/maya_margin_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/text_view_active_device_this_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_2x_small"
                android:layout_marginBottom="@dimen/maya_margin_normal"
                android:text="@string/maya_label_device_management_current_device"
                android:layout_marginStart="@dimen/maya_margin_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_view_active_device_icon"
                app:layout_constraintTop_toBottomOf="@+id/text_view_active_device_name"
                style="@style/CerebriMediumLink.Accent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/text_view_logged_out_devices_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:text="@string/maya_label_device_management_logged_out"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_devices"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_active_device"
            style="@style/CerebriOverlineBig.Primary"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_devices"
            android:background="@drawable/maya_bg_content_border_dashboard_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_medium"
            android:layout_marginBottom="@dimen/maya_margin_small"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_logged_out_devices_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
