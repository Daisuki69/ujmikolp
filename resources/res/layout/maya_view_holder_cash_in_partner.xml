<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/pma_radius_16dp"
    app:cardElevation="@dimen/pma_elevation_2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/maya_bg_content_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/image_view_partner_image"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/pma_margin_10dp"
            android:layout_marginStart="@dimen/pma_margin_10dp"
            android:layout_marginEnd="@dimen/pma_margin_10dp"
            app:layout_constraintBottom_toTopOf="@+id/view_partner_divider"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/view_partner_divider"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/pma_margin_extra_small"
            android:layout_marginBottom="@dimen/pma_margin_extra_small"
            android:layout_marginStart="@dimen/pma_margin_10dp"
            android:layout_marginEnd="@dimen/pma_margin_10dp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_partner_title"
            app:layout_constraintTop_toBottomOf="@+id/image_view_partner_image"
            style="@style/MayaContentViewDivider"/>
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/text_view_partner_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/maya_cash_in_partner_title_height"
            android:layout_marginBottom="@dimen/pma_margin_10dp"
            android:maxLines="2"
            android:layout_marginStart="@dimen/pma_margin_10dp"
            android:layout_marginEnd="@dimen/pma_margin_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_partner_divider"
            style="@style/JekoSemiBoldSmallText.Primary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
