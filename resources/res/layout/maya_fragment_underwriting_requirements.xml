                android:layout_marginTop="@dimen/maya_margin_16"
                app:layout_constraintTop_toBottomOf="@+id/text_view_form_sub_header"/>
            <com.paymaya.mayaui.common.view.widget.MayaDropDown
                android:id="@+id/dropdown_nature_of_work"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_16"
                android:hint="@string/maya_underwriting_requirements_nature_of_work_dropdown_hint"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/underwriting_requirements_separator_view"
                app:mddLabel="@string/maya_underwriting_requirements_nature_of_work_dropdown_label"
                style="@style/MayaDropDown.Profile"/>
            <com.paymaya.mayaui.common.view.widget.MayaDropDown
                android:enabled="false"
                android:id="@+id/dropdown_job_title"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_16"
                android:hint="@string/maya_underwriting_requirements_job_title_dropdown_hint"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/dropdown_nature_of_work"
                app:mddLabel="@string/maya_underwriting_requirements_job_title_dropdown_label"
                style="@style/MayaDropDown.Profile"/>
            <com.paymaya.mayaui.common.view.widget.MayaDropDown
