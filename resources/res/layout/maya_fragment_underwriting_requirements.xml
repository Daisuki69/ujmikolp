                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_underwriting_requirements_monthly_salary_hint"
                android:maxLines="1"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/input_company_name"
                app:milLabel="@string/maya_underwriting_requirements_label_monthly_salary"
                style="@style/MayaInputLayoutProfile"/>
            <View
                android:id="@+id/user_identification_separator_view"
                android:background="@color/bright_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/maya_stroke_width_large"
                android:layout_marginTop="@dimen/maya_margin_16"
                app:layout_constraintTop_toBottomOf="@+id/input_monthly_pay"/>
