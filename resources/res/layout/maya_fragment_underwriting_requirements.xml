        android:orientation="horizontal"
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_container"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollable_nested_scroll_view">
        <Button
            android:enabled="true"
            android:id="@+id/submit_button"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_small"
            android:layout_marginBottom="@dimen/pma_margin_normal"
            android:text="@string/maya_label_submit_button"
            android:layout_marginStart="@dimen/maya_margin_24"
            android:layout_marginEnd="@dimen/maya_margin_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/MayaButtonPrimaryLarge.RoundedCorner"/>
        <Button
            android:enabled="false"
            android:id="@+id/validate_identification_button"
            android:visibility="gone"
            android:layout_width="match_parent"
