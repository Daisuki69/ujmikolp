                android:background="@drawable/maya_profile_tile_tag_background"
                android:paddingLeft="@dimen/maya_padding_small"
                android:paddingTop="@dimen/maya_padding_2x_small"
                android:paddingRight="@dimen/maya_padding_small"
                android:paddingBottom="@dimen/maya_padding_2x_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_label_id_number_badge"
                android:layout_marginStart="@dimen/maya_margin_small"
                android:paddingHorizontal="@dimen/maya_padding_small"
                android:paddingVertical="@dimen/maya_padding_2x_small"
                app:layout_constraintStart_toEndOf="@+id/text_view_id_number"
                app:layout_constraintTop_toBottomOf="@+id/user_identification_separator_view"
                style="@style/CerebriBookSmallText"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/text_view_add_tin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_update_add_tin_label"
                android:drawablePadding="@dimen/maya_padding_6dp"
                android:drawableStart="@drawable/maya_ic_add_green"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/text_view_id_number"
                style="@style/CerebriBookTextBody.LinksAccent"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_tin"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
