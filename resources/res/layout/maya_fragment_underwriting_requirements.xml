                android:textColor="@color/maya_shades_of_grey_5"
                android:id="@+id/text_view_id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_label_id_number"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/user_identification_separator_view"
                style="@style/CerebriBookLongRead.Secondary200"/>
            <TextView
