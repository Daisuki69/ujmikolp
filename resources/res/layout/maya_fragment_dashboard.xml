<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_dashboard_toolbar_header_height"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/image_view_profile"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_large"
        android:src="@drawable/maya_ic_profile_default"
        android:layout_marginStart="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_top_toolbar"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/text_view_username"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/maya_dashboard_username_item_height"
        android:layout_marginLeft="@dimen/maya_margin_medium"
        android:layout_marginRight="@dimen/maya_margin_normal"
        android:maxLines="1"
        android:drawableRight="@drawable/maya_ic_chevron_right_green"
        android:layout_marginStart="@dimen/maya_margin_medium"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:drawableRightCompat="@drawable/maya_ic_chevron_right_green"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_toolbar"
        app:layout_constraintEnd_toStartOf="@+id/image_view_help_center"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/image_view_profile"
        app:layout_constraintTop_toTopOf="@+id/view_top_toolbar"
        app:layout_goneMarginLeft="@dimen/maya_margin_large"
        app:layout_goneMarginStart="@dimen/maya_margin_large"
        style="@style/JekoBoldH6.Primary"/>
    <com.paymaya.common.widget.MayaResizingTabLayout
        android:id="@+id/tab_layout_dashboard_v2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pma_dashboard_tab_layout_height"
        app:layout_constraintTop_toBottomOf="@+id/view_top_toolbar"
        style="@style/MayaTabLayoutDashboardTabs"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_dashboard_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tab_layout_dashboard, tab_layout_dashboard_v2"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier_dashboard_tabs"/>
    <ImageView
        android:id="@+id/image_view_help_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/maya_margin_14"
        android:src="@drawable/maya_ic_dashboard_help_center"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_toolbar"
        app:layout_constraintEnd_toStartOf="@+id/constraint_layout_inbox"
        app:layout_constraintTop_toTopOf="@+id/view_top_toolbar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_inbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_20"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_large"
        android:layout_marginEnd="@dimen/maya_margin_20"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_top_toolbar">
        <ImageView
            android:id="@+id/image_view_inbox"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/maya_ic_inbox_default"
            android:layout_marginEnd="@dimen/maya_margin_extra_small"
            app:layout_constraintEnd_toEndOf="parent"/>
        <include
            android:id="@+id/view_inbox_flutter_icon"
            layout="@layout/maya_view_inbox_flutter_icon"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
