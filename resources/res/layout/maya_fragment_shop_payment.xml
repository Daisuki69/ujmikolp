<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container_pma_fragment_shop_v3_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll_view_pma_fragment_shop_v3_payment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/next_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="@dimen/pma_padding_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal">
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/left_guideline_pma_fragment_shop_v3_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/right_guideline_pma_fragment_shop_v3_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
            <include
                android:id="@+id/detail_shop_item_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintStart_toStartOf="@+id/left_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/maya_view_detail_shop_item"/>
            <com.paymaya.mayaui.common.view.widget.MayaAutoCompleteInputLayout
                android:id="@+id/contact_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_hint_add_contact"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintRight_toRightOf="@+id/right_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintTop_toBottomOf="@+id/detail_shop_item_view"
                app:milLabel="@string/maya_label_contact"
                app:milPrimaryIconDrawable="0x7f08025a"
                app:milSecondaryIconDrawable="@drawable/maya_ic_reject_contact"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/fund_source_maya_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_hint_add_source"
                android:inputType="none"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintRight_toRightOf="@+id/right_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintTop_toBottomOf="@+id/contact_input_layout"
                app:milLabel="@string/maya_label_source"
                app:milPrimaryIconDrawable="0x7f080277"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/account_number_maya_input_layout"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintRight_toRightOf="@+id/right_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintTop_toBottomOf="@+id/fund_source_maya_input_layout"
                style="@style/MayaInputLayoutDefault"/>
            <dOYHB6.lN8Dz0.d8NVX3
                android:orientation="vertical"
                android:id="@+id/dynamic_fields_container_linear_layout"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintRight_toRightOf="@+id/right_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintTop_toBottomOf="@+id/account_number_maya_input_layout"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/optional_message_maya_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_hint_add_message"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintRight_toRightOf="@+id/right_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintTop_toBottomOf="@+id/dynamic_fields_container_linear_layout"
                app:milLabel="@string/maya_label_optional_message"
                style="@style/MayaInputLayoutDefault"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/include_signature_checkbox"
                android:layout_width="@dimen/maya_icon_size_length_default"
                android:layout_height="@dimen/maya_icon_size_length_default"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:button="?attr/mayaDrawable_CommonCheckboxSelector"
                app:buttonCompat="?attr/mayaDrawable_CommonCheckboxSelector"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintTop_toBottomOf="@+id/optional_message_maya_input_layout"/>
            <TextView
                android:id="@+id/include_signature_content_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:maxLines="3"
                android:minLines="1"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/maya_margin_small"
                android:layout_marginEnd="@dimen/maya_margin_small"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/include_signature_checkbox"
                app:layout_constraintTop_toTopOf="@+id/include_signature_checkbox"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/signature_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="include_signature_label_text_view_pma_shop_v3_fragment_payment,             include_signature_content_text_view,             include_signature_checkbox"/>
            <ImageView
                android:id="@+id/reminder_icon_image_view"
                android:padding="@dimen/maya_padding_2x_small"
                android:layout_width="@dimen/maya_icon_size_length_medium"
                android:layout_height="@dimen/maya_icon_size_length_medium"
                android:layout_marginTop="@dimen/maya_margin_20"
                android:src="@drawable/maya_ic_information_primary_small"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="@+id/left_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintTop_toBottomOf="@+id/include_signature_content_text_view"/>
            <TextView
                android:id="@+id/item_description_label_text_view_pma_shop_v3_fragment_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_item_description"
                android:layout_marginStart="@dimen/maya_margin_extra_small"
                app:layout_constraintBottom_toBottomOf="@+id/reminder_icon_image_view"
                app:layout_constraintStart_toEndOf="@+id/reminder_icon_image_view"
                app:layout_constraintTop_toTopOf="@+id/reminder_icon_image_view"
                style="@style/CerebriMediumSmallText.Primary"/>
            <TextView
                android:id="@+id/item_description_content_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/right_guideline_pma_fragment_shop_v3_payment"
                app:layout_constraintStart_toStartOf="@+id/item_description_label_text_view_pma_shop_v3_fragment_payment"
                app:layout_constraintTop_toBottomOf="@+id/item_description_label_text_view_pma_shop_v3_fragment_payment"
                style="@style/CerebriMediumSmallText.Tertiary"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_normal"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_normal"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:text="@string/maya_label_button_next"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
