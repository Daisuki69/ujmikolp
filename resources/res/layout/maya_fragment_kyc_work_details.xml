<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ghost_white"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:scrollbarThumbVertical="@drawable/maya_bg_scrollbar_grey_quaternary"
        android:scrollbarStyle="outsideOverlay"
        android:id="@+id/nested_scroll_view_form_container"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/layout_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <dOYHB6.lN8Dz0.d8NVX3
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_extra_normal"
                android:layout_marginRight="@dimen/maya_margin_extra_normal"
                android:text="@string/maya_kyc_work_details_title"
                android:layout_marginHorizontal="@dimen/maya_margin_extra_normal"
                style="@style/CerebriBoldH5.Primary"/>
            <TextView
                android:id="@+id/text_view_sub_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_extra_normal"
                android:layout_marginRight="@dimen/maya_margin_extra_normal"
                android:text="@string/maya_kyc_work_details_subtitle"
                android:layout_marginHorizontal="@dimen/maya_margin_extra_normal"
                style="@style/CerebriBookLongRead.BlackOpacity"/>
            <View
                android:background="@color/cultured_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/maya_kyc_divider_size"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:layout_marginBottom="@dimen/maya_margin_large"
                android:layout_marginVertical="@dimen/maya_margin_large"/>
            <com.paymaya.mayaui.kyczoloz.view.widget.KycMayaDropDown
                android:id="@+id/maya_input_nature_of_work"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/maya_margin_extra_normal"
                android:layout_marginRight="@dimen/maya_margin_extra_normal"
                android:layout_marginBottom="@dimen/maya_margin_medium"
                android:hint="@string/maya_kyc_work_details_nature_of_work_placeholder"
                android:layout_marginHorizontal="@dimen/maya_margin_extra_normal"
                app:kddAutoHideWarning="false"
                app:kddLabel="@string/maya_kyc_work_details_nature_of_work_label"
                app:kddShowError="true"
                app:kddShowWarning="false"
                style="@style/KycMayaDropDown"/>
            <com.paymaya.mayaui.kyczoloz.view.widget.KycMayaDropDown
                android:enabled="false"
                android:id="@+id/maya_input_job_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/maya_margin_extra_normal"
                android:layout_marginTop="@dimen/maya_margin_medium"
                android:layout_marginRight="@dimen/maya_margin_extra_normal"
                android:layout_marginBottom="@dimen/maya_margin_medium"
                android:hint="@string/maya_kyc_work_details_job_title_placeholder"
                android:layout_marginHorizontal="@dimen/maya_margin_extra_normal"
                android:layout_marginVertical="@dimen/maya_margin_medium"
                app:kddAutoHideWarning="false"
                app:kddLabel="@string/maya_kyc_work_details_job_title_label"
                app:kddShowError="true"
                app:kddShowWarning="false"
                style="@style/KycMayaDropDown"/>
            <com.paymaya.mayaui.kyczoloz.view.widget.KycMayaDropDown
                android:id="@+id/maya_input_source_of_income"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/maya_margin_extra_normal"
                android:layout_marginTop="@dimen/maya_margin_medium"
                android:layout_marginRight="@dimen/maya_margin_extra_normal"
                android:layout_marginBottom="@dimen/maya_margin_medium"
                android:hint="@string/maya_kyc_work_details_source_of_income_placeholder"
                android:layout_marginHorizontal="@dimen/maya_margin_extra_normal"
                android:layout_marginVertical="@dimen/maya_margin_medium"
                app:kddAutoHideWarning="false"
                app:kddLabel="@string/maya_kyc_work_details_source_of_income_label"
                app:kddShowError="true"
                app:kddShowWarning="false"
                style="@style/KycMayaDropDown"/>
            <com.paymaya.mayaui.kyczoloz.view.widget.KycMayaInputLayout
                android:id="@+id/maya_input_name_of_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_2x_small"
                android:layout_marginTop="@dimen/maya_margin_medium"
                android:layout_marginRight="@dimen/maya_margin_2x_small"
                android:layout_marginBottom="@dimen/maya_margin_medium"
                android:hint="@string/maya_kyc_work_details_company_name_placeholder"
                android:inputType="textCapWords"
                android:layout_marginHorizontal="@dimen/maya_margin_2x_small"
                android:layout_marginVertical="@dimen/maya_margin_medium"
                app:kilDisableCopyPaste="true"
                app:kilLabel="@string/maya_kyc_work_details_company_name_label"
                style="@style/KycMayaInputLayout"/>
            <dOYHB6.lN8Dz0.d8NVX3
                android:orientation="vertical"
                android:id="@+id/container_linearlayout_question"
                android:background="@color/bright_gray"
                android:padding="@dimen/maya_margin_extra_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small">
                <dOYHB6.lN8Dz0.d8NVX3
                    android:orientation="vertical"
                    android:id="@+id/container_dynamic_questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_constraintlayout_dnfbp_warning"
                    android:background="@drawable/maya_background_card_white_with_border"
                    android:padding="@dimen/maya_margin_normal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/warning_icon"
                        android:layout_width="@dimen/maya_icon_size_length_small"
                        android:layout_height="@dimen/maya_icon_size_length_small"
                        android:src="@drawable/maya_ic_information_error_badge"
                        android:contentDescription="@null"
                        android:layout_marginEnd="@dimen/maya_margin_2x_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/pumpkin_orange"/>
                    <com.paymaya.common.widget.HtmlTextView
                        android:textColor="@color/pumpkin_orange"
                        android:textColorLink="@color/pumpkin_orange"
                        android:id="@+id/dnfbp_warning_text_view"
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/maya_margin_medium"
                        app:htmlUnderline="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/warning_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/CerebriBookLongRead.Orange"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </dOYHB6.lN8Dz0.d8NVX3>
        </dOYHB6.lN8Dz0.d8NVX3>
    </androidx.core.widget.NestedScrollView>
    <include
        android:id="@+id/layout_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/maya_bottom_button_navigation"/>
</androidx.constraintlayout.widget.ConstraintLayout>
