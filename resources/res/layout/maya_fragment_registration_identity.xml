<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout"
    android:background="?attr/mayaColorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollable_nested_scroll_view"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/continue_button"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingLeft="@dimen/pma_padding_large"
            android:paddingTop="@dimen/pma_padding_extra_large"
            android:paddingRight="@dimen/pma_padding_large"
            android:paddingBottom="@dimen/pma_padding_extra_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.paymaya.mayaui.common.view.widget.MultiColorTextView
                android:id="@+id/title_header_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_extra_large"
                android:text="@string/maya_label_registration_identity_title_header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:mctvSecondaryTextColor="?attr/mayaColorAccent"
                app:mctvSecondaryTextHighlightSpan="@string/maya_label_registration_identity_title_header_highlight"
                style="@style/JekoBoldH2.Primary"/>
            <TextView
                android:gravity="center"
                android:id="@+id/country_phone_prefix_text_view"
                android:background="@drawable/maya_bg_selector_otp_digit_field_default"
                android:padding="@dimen/pma_padding_20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/pma_label_philippines_phone_prefix"
                android:drawablePadding="@dimen/pma_padding_extra_small"
                app:drawableLeftCompat="0x7f080218"
                app:drawableStartCompat="0x7f080218"
                app:layout_constraintBottom_toBottomOf="@+id/mobile_number_maya_input_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/mobile_number_maya_input_layout"
                app:layout_constraintTop_toTopOf="@+id/mobile_number_maya_input_layout"
                style="@style/JekoSemiBoldTextBody.Primary"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/mobile_number_maya_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pma_margin_small"
                android:layout_marginTop="@dimen/pma_margin_large"
                android:hint="@string/maya_hint_registration_identity_phone_number"
                android:maxLines="1"
                android:maxLength="10"
                android:inputType="number"
                android:imeOptions="actionNext"
                app:layout_constraintLeft_toRightOf="@+id/country_phone_prefix_text_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_header_text_view"
                app:milShowHelperError="false"
                app:milShowLabel="false"
                style="@style/MayaInputLayoutDefault"/>
            <TextView
                android:gravity="center"
                android:id="@+id/mobile_number_helper_error_text_view"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pma_margin_20dp"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/maya_error_registration_identity_enter_valid_mobile_number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mobile_number_maya_input_layout"
                style="@style/JekoSemiBoldSmallText.Error"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/password_maya_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_medium"
                android:hint="@string/maya_hint_registration_identity_enter_password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@+id/mobile_number_helper_error_text_view"
                app:milHelperErrorText="@string/maya_format_missing_field_is_required"
                app:milLabel="@string/maya_label_registration_identity_label_password"
                app:milPrimaryIconDrawable="?attr/mayaDrawable_RegistrationMaskPasswordHidden"
                app:milSecondaryIconDrawable="?attr/mayaDrawable_CommonInformationPrimaryBadge"
                style="@style/MayaInputLayoutDefault"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:enabled="false"
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_large"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/pma_margin_large"
        android:layout_marginBottom="@dimen/pma_margin_normal"
        android:text="@string/pma_label_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollable_nested_scroll_view"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginTop="@dimen/maya_margin_small"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
