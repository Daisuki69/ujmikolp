<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_view_group_pma_view_application_details_parental_consent"
    android:paddingBottom="@dimen/pma_padding_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_pma_view_application_details_parental_consent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.45"/>
    <TextView
        android:id="@+id/parental_consent_label_text_view_pma_view_application_details_parental_consent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/pma_margin_small"
        android:text="@string/pma_label_parental_consent"
        android:layout_marginEnd="@dimen/pma_margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline_pma_view_application_details_parental_consent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/BodyDarkLight"/>
    <ImageView
        android:id="@+id/parental_consent_image_view_pma_view_application_details_parental_consent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_small"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:maxWidth="@dimen/pma_ekyc_photo_preview_max_width"
        android:maxHeight="@dimen/pma_ekyc_photo_preview_max_height"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_pma_view_application_details_parental_consent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/parental_consent_label_text_view_pma_view_application_details_parental_consent"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/parental_consent_barrier_pma_view_application_details_parental_consent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="parental_consent_label_text_view_pma_view_application_details_parental_consent,             parental_consent_image_view_pma_view_application_details_parental_consent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
