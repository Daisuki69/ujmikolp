<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/mayaContentViewInformationBackgroundColorSecondary"
        app:cardCornerRadius="@dimen/maya_radius_16dp"
        app:cardElevation="@dimen/maya_elevation_flat"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingLeft="@dimen/maya_padding_normal"
            android:paddingTop="@dimen/maya_padding_20dp"
            android:paddingRight="@dimen/maya_padding_normal"
            android:paddingBottom="@dimen/maya_padding_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/maya_padding_normal"
            android:paddingVertical="@dimen/maya_padding_20dp">
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline_top_section_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>
            <TextView
                android:id="@+id/text_view_source_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_small"
                android:text="@string/maya_label_source"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_source_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_payment_method_my_wallet"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_source_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                style="@style/JekoSemiBoldLink.Primary"/>
            <TextView
                android:id="@+id/text_view_source_mobile_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                app:layout_constraintTop_toBottomOf="@+id/text_view_source_name"
                style="@style/JekoSemiBoldLink.Tertiary"/>
            <View
                android:id="@+id/divider_view_source"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_source_mobile_number"
                style="@style/MayaListItemDivider"/>
            <TextView
                android:id="@+id/text_view_destination_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_destination"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_view_source"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_destination_bank_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_destination_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                style="@style/JekoSemiBoldLink.Primary"/>
            <TextView
                android:id="@+id/text_view_destination_recipient_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                app:layout_constraintTop_toBottomOf="@+id/text_view_destination_bank_name"
                style="@style/JekoSemiBoldLink.Primary"/>
            <TextView
                android:id="@+id/text_view_destination_recipient_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                app:layout_constraintTop_toBottomOf="@+id/text_view_destination_recipient_name"
                style="@style/JekoSemiBoldLink.Tertiary"/>
            <View
                android:id="@+id/divider_view_destination"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_destination_recipient_account"
                style="@style/MayaListItemDivider"/>
            <TextView
                android:id="@+id/text_view_purpose_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_purpose"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_view_destination"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_purpose_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_purpose_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                style="@style/JekoSemiBoldLink.Primary"/>
            <View
                android:id="@+id/divider_view_purpose"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_purpose_text"
                style="@style/MayaListItemDivider"/>
            <TextView
                android:id="@+id/text_view_transaction_details_label"
                android:paddingTop="@dimen/maya_padding_small"
                android:paddingBottom="@dimen/maya_padding_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_transaction_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                app:layout_constraintTop_toBottomOf="@+id/divider_view_purpose"
                style="@style/JekoSemiBoldSmallText.Primary"/>
            <ImageView
                android:id="@+id/image_view_transaction_details_arrow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/maya_ic_chevron_down_primary"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_transaction_details_label"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_view_transaction_details_label"
                app:tint="?attr/mayaButtonPrimaryDefaultColor"/>
            <View
                android:id="@+id/selectable_view_transaction_details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_transaction_details_label"
                app:layout_constraintTop_toTopOf="@+id/text_view_transaction_details_label"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_transaction_details_label"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="text_view_transaction_details_label,                 image_view_transaction_details_arrow,                 selectable_view_transaction_details"/>
            <TextView
                android:id="@+id/text_view_transfer_fee_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_transaction_fee"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_transaction_details_label"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_transfer_fee_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_transfer_fee_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                style="@style/JekoSemiBoldLink.Primary"/>
            <View
                android:id="@+id/divider_view_transfer_fee"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_transfer_fee_text"
                style="@style/MayaListItemDivider"/>
            <TextView
                android:id="@+id/text_view_gateway_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_gateway"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_view_transfer_fee"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <ImageView
                android:id="@+id/image_view_gateway_logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/maya_ic_instapay_logo"
                android:scaleType="fitStart"
                android:layout_marginStart="@dimen/maya_margin_small"
                android:layout_marginEnd="@dimen/maya_margin_small"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_gateway_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                app:layout_constraintTop_toTopOf="@+id/text_view_gateway_label"
                style="@style/JekoSemiBoldLink.Primary"/>
            <View
                android:id="@+id/divider_view_gateway"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_gateway_logo"
                style="@style/MayaListItemDivider"/>
            <TextView
                android:id="@+id/text_view_trace_number_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_trace_number"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_view_gateway"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_trace_number_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_trace_number_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                style="@style/JekoSemiBoldLink.Primary"/>
            <View
                android:id="@+id/divider_view_trace_number"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_trace_number_text"
                style="@style/MayaListItemDivider"/>
            <TextView
                android:id="@+id/text_view_reference_id_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_receipt_reference_id"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_view_trace_number"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_reference_id_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_reference_id_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                style="@style/JekoSemiBoldLink.Primary"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_trace_number"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="text_view_trace_number_text,                 text_view_trace_number_label,                 divider_view_trace_number"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_transaction_details"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="text_view_transfer_fee_label,                 text_view_reference_id_label,                 text_view_reference_id_text,                 text_view_transfer_fee_text,                 divider_view_gateway,                 text_view_gateway_label,                 image_view_gateway_logo,                 divider_view_transfer_fee"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
