<?xml version="1.0" encoding="utf-8"?>
<dOYHB6.lN8Dz0.gDiks7 xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_title_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:text="@string/maya_label_cash_in_via_western_union"
            android:layout_marginStart="@dimen/pma_margin_large"
            android:layout_marginEnd="@dimen/pma_margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldH4.Primary"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_layout_mtcn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:hint="@string/maya_label_wu_mtcn_hint"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="number"
            android:layout_marginStart="@dimen/pma_margin_large"
            android:layout_marginEnd="@dimen/pma_margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title_header"
            app:milHelperErrorAppearance="@style/JekoSemiBoldSmallText.Error"
            app:milHelperErrorText="@string/maya_label_wu_invalid_mtcn"
            app:milHelperInfoAppearance="@style/JekoSemiBoldSmallText.Tertiary"
            app:milLabel="@string/maya_label_wu_mtcn_label"
            app:milPrimaryIconDrawable="@drawable/maya_ic_information_error_badge"
            app:milShowHelperError="false"
            app:milShowHelperInfo="false"
            app:milShowPrimaryIcon="false"/>
        <com.paymaya.common.widget.HtmlTextView
            android:gravity="center_vertical"
            android:id="@+id/text_view_whats_mtcn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:text="@string/maya_label_wu_learn_more"
            android:drawablePadding="@dimen/maya_padding_small"
            android:drawableStart="@drawable/maya_ic_information"
            android:layout_marginStart="@dimen/pma_margin_large"
            android:layout_marginEnd="@dimen/pma_margin_large"
            app:htmlUnderline="false"
            app:layout_constraintTop_toBottomOf="@+id/maya_input_layout_mtcn"
            style="@style/JekoSemiBoldSmallText.Tertiary"/>
        <Button
            android:enabled="false"
            android:id="@+id/button_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_large"
            android:layout_marginTop="@dimen/pma_margin_small"
            android:layout_marginRight="@dimen/pma_margin_large"
            android:layout_marginBottom="@dimen/pma_margin_normal"
            android:text="@string/pma_label_continue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_whats_mtcn"
            app:layout_constraintVertical_bias="1"
            style="@style/MayaButtonPrimaryLarge"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</dOYHB6.lN8Dz0.gDiks7>
