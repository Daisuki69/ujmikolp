<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout_pma_view_shop_v3_home_section_carousel"
    android:paddingTop="@dimen/maya_padding_large"
    android:paddingBottom="@dimen/maya_padding_extra_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/shop_home_title_text_view"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginStart="@dimen/maya_margin_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoOverlineBig.Tertiary"/>
    <include
        android:id="@+id/shop_home_loading_title"
        android:layout_width="@dimen/maya_shop_loading_title_width"
        android:layout_height="@dimen/maya_shop_loading_title_height"
        android:layout_marginStart="@dimen/maya_margin_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/maya_view_shimmer_rounded_2"/>
    <TextView
        android:id="@+id/shop_home_loading_view_all_text_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_see_all"
        android:layout_marginEnd="@dimen/maya_margin_20"
        app:layout_constraintBottom_toBottomOf="@+id/shop_home_title_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shop_home_title_text_view"
        style="@style/JekoBoldLink.Accent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/shop_home_loading_carousel_items_recycler_view"
        android:paddingBottom="@dimen/maya_padding_extra_small"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/shop_home_title_text_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>
