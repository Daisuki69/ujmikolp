<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/top_sheet_line_view"
        android:background="@drawable/maya_bg_default_bottom_dialog_sheet"
        android:layout_width="@dimen/maya_bottom_sheet_line_width"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/sheet_background_view"
        android:background="@drawable/maya_bg_default_bottom_dialog_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_sheet_line_view"
        app:layout_constraintVertical_bias="0"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_52"
        android:text="@string/maya_label_billing_end_date_selection_title"
        app:flow_horizontalBias="0"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="@+id/sheet_background_view"
        style="@style/JekoBoldH5.Primary"/>
    <View
        android:id="@+id/billing_end_date_selection_view"
        android:background="@drawable/maya_bg_color_background_secondary_rounded"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="@+id/billing_end_date_bottom_space"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view"/>
    <View
        android:id="@+id/day_background_selection_view"
        android:background="@drawable/maya_bg_number_picker_selection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/day_label_text_view"
        app:layout_constraintEnd_toEndOf="@+id/day_number_picker"
        app:layout_constraintStart_toStartOf="@+id/day_number_picker"
        app:layout_constraintTop_toTopOf="@+id/day_label_text_view"/>
    <dOYHB6.lN8Dz0.g4VOp3
        android:theme="@style/MayaNumberPicker"
        android:id="@+id/day_number_picker"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_radius_16dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginRight="@dimen/maya_radius_16dp"
        android:layout_marginHorizontal="@dimen/maya_radius_16dp"
        app:layout_constraintEnd_toEndOf="@+id/billing_end_date_selection_view"
        app:layout_constraintStart_toStartOf="@+id/billing_end_date_selection_view"
        app:layout_constraintTop_toTopOf="@+id/billing_end_date_selection_view"/>
    <TextView
        android:id="@+id/day_label_text_view"
        android:paddingTop="@dimen/maya_padding_extra_small"
        android:paddingBottom="@dimen/maya_padding_extra_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_billing_end_date_day"
        android:layout_marginEnd="@dimen/maya_margin_84"
        android:paddingVertical="@dimen/maya_padding_extra_small"
        app:layout_constraintBottom_toBottomOf="@+id/day_number_picker"
        app:layout_constraintEnd_toEndOf="@+id/day_number_picker"
        app:layout_constraintStart_toStartOf="@+id/day_number_picker"
        app:layout_constraintTop_toTopOf="@+id/day_number_picker"
        style="@style/JekoBoldH5.Primary"/>
    <TextView
        android:id="@+id/reminder_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_normal"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginRight="@dimen/maya_margin_normal"
        android:text="@string/maya_label_billing_end_date_selection_reminder"
        android:layout_marginHorizontal="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/billing_end_date_selection_view"
        app:layout_constraintStart_toStartOf="@+id/billing_end_date_selection_view"
        app:layout_constraintTop_toBottomOf="@+id/day_number_picker"
        style="@style/JekoSemiBoldSmallText.Primary"/>
    <Space
        android:id="@+id/billing_end_date_bottom_space"
        android:layout_width="0dp"
        android:layout_height="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/billing_end_date_selection_view"
        app:layout_constraintStart_toStartOf="@+id/billing_end_date_selection_view"
        app:layout_constraintTop_toBottomOf="@+id/reminder_text_view"/>
    <Button
        android:id="@+id/submit_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_52"
        android:text="@string/maya_label_billing_end_date_selection_submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/billing_end_date_bottom_space"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
