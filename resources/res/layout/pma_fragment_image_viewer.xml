<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_pma_fragment_image_viewer"
    android:background="@color/midnight_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_image_view_pma_fragment_image_viewer"
        android:background="@drawable/pma_selectable_background_back_button"
        android:padding="@dimen/pma_padding_normal"
        android:layout_width="@dimen/pma_back_button_size"
        android:layout_height="@dimen/pma_back_button_size"
        android:layout_marginTop="@dimen/pma_margin_extra_large"
        android:src="@drawable/pma_ic_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/image_view_pma_fragment_image_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pma_margin_extra_large"
        android:scaleType="fitCenter"
        android:transitionName="@string/pma_transition_tap_to_zoom"/>
</androidx.constraintlayout.widget.ConstraintLayout>
