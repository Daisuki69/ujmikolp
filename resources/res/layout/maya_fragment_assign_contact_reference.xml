<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view_container"
        android:paddingLeft="@dimen/maya_padding_large"
        android:paddingRight="@dimen/maya_padding_large"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/continue_button"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_view_container"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/assign_contact_reference_header_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_contact_reference_two_third_title"
                app:layout_constraintEnd_toEndOf="@+id/assign_contact_reference_description_text_view"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoBoldH4.Primary"/>
            <TextView
                android:id="@+id/assign_contact_reference_description_text_view"
                android:paddingTop="@dimen/maya_margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_contact_reference_two_third_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/assign_contact_reference_header_text_view"
                style="@style/JekoSemiBoldLongRead.Primary"/>
            <Button
                android:id="@+id/button_learn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_label_contact_reference_two_third_learn_more"
                app:layout_constraintBottom_toTopOf="@+id/space"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/assign_contact_reference_description_text_view"
                app:layout_constraintVertical_bias="0"
                style="@style/MayaButtonSecondaryMedium"/>
            <View
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="@dimen/maya_credit_header_space_normal"
                app:layout_constraintBottom_toTopOf="@+id/mobile_number_maya_input_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_learn_more"/>
            <com.paymaya.mayaui.common.view.widget.MayaAutoCompleteInputLayout
                android:id="@+id/mobile_number_maya_input_layout"
                android:paddingBottom="@dimen/maya_padding_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/maya_label_contact_reference_two_third_input_field_mobile_number_hint"
                android:lines="1"
                android:completionThreshold="1"
                android:inputType="none"
                android:imeOptions="actionNext"
                app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/space"
                app:milHelperInfoIconDrawable="@drawable/maya_ic_information_primary_small"
                app:milLabel="@string/maya_label_contact_reference_two_third_input_field_mobile_number_title"
                app:milPrimaryIconDrawable="?attr/mayaDrawable_sendMoneyContactIcon"
                app:milShowHelperInfo="false"
                app:milShowSecondaryIcon="false"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/first_name_maya_input_layout"
                android:paddingBottom="@dimen/maya_padding_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/maya_label_contact_reference_two_third_input_field_first_name_hint"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@+id/mobile_number_maya_input_layout"
                app:milLabel="@string/maya_label_contact_reference_two_third_input_field_first_name_title"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/last_name_maya_input_layout"
                android:paddingBottom="@dimen/maya_padding_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/maya_label_contact_reference_two_third_input_field_last_name_hint"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@+id/first_name_maya_input_layout"
                app:milLabel="@string/maya_label_contact_reference_two_third_input_field_last_name_title"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaAutoCompleteInputLayout
                android:id="@+id/contact_relationship_maya_input_layout"
                android:paddingBottom="@dimen/maya_padding_small"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/maya_label_contact_reference_two_third_input_field_contact_relationship_hint"
                android:lines="1"
                android:completionThreshold="1"
                android:inputType="none"
                android:imeOptions="actionNext"
                app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/last_name_maya_input_layout"
                app:milHelperErrorText="@string/maya_format_missing_field_is_required"
                app:milLabel="@string/maya_label_contact_reference_two_third_input_field_contact_relationship_title"
                app:milShowHelperInfo="false"
                app:milShowSecondaryIcon="false"
                style="@style/MayaInputLayoutDefault"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_contact_reference_consent_container"
                android:background="@drawable/maya_bg_content_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/maya_margin_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_relationship_maya_input_layout">
                <ImageView
                    android:id="@+id/text_view_contact_reference_consent_icon"
                    android:layout_width="@dimen/maya_credit_bank_information_size_icon"
                    android:layout_height="@dimen/maya_credit_bank_information_size_icon"
                    android:src="@drawable/maya_ic_information"
                    android:layout_marginStart="@dimen/maya_margin_normal"
                    android:layout_marginEnd="@dimen/maya_margin_extra_small"
                    app:layout_constraintEnd_toStartOf="@+id/text_view_bank_information_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_view_bank_information_1"
                    app:layout_constraintVertical_bias="0.4"/>
                <com.paymaya.common.widget.HtmlTextView
                    android:textColor="@color/black"
                    android:id="@+id/text_view_bank_information_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maya_margin_normal"
                    android:text="@string/maya_label_credit_assign_contact_ref_information_1"
                    android:layout_marginEnd="@dimen/maya_margin_normal"
                    app:htmlUnderline="false"
                    app:layout_constraintBottom_toTopOf="@+id/text_view_bank_information_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_view_contact_reference_consent_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/CerebriBookSmallText.Secondary200"/>
                <com.paymaya.common.widget.HtmlTextView
                    android:id="@+id/text_view_bank_information_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maya_margin_small"
                    android:layout_marginBottom="@dimen/maya_margin_medium"
                    android:text="@string/maya_label_credit_assign_contact_ref_information_2"
                    android:layout_marginEnd="@dimen/maya_margin_normal"
                    app:htmlUnderline="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/text_view_bank_information_1"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_bank_information_1"
                    style="@style/CerebriBookSmallText.Secondary200"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:enabled="false"
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:layout_marginBottom="@dimen/maya_margin_large"
                android:text="@string/maya_label_continue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint_layout_contact_reference_consent_container"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/MayaButtonPrimaryLarge"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
