<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/credit_homepage_revamp_bill_section"
    android:background="@drawable/maya_bg_content_border_dashboard"
    android:padding="@dimen/maya_padding_normal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/MayaContentViewDivider">
    <TextView
        android:id="@+id/text_view_outstanding_balance_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_credit_revamp_outstanding_balance_title"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/maya_margin_extra_small"
        app:layout_constraintBottom_toTopOf="@+id/text_view_outstanding_balance_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/text_view_outstanding_balance_value"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoBoldSubline.Primary"/>
    <TextView
        android:id="@+id/text_view_outstanding_balance_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:text="@string/maya_label_credit_revamp_outstanding_balance_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_outstanding_balance_title"
        style="@style/CerebriBookLongRead.Secondary200"/>
    <TextView
        android:id="@+id/text_view_due_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_latest_bill_period_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/text_view_latest_bill_period_value"
        app:layout_constraintTop_toTopOf="@+id/text_view_latest_bill_period_value"
        style="@style/CerebriBookSmallText.Secondary200"/>
    <TextView
        android:id="@+id/text_view_outstanding_balance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:layout_marginStart="@dimen/maya_margin_extra_small"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_outstanding_balance_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/text_view_outstanding_balance_title"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoBoldSubline.Primary"/>
    <TextView
        android:id="@+id/text_view_outstanding_balance_value_masked"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_masked_amount_with_currency"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_outstanding_balance_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/text_view_outstanding_balance_title"
        app:layout_constraintTop_toTopOf="@+id/text_view_outstanding_balance_title"
        style="@style/CerebriBoldLongRead.Secondary200"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="text_view_outstanding_balance_value,text_view_outstanding_balance_value_masked"/>
    <Button
        android:id="@+id/button_pay_now"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:text="@string/maya_label_previous_billing_cycle_pay_now_button_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_outstanding_balance_subtitle"
        style="@style/MayaButtonPrimaryMedium"/>
    <TextView
        android:id="@+id/text_view_for_all_billing_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:text="@string/maya_label_previous_billing_cycle_short_text_under_pay_now_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_pay_now"
        style="@style/CerebriBookLongRead.Secondary200"/>
    <View
        android:id="@+id/view_divider"
        android:background="@color/bright_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_elevation_1dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintTop_toBottomOf="@+id/text_view_for_all_billing_cycle"/>
    <TextView
        android:id="@+id/text_view_latest_bill_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:text="@string/maya_label_credit_latest_bill_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"
        style="@style/JekoBoldSubline.Primary"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_latest_bill_info"
        android:layout_width="@dimen/maya_icon_size_length_medium"
        android:layout_height="0dp"
        android:src="@drawable/maya_ic_information_outline_shades_of_grey_4"
        android:layout_marginStart="@dimen/maya_margin_small"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_latest_bill_title"
        app:layout_constraintStart_toEndOf="@+id/text_view_latest_bill_title"
        app:layout_constraintTop_toTopOf="@+id/text_view_latest_bill_title"
        app:layout_constraintVertical_bias="0"/>
    <TextView
        android:id="@+id/text_view_latest_bill_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_latest_bill_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/text_view_latest_bill_title"
        app:layout_constraintTop_toTopOf="@+id/text_view_latest_bill_title"
        style="@style/JekoBoldSubline.Primary"/>
    <TextView
        android:id="@+id/text_view_latest_bill_amount_masked"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_masked_amount_with_currency"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_latest_bill_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/text_view_latest_bill_title"
        app:layout_constraintTop_toTopOf="@+id/text_view_latest_bill_title"
        style="@style/JekoBoldH6.Primary"/>
    <TextView
        android:id="@+id/text_view_latest_bill_period_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/text_view_latest_bill_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_latest_bill_title"
        style="@style/CerebriBookSmallText.Secondary200"/>
    <Button
        android:id="@+id/button_view_statement"
        android:layout_width="0dp"
        android:layout_height="@dimen/maya_button_height_small"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginBottom="@dimen/maya_margin_small"
        android:text="@string/maya_label_view_statement"
        android:stateListAnimator="@animator/maya_remove_elevation_animator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_pay_this_bill"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/text_view_latest_bill_period_value"
        app:layout_constraintTop_toBottomOf="@+id/text_view_latest_bill_period_value"
        style="@style/MayaButtonWhiteBackgroundGreyStroke"/>
    <Button
        android:id="@+id/button_pay_this_bill"
        android:layout_width="0dp"
        android:layout_height="@dimen/maya_button_height_small"
        android:text="@string/maya_label_pay_this_bill"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:stateListAnimator="@animator/maya_remove_elevation_animator"
        app:layout_constraintBottom_toBottomOf="@+id/button_view_statement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_view_statement"
        app:layout_constraintTop_toTopOf="@+id/button_view_statement"
        style="@style/MayaButtonWhiteBackgroundGreyStroke"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_credit_billing_revamp_latest_bill"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="view_divider,         text_view_latest_bill_title,         image_view_latest_bill_info,         text_view_latest_bill_period_value,         text_view_due_date_value,         button_view_statement,         button_pay_this_bill"/>
</androidx.constraintlayout.widget.ConstraintLayout>
