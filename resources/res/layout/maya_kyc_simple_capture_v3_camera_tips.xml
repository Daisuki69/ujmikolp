<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/maya_margin_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/text_view_tips_bullet"
        android:background="@drawable/maya_alpha80_white_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/text_view"
        app:layout_constraintHeight_min="@dimen/maya_margin_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_min="@dimen/maya_margin_20"
        style="@style/CerebriMediumLongRead"/>
    <TextView
        android:textColor="@color/white_80_alpha"
        android:id="@+id/text_view_tips_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is a bullet point text."
        android:layout_marginStart="@dimen/maya_margin_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/text_view_tips_bullet"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CerebriMediumLongRead"/>
</androidx.constraintlayout.widget.ConstraintLayout>
