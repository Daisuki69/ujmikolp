<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maya_toolbar_view"
    android:background="?attr/mayaColorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:contentInsetStartWithNavigation="@dimen/pma_padding_0dp"
    app:navigationIcon="@drawable/maya_ic_navigation_back"
    app:subtitleTextAppearance="@style/CerebriBookLongRead.Secondary"
    app:titleTextAppearance="@style/JekoBoldTextBody.Primary">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_content_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/toolbar_title_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/right_inset_space"
            style="@style/JekoBoldTextBody.Primary"/>
        <ProgressBar
            android:id="@+id/percentage_progress_bar"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/pma_margin_48dp"
            android:layout_marginRight="@dimen/pma_margin_48dp"
            android:progress="0"
            android:indeterminate="false"
            android:indeterminateDrawable="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/right_inset_space"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/MayaProgressBarHorizontalNormal"/>
        <TextView
            android:gravity="center"
            android:id="@+id/steps_indicator_text_view"
            android:visibility="gone"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldLink.Primary"/>
        <View
            android:id="@+id/right_inset_space"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>
