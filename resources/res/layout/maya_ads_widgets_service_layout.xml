<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/container_view_ads"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_icon_ads"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_view_icon_ads"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_icon_ads"
        android:paddingTop="@dimen/maya_padding_18dp"
        android:paddingBottom="@dimen/maya_padding_18dp"
        android:layout_width="@dimen/maya_icon_size_length_default"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_service_ads"
        android:tint="?attr/mayaColorIconTint"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:paddingVertical="@dimen/maya_padding_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/maya_ic_service_ads"
        app:tint="?attr/mayaColorIconTint"/>
    <TextView
        android:id="@+id/text_view_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_ads_maya"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_icon_ads"
        app:layout_constraintLeft_toRightOf="@+id/image_view_icon_ads"
        app:layout_constraintTop_toTopOf="@+id/image_view_icon_ads"
        style="@style/JekoSemiBoldTextBody.Primary"/>
    <ImageView
        android:id="@+id/image_view_arrow_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_service_help_grey_arrow"
        android:layout_marginEnd="@dimen/maya_margin_medium"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_icon_ads"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_view_icon_ads"/>
</androidx.constraintlayout.widget.ConstraintLayout>
