<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_view_title_cashless_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:text="@string/maya_label_travel_cashless_travel"
            android:textAllCaps="true"
            android:layout_marginStart="@dimen/maya_margin_large"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_travel_services"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/JekoOverlineBig.Tertiary"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_travel_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:layout_marginStart="@dimen/maya_margin_20"
            android:layout_marginEnd="@dimen/maya_margin_20"
            app:layout_constraintBottom_toTopOf="@+id/card_view_beep_card_banner"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title_cashless_travel"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_beep_card_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:layout_marginStart="@dimen/maya_margin_large"
            android:layout_marginEnd="@dimen/maya_margin_large"
            app:cardCornerRadius="@dimen/maya_radius_16dp"
            app:cardElevation="@dimen/maya_elevation_2dp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_title_featured_partners"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_travel_services">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/maya_primary_white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@drawable/maya_bg_beep_card_banner_cta"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/text_view_cta"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/text_view_banner_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maya_margin_large"
                    android:text="@string/maya_label_travel_beep_card_banner_title"
                    android:layout_marginStart="@dimen/maya_margin_24"
                    android:layout_marginEnd="@dimen/maya_margin_normal"
                    app:layout_constraintEnd_toStartOf="@+id/image_view_banner_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/JekoBoldSubline.Primary"/>
                <TextView
                    android:id="@+id/text_view_banner_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maya_margin_small"
                    android:layout_marginBottom="@dimen/maya_margin_20"
                    android:text="@string/maya_label_travel_beep_card_banner_description"
                    android:layout_marginStart="@dimen/maya_margin_24"
                    android:layout_marginEnd="@dimen/maya_margin_large"
                    app:layout_constraintBottom_toTopOf="@+id/barrier_cta"
                    app:layout_constraintEnd_toStartOf="@+id/image_view_banner_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_banner_title"
                    style="@style/JekoRegularSmallText.Primary"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_banner_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maya_margin_small"
                    android:layout_marginBottom="@dimen/maya_margin_small"
                    android:src="0x7f080291"
                    android:layout_marginEnd="@dimen/maya_margin_24"
                    app:layout_constraintBottom_toTopOf="@+id/barrier_cta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="0x7f080290"/>
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_cta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="text_view_banner_subtitle,                     image_view_banner_logo"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_cta"
                    android:paddingLeft="@dimen/maya_margin_normal"
                    android:paddingTop="@dimen/maya_padding_medium"
                    android:paddingRight="@dimen/maya_margin_normal"
                    android:paddingBottom="@dimen/maya_padding_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/maya_label_travel_beep_card_banner_cta"
                    android:paddingHorizontal="@dimen/maya_margin_normal"
                    android:paddingVertical="@dimen/maya_padding_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/barrier_cta"
                    style="@style/JekoBoldLink.Primary"/>
                <ImageView
                    android:id="@+id/image_view_cta_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/maya_ic_chevron_right_green"
                    android:layout_marginEnd="@dimen/maya_margin_small"
                    app:layout_constraintBottom_toBottomOf="@+id/text_view_cta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_view_cta"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/text_view_title_featured_partners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:text="@string/maya_label_travel_featured_partners"
            android:textAllCaps="true"
            android:layout_marginStart="@dimen/maya_margin_large"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_featured_partners"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_beep_card_banner"
            style="@style/JekoOverlineBig.Tertiary"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_featured_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            app:layout_constraintBottom_toTopOf="@+id/constraint_layout_travel_information_container"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title_featured_partners"/>
        <include
            android:id="@+id/view_featured_partners_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            app:layout_constraintTop_toBottomOf="@+id/card_view_beep_card_banner"
            layout="@layout/maya_view_loading_featured_partners"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_feature_partners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="text_view_title_featured_partners,             recycler_view_featured_partners"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_featured_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="recycler_view_featured_partners,             view_featured_partners_loading"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_travel_information_container"
            android:background="@drawable/maya_bg_content_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:layout_marginBottom="@dimen/maya_margin_large"
            android:layout_marginStart="@dimen/maya_margin_large"
            android:layout_marginEnd="@dimen/maya_margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier_featured_partners"
            app:layout_constraintVertical_bias="0">
            <ImageView
                android:id="@+id/text_view_travel_information_icon"
                android:layout_width="@dimen/maya_credit_bank_information_size_icon"
                android:layout_height="@dimen/maya_credit_bank_information_size_icon"
                android:src="@drawable/maya_ic_information"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_small"
                app:layout_constraintEnd_toStartOf="@+id/text_view_travel_information_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_view_travel_information_1"
                app:layout_constraintVertical_bias="0.4"/>
            <com.paymaya.common.widget.HtmlTextView
                android:id="@+id/text_view_travel_information_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:layout_marginBottom="@dimen/maya_margin_normal"
                android:text="@string/maya_label_travel_information"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:htmlUnderline="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_view_travel_information_icon"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/CerebriMediumSmallText.Secondary200"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
