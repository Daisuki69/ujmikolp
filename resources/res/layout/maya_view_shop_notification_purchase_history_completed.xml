<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/pma_radius_4dp"
    app:cardElevation="@dimen/pma_elevation_6dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/pma_background_solid_round_rect_off_light"
        android:padding="@dimen/pma_margin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shop_notification_history_completed_status_image_view"
            android:layout_width="@dimen/maya_shop_purchase_history_notification_icon_length"
            android:layout_height="@dimen/maya_shop_purchase_history_notification_icon_length"
            android:src="@drawable/pma_ic_status_history_notification_completed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"/>
        <TextView
            android:id="@+id/shop_notification_history_completed_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/maya_margin_20"
            android:text="@string/pma_label_shop_v3_purchase_history_notification_title_completed"
            android:maxLines="2"
            app:layout_constraintBottom_toTopOf="@+id/shop_notification_history_completed_subtitle_text_view"
            app:layout_constraintLeft_toRightOf="@+id/shop_notification_history_completed_status_image_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/BodyDarkBold"/>
        <TextView
            android:id="@+id/shop_notification_history_completed_subtitle_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            android:text="@string/pma_label_shop_v3_purchase_history_notification_subtitle_completed"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/shop_notification_history_completed_title_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_notification_history_completed_title_text_view"
            style="@style/BodyDark"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
