<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_item_container"
    android:background="@drawable/maya_bg_selector_clickable_content_border"
    android:padding="@dimen/maya_padding_normal"
    android:layout_width="@dimen/maya_view_holder_favorite_card_min_width"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/maya_view_holder_favorite_card_min_height">
    <ImageView
        android:id="@+id/image_view_favorite_icon"
        android:layout_width="@dimen/maya_view_holder_favorite_icon_size"
        android:layout_height="@dimen/maya_view_holder_favorite_icon_size"
        android:layout_margin="@dimen/maya_margin_medium"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Space
        android:id="@+id/space_icon_divider"
        android:layout_width="@dimen/maya_margin_medium"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@+id/image_view_favorite_icon"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_favorite_alias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/maya_line_spacing_3sp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_favorite_card_line1"
        app:layout_constraintLeft_toRightOf="@+id/space_icon_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/JekoBoldSmallText.Primary"/>
    <TextView
        android:id="@+id/text_view_favorite_card_line1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lineSpacingExtra="@dimen/maya_line_spacing_4sp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_favorite_card_line2"
        app:layout_constraintLeft_toRightOf="@+id/space_icon_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_favorite_alias"
        style="@style/JekoBoldSmallText.Tertiary"/>
    <TextView
        android:id="@+id/text_view_favorite_card_line2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lineSpacingExtra="@dimen/maya_line_spacing_4sp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_favorite_card_maintenance"
        app:layout_constraintLeft_toRightOf="@+id/space_icon_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_favorite_card_line1"
        style="@style/JekoSemiBoldSmallText.Tertiary"/>
    <TextView
        android:id="@+id/text_view_favorite_card_maintenance"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_temporarily_unavailable"
        android:maxLines="1"
        android:lineSpacingExtra="@dimen/maya_line_spacing_4sp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/space_icon_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_favorite_card_line2"
        style="@style/JekoBoldSmallText.Tertiary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
