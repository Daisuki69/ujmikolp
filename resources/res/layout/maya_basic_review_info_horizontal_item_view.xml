<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/maya_margin_small"
    android:paddingBottom="@dimen/maya_margin_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_content"
        android:paddingLeft="@dimen/maya_padding_normal"
        android:paddingTop="@dimen/maya_margin_small"
        android:paddingRight="@dimen/maya_padding_normal"
        android:paddingBottom="@dimen/maya_margin_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/maya_padding_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guide_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent="0.5"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/text_view_header"
            android:layout_width="@dimen/maya_margin_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/maya_margin_small"
            app:layout_constraintEnd_toStartOf="@+id/guide_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoSemiBoldSmallText.Tertiary"/>
        <TextView
            android:id="@+id/text_view_badge"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/maya_margin_0"
            app:layout_constraintStart_toEndOf="@+id/guide_line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginBottom="@dimen/maya_margin_0"
            style="@style/MayaBadge"/>
        <TextView
            android:id="@+id/text_view_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guide_line"
            app:layout_constraintTop_toBottomOf="@+id/text_view_badge"
            app:layout_goneMarginTop="@dimen/maya_margin_0"
            style="@style/JekoSemiBoldSmallText.Primary"/>
        <TextView
            android:id="@+id/text_view_description"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guide_line"
            app:layout_constraintTop_toBottomOf="@+id/text_view_value"
            style="@style/JekoSemiBoldSmallText.Tertiary"/>
        <TextView
            android:id="@+id/text_view_action_secondary"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_padding_extra_small"
            app:htmlUnderline="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guide_line"
            app:layout_constraintTop_toBottomOf="@+id/text_view_description"
            style="@style/JekoSemiBoldSmallText.LinksAccent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
