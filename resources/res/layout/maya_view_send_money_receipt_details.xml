<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_main_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/mayaContentViewInformationBackgroundColorSecondary"
        app:cardCornerRadius="@dimen/maya_radius_16dp"
        app:cardElevation="@dimen/maya_elevation_flat"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingLeft="@dimen/maya_padding_normal"
            android:paddingTop="@dimen/maya_padding_20dp"
            android:paddingRight="@dimen/maya_padding_normal"
            android:paddingBottom="@dimen/maya_padding_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/maya_padding_normal"
            android:paddingVertical="@dimen/maya_padding_20dp">
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline_top_section_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>
            <TextView
                android:id="@+id/text_view_source_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_small"
                android:text="@string/maya_label_source"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_source_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_payment_method_my_wallet"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_source_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                style="@style/JekoSemiBoldLink.Primary"/>
            <TextView
                android:id="@+id/text_view_source_mobile_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                app:layout_constraintTop_toBottomOf="@+id/text_view_source_name"
                style="@style/JekoSemiBoldLink.Tertiary"/>
            <View
                android:id="@+id/view_source_row_divider"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_source_mobile_number"
                style="@style/MayaListItemDivider"/>
            <TextView
                android:id="@+id/text_view_recipient_destination_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_destination"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_source_row_divider"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_recipient_primary_destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_recipient_destination_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                style="@style/JekoSemiBoldLink.Primary"/>
            <TextView
                android:id="@+id/text_view_recipient_secondary_destination"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                app:layout_constraintTop_toBottomOf="@+id/text_view_recipient_primary_destination"
                style="@style/JekoSemiBoldLink.Tertiary"/>
            <TextView
                android:id="@+id/text_view_recipient_add_to_contacts"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_small"
                android:text="@string/maya_label_plus_sign_add_to_contacts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                app:layout_constraintTop_toBottomOf="@+id/text_view_recipient_secondary_destination"
                style="@style/JekoSemiBoldLink.LinksAccent"/>
            <View
                android:id="@+id/view_recipient_destination_row_divider"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_recipient_add_to_contacts"
                style="@style/MayaListItemDivider"/>
            <TextView
                android:id="@+id/text_view_transaction_details_label"
                android:paddingTop="@dimen/maya_padding_small"
                android:paddingBottom="@dimen/maya_padding_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:layout_marginBottom="@dimen/maya_margin_normal"
                android:text="@string/maya_label_transaction_details"
                android:layout_marginVertical="@dimen/maya_margin_normal"
                android:paddingVertical="@dimen/maya_padding_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                app:layout_constraintTop_toBottomOf="@+id/view_recipient_destination_row_divider"
                style="@style/JekoSemiBoldSmallText.Primary"/>
            <ImageView
                android:id="@+id/image_view_transaction_details_arrow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/maya_ic_chevron_down_primary"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_transaction_details_label"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_view_transaction_details_label"
                app:tint="?attr/mayaButtonPrimaryDefaultColor"/>
            <View
                android:id="@+id/view_transaction_details_selectable_region"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_transaction_details_label"
                app:layout_constraintTop_toTopOf="@+id/text_view_transaction_details_label"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_transaction_details_label"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="text_view_transaction_details_label,                 image_view_transaction_details_arrow,                 view_transaction_details_selectable_region"/>
            <TextView
                android:id="@+id/text_view_transaction_fee_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_transaction_fee"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_transaction_details_label"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_transaction_fee_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_transaction_fee_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                style="@style/JekoSemiBoldLink.Primary"/>
            <View
                android:id="@+id/view_transaction_fee_row_divider"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_transaction_fee_value"
                style="@style/MayaListItemDivider"/>
            <TextView
                android:id="@+id/text_view_reference_id_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_receipt_reference_id"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_top_section_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_transaction_fee_row_divider"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_reference_id_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_reference_id_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_top_section_center"
                style="@style/JekoSemiBoldLink.Primary"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_transaction_details"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="text_view_transaction_fee_label,                 text_view_transaction_fee_value,                 view_transaction_fee_row_divider,                 text_view_reference_id_label,                 text_view_reference_id_value"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_message_and_decoration_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:cardBackgroundColor="?attr/mayaContentViewInformationBackgroundColorSecondary"
        app:cardCornerRadius="@dimen/maya_radius_16dp"
        app:cardElevation="@dimen/maya_elevation_flat"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toBottomOf="@+id/card_view_main_details_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/maya_padding_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_view_decoration_thumbnail"
                android:layout_width="@dimen/maya_icon_size_length_extra_large"
                android:layout_height="@dimen/maya_icon_size_length_extra_large"
                android:layout_marginStart="@dimen/maya_margin_normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/text_view_message"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/maya_margin_small"
                android:maxLines="4"
                android:layout_marginStart="@dimen/maya_margin_14"
                app:layout_constraintBottom_toTopOf="@+id/text_view_powered_by_giphy_label"
                app:layout_constraintEnd_toStartOf="@+id/image_view_open_decoration_preview"
                app:layout_constraintStart_toEndOf="@+id/image_view_decoration_thumbnail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginBottom="0dp"
                app:layout_goneMarginStart="0dp"
                style="@style/JekoSemiBoldLink.Primary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center_vertical"
                android:id="@+id/text_view_powered_by_giphy_label"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_label_powered_by"
                android:layout_marginStart="@dimen/maya_margin_14"
                app:drawableEndCompat="@drawable/maya_ic_giphy_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/image_view_open_decoration_preview"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/image_view_decoration_thumbnail"
                app:layout_constraintTop_toBottomOf="@+id/text_view_message"
                app:layout_goneMarginStart="0dp"
                app:layout_goneMarginTop="0dp"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <ImageView
                android:id="@+id/image_view_open_decoration_preview"
                android:paddingTop="@dimen/maya_padding_normal"
                android:paddingBottom="@dimen/maya_padding_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/maya_ic_green_arrow"
                android:scaleType="fitCenter"
                android:paddingStart="@dimen/maya_padding_normal"
                android:paddingVertical="@dimen/maya_padding_normal"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_decoration_thumbnail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_view_decoration_thumbnail"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_decoration"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="image_view_open_decoration_preview,                 image_view_decoration_thumbnail"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
