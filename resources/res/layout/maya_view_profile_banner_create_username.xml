<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/maya_bg_color_opacity_pink_rounded"
    android:paddingLeft="@dimen/maya_padding_normal"
    android:paddingTop="@dimen/maya_padding_20dp"
    android:paddingRight="@dimen/maya_padding_normal"
    android:paddingBottom="@dimen/maya_padding_20dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/maya_padding_normal"
    android:paddingVertical="@dimen/maya_padding_20dp">
    <TextView
        android:id="@+id/text_view_banner_invite_friends_overline_spiel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_profile_banner_create_username_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/image_view_banner_account_under_review_graphic"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoBoldSubline.Primary"/>
    <com.paymaya.common.widget.HtmlTextView
        android:id="@+id/text_view_banner_invite_friends_main_spiel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:text="@string/maya_label_profile_banner_create_username_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/image_view_banner_account_under_review_graphic"
        app:layout_constraintTop_toBottomOf="@+id/text_view_banner_invite_friends_overline_spiel"
        style="@style/JekoRegularSmallText.Primary"/>
    <TextView
        android:id="@+id/text_view_banner_invite_friends_cta_spiel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:text="@string/maya_label_profile_banner_create_username_get_started"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/image_view_banner_account_under_review_graphic"
        app:layout_constraintTop_toBottomOf="@+id/text_view_banner_invite_friends_main_spiel"
        app:layout_constraintVertical_bias="1"
        style="@style/JekoBoldLink.Accent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_banner_account_under_review_graphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="0x7f0802a4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="0x7f0802a5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
