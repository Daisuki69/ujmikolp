<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/pma_margin_normal">
    <CheckBox
        android:theme="@style/pma_widget_checkbox_green"
        android:id="@+id/check_box_pma_view_consent_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/consent_name_text_view_pma_view_consent_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_small"
        android:fontFamily="@string/pma_font_family_roboto_medium"
        android:layout_marginStart="@dimen/pma_margin_small"
        app:layout_constrainedWidth="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/check_box_pma_view_consent_item"
        app:layout_constraintLeft_toRightOf="@+id/check_box_pma_view_consent_item"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/pma_theme_home_text_view"/>
    <TextView
        android:id="@+id/consent_description_text_view_pma_view_consent_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_normal"
        app:layout_constraintLeft_toLeftOf="@+id/consent_name_text_view_pma_view_consent_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consent_name_text_view_pma_view_consent_item"
        style="@style/pma_theme_home_text_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>
