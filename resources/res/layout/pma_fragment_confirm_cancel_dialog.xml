<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_pma_fragment_confirm_cancel_dialog"
    android:padding="@dimen/pma_padding_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_text_view_pma_fragment_confirm_cancel_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_medium"
        android:text="@string/pma_label_are_you_sure_you_want_to_leave"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/BodyDarkBold"/>
    <TextView
        android:textSize="@dimen/pma_text_size_body2"
        android:id="@+id/subtitle_text_view_pma_fragment_confirm_cancel_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:text="@string/pma_label_your_progress_will_be_lost"
        app:layout_constraintLeft_toLeftOf="@+id/title_text_view_pma_fragment_confirm_cancel_dialog"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view_pma_fragment_confirm_cancel_dialog"/>
    <TextView
        android:textColor="?attr/colorPrimary"
        android:id="@+id/positive_text_view_pma_fragment_confirm_cancel_dialog"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_20dp"
        android:text="@string/pma_label_leave"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_text_view_pma_fragment_confirm_cancel_dialog"
        style="@style/pma_widget_dialog_button"/>
    <TextView
        android:id="@+id/negative_text_view_pma_fragment_confirm_cancel_dialog"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_20dp"
        android:layout_marginRight="@dimen/pma_margin_normal"
        android:text="@string/pma_label_cancel"
        android:layout_marginEnd="@dimen/pma_margin_normal"
        app:layout_constraintRight_toLeftOf="@+id/positive_text_view_pma_fragment_confirm_cancel_dialog"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_text_view_pma_fragment_confirm_cancel_dialog"
        style="@style/pma_widget_dialog_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
