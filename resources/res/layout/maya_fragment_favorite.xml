<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout_favorites"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_favorites"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_expanded_collapsing_toolbar_height"
        app:elevation="@dimen/pma_elevation_flat">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_favorites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleGravity="center_horizontal"
            app:collapsedTitleTextAppearance="@style/JekoBoldTextBody.Primary"
            app:contentScrim="?attr/mayaColorBackgroundPrimary"
            app:expandedTitleGravity="start"
            app:expandedTitleMarginBottom="10dp"
            app:expandedTitleTextAppearance="@style/JekoBoldH3.Primary"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:title="@string/maya_label_favorites">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_favorites"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="@dimen/maya_favorite_toolbar_margin_bottom"
                app:contentInsetEnd="@dimen/maya_expanded_toolbar_inset_end"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="@dimen/maya_expanded_toolbar_inset_end"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/maya_ic_navigation_back"
                app:subtitleTextAppearance="@style/CerebriBookLongRead.Secondary"
                app:title="@string/maya_label_favorites"
                app:titleTextAppearance="@style/JekoBoldTextBody.Primary"/>
            <com.google.android.material.tabs.TabLayout
                android:layout_gravity="bottom"
                android:id="@+id/tab_layout_favorites"
                android:layout_width="match_parent"
                android:layout_height="@dimen/maya_favorite_tab_layout_height"
                app:layout_collapseMode="pin"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/MayaTabLayoutDashboard"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_favorites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
