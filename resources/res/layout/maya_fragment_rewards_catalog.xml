<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_rewards_catalog"
    android:background="@drawable/maya_bg_white_corner_bordered_radius_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/maya_margin_large">
    <TextView
        android:textColor="@color/black"
        android:id="@+id/text_view_maya_miles_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/maya_margin_16"
        android:text="@string/maya_label_only_with_maya_miles"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CerebriBoldSmallText"/>
    <TextView
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:id="@+id/text_view_maya_miles_balance"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/maya_margin_16"
        android:drawablePadding="@dimen/maya_view_padding_3"
        app:drawableStartCompat="@drawable/maya_ic_small_letter_logo_black"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_view_maya_miles_title"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/CerebriBoldSmallText"/>
    <include
        android:id="@+id/view_loading_maya_miles_balance"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/maya_margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view_maya_miles_title"
        layout="@layout/maya_view_loading_miles_balance"/>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/recycler_view_maya_miles_rewards"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:layout_marginBottom="@dimen/maya_margin_16"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_maya_miles_title"/>
    <include
        android:id="@+id/view_rewards_catalog_empty"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_maya_miles_title"
        layout="@layout/maya_view_rewards_catalog_empty_layout"/>
    <include
        android:id="@+id/view_rewards_catalog_error"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:layout_marginBottom="@dimen/maya_margin_16"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_maya_miles_title"
        layout="@layout/maya_view_rewards_catalog_error_layout"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_rewards_content_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:barrierMargin="@dimen/maya_margin_16"
        app:constraint_referenced_ids="recycler_view_maya_miles_rewards,view_rewards_catalog_empty,view_rewards_catalog_error"/>
    <View
        android:id="@+id/view_divider"
        android:background="@color/maya_shades_of_grey_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_view_divider_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier_rewards_content_bottom"/>
    <TextView
        android:textColor="@color/grown_green"
        android:id="@+id/text_view_maya_miles_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:layout_marginBottom="@dimen/maya_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"
        style="@style/CerebriMediumLongRead"/>
    <ImageView
        android:id="@+id/image_view_right_chevron"
        android:background="@drawable/maya_ic_chevron_right_green"
        android:layout_width="@dimen/maya_widget_width_13dp"
        android:layout_height="@dimen/maya_widget_height_13dp"
        android:layout_marginStart="@dimen/maya_margin_2x_small"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_maya_miles_cta"
        app:layout_constraintStart_toEndOf="@+id/text_view_maya_miles_cta"
        app:layout_constraintTop_toTopOf="@+id/text_view_maya_miles_cta"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_rewards_catalog_footer"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="view_divider,text_view_maya_miles_cta,image_view_right_chevron"/>
</androidx.constraintlayout.widget.ConstraintLayout>
