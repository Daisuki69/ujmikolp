<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/mayaColorBackgroundPrimaryAlt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollable_nested_scroll_view"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_view_success"
                android:layout_width="@dimen/maya_kyc_rockon_image_size"
                android:layout_height="@dimen/maya_kyc_rockon_image_size"
                android:src="0x7f08039d"
                android:importantForAccessibility="no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.paymaya.mayaui.common.view.widget.MultiColorTextView
                android:id="@+id/text_view_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_large"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:layout_marginRight="@dimen/maya_margin_large"
                android:text="@string/maya_label_success_password_changed_header"
                android:layout_marginHorizontal="@dimen/maya_margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_success"
                app:mctvSecondaryTextColor="?attr/mayaColorAccent"
                app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_we_will_take_it_from_here_header_highlighted_phrase"
                style="@style/JekoBoldH4.Primary"/>
            <TextView
                android:id="@+id/text_view_header_subtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_success_password_changed_sub_header"
                app:layout_constraintEnd_toEndOf="@+id/text_view_header"
                app:layout_constraintStart_toStartOf="@+id/text_view_header"
                app:layout_constraintTop_toBottomOf="@+id/text_view_header"
                style="@style/CerebriBookTextBody"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_information_box"
                android:background="@drawable/maya_bg_white_corner_bordered_radius_16"
                android:padding="@dimen/maya_padding_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_large"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:layout_marginRight="@dimen/maya_margin_large"
                android:layout_marginBottom="@dimen/maya_margin_large"
                android:layout_marginHorizontal="@dimen/maya_margin_large"
                android:layout_marginVertical="@dimen/maya_margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_header_subtext">
                <TextView
                    android:id="@+id/text_view_information_header"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/maya_label_success_password_tip_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/constraint_layout_information_box"
                    style="@style/CerebriBoldLongRead.Primary"/>
                <com.paymaya.mayaui.common.view.widget.MultiColorTextView
                    android:id="@+id/text_view_information_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maya_margin_12"
                    android:text="@string/maya_label_success_password_tip_body"
                    android:layout_marginEnd="@dimen/maya_margin_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/text_view_information_header"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_information_header"
                    app:mctvSecondaryTextColor="?attr/mayaColorAccent"
                    app:mctvSecondaryTextHighlightSpan=""
                    style="@style/CerebriBookLongRead.Secondary200"/>
                <TextView
                    android:id="@+id/bulleted_tips_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pma_margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_information_description"
                    style="@style/CerebriBookLongRead.Secondary200"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_large"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:layout_marginRight="@dimen/pma_margin_large"
        android:layout_marginBottom="@dimen/pma_margin_normal"
        android:text="@string/maya_label_log_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
