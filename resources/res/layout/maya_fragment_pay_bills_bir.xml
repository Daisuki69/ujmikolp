<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/continue_bir_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/start_guide_pay_bills_form_bir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="@dimen/maya_margin_normal"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/end_guide_pay_bills_form_bir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="@dimen/maya_margin_normal"/>
            <TextView
                android:id="@+id/paying_label_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:text="@string/maya_label_pay_bills_paying_title"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoBoldTextBody.Primary"/>
            <ImageView
                android:id="@+id/biller_bir_image_view"
                android:background="@drawable/maya_bg_icon_circle_border"
                android:padding="@dimen/maya_padding_extra_small"
                android:layout_width="@dimen/maya_button_height_normal"
                android:layout_height="@dimen/maya_button_height_normal"
                android:layout_marginTop="@dimen/maya_margin_large"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/paying_label_text_view"/>
            <TextView
                android:id="@+id/biller_name_bir_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_medium"
                android:textAlignment="center"
                android:layout_marginEnd="@dimen/maya_margin_large"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/biller_bir_image_view"
                style="@style/JekoBoldTextBody.Primary"/>
            <ImageView
                android:id="@+id/biller_information_bir_image_view"
                android:layout_width="@dimen/maya_icon_size_length_medium"
                android:layout_height="@dimen/maya_icon_size_length_medium"
                android:src="@drawable/maya_ic_info_grey"
                android:layout_marginStart="@dimen/maya_margin_extra_small"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/biller_name_bir_text_view"
                app:layout_constraintStart_toEndOf="@+id/biller_name_bir_text_view"
                app:layout_constraintTop_toTopOf="@+id/biller_name_bir_text_view"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/account_number_bir_text_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:hint="@string/maya_label_pay_bills_enter_tin"
                android:inputType="number"
                android:imeOptions="actionNext"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/biller_name_bir_text_view"
                app:milLabel="@string/maya_label_pay_bills_hint_tin"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/branch_code_bir_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:maxLength="5"
                android:inputType="number"
                android:imeOptions="actionNext"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/account_number_bir_text_input"
                app:milLabel="TIN Branch Code"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/amount_bir_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:hint="@string/maya_label_pay_bills_enter_amount"
                android:inputType="number"
                android:imeOptions="actionNext"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/branch_code_bir_text_input_layout"
                app:milLabel="@string/maya_label_amount"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/rdo_code_bit_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_medium"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/amount_bir_text_input_layout"
                app:milLabel="RDO Code"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/form_series_bir_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/rdo_code_bit_text_input_layout"
                app:milLabel="Form Series"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/form_type_bir_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/form_series_bir_text_input_layout"
                app:milLabel="Form Type Code"
                style="@style/MayaInputLayoutDefault"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/tax_type_bir_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/form_type_bir_text_input_layout"
                app:milLabel="Tax Type"
                style="@style/MayaInputLayoutDefault"/>
            <dOYHB6.lN8Dz0.d8NVX3
                android:orientation="vertical"
                android:id="@+id/dynamic_fields_bir_container_linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/tax_type_bir_text_input_layout"/>
            <ImageView
                android:id="@+id/reminder_icon_image_view"
                android:layout_width="@dimen/maya_icon_size_length_default"
                android:layout_height="@dimen/maya_icon_size_length_default"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:src="@drawable/maya_ic_information_primary_small"
                android:scaleType="center"
                app:layout_constraintStart_toStartOf="@+id/start_guide_pay_bills_form_bir"
                app:layout_constraintTop_toBottomOf="@+id/dynamic_fields_bir_container_linear_layout"/>
            <TextView
                android:id="@+id/reminder_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/reminder_icon_image_view"
                app:layout_constraintStart_toEndOf="@+id/reminder_icon_image_view"
                app:layout_constraintTop_toTopOf="@+id/reminder_icon_image_view"
                style="@style/CerebriMediumSmallText.Primary"/>
            <TextView
                android:id="@+id/reminder_notes_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                app:layout_constraintEnd_toEndOf="@+id/end_guide_pay_bills_form_bir"
                app:layout_constraintStart_toStartOf="@+id/reminder_title_text_view"
                app:layout_constraintTop_toBottomOf="@+id/reminder_title_text_view"
                style="@style/CerebriMediumSmallText.Tertiary"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/maya_margin_large"
                app:layout_constraintTop_toBottomOf="@+id/reminder_notes_text_view"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/reminder_group"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="reminder_title_text_view,                 reminder_notes_text_view,                 reminder_icon_image_view"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/continue_bir_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:text="@string/maya_label_continue"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
