<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/maya_kyc_toolbar"
        layout="@layout/maya_view_custom_toolbar"/>
    <androidx.fragment.app.FragmentContainerView
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:id="@+id/maya_kyc_nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maya_kyc_toolbar"
        app:navGraph="@navigation/maya_kyc_nav_graph"/>
    <TextView
        android:textColor="@color/maya_system_error"
        android:gravity="center_horizontal"
        android:id="@+id/text_view_error_message"
        android:background="@drawable/maya_background_error_top_bar"
        android:paddingTop="@dimen/maya_padding_normal"
        android:paddingBottom="@dimen/maya_padding_normal"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_10"
        android:layout_marginRight="@dimen/maya_margin_10"
        android:paddingStart="@dimen/maya_padding_20dp"
        android:paddingEnd="@dimen/maya_padding_20dp"
        android:layout_marginHorizontal="@dimen/maya_margin_10"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoBoldSmallText.Primary"/>
    <include
        android:id="@+id/layout_loading_translucent"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/maya_fragment_kyc_data_loading_translucent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
