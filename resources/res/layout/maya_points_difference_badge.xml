<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/points_difference_badge_container"
    android:background="@drawable/maya_bg_xp_badge_gradient"
    android:paddingTop="@dimen/maya_padding_1dp"
    android:paddingBottom="@dimen/maya_padding_1dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/maya_padding_6dp"
    android:paddingEnd="@dimen/maya_padding_small">
    <ImageView
        android:id="@+id/points_difference_arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_xp_up_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/points_difference_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/points_difference_value"
        app:tint="@color/white"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/points_difference_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/maya_margin_3x_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/points_difference_arrow_icon"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CerebriBoldSmallText"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/points_difference_XP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_xp_Label"
        android:layout_marginStart="@dimen/maya_margin_extra_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/points_difference_value"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CerebriBoldSmallText"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/points_difference_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_xp_this_week"
        android:layout_marginStart="@dimen/maya_margin_extra_small"
        app:layout_constraintBottom_toBottomOf="@+id/points_difference_value"
        app:layout_constraintStart_toEndOf="@+id/points_difference_XP"
        app:layout_constraintTop_toTopOf="@+id/points_difference_value"
        style="@style/CerebriBookOverlineMedium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
