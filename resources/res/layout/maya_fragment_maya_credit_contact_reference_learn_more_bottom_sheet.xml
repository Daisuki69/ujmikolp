<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/top_sheet_line_view"
        android:background="@drawable/maya_bg_default_bottom_dialog_sheet"
        android:layout_width="@dimen/maya_bottom_sheet_line_width"
        android:layout_height="@dimen/maya_bottom_sheet_line_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/sheet_background_view"
        android:background="@drawable/maya_bg_default_bottom_dialog_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_sheet_line_view"
        app:layout_constraintVertical_bias="0"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/maya_margin_24"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/maya_margin_24"/>
    <TextView
        android:id="@+id/learn_more_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_24"
        android:text="@string/maya_label_contact_reference_learn_more_title"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="@+id/sheet_background_view"
        style="@style/JekoBoldH5.Primary"/>
    <View
        android:id="@+id/learn_more_table_view"
        android:background="@drawable/maya_bg_color_background_secondary_rounded"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/learn_more_title_text_view"/>
    <TextView
        android:textColor="@color/davy_gray"
        android:id="@+id/learn_more_description_text_view"
        android:background="@drawable/maya_bg_color_background_secondary_rounded"
        android:padding="@dimen/maya_padding_20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_contact_reference_learn_more_description"
        app:layout_constraintEnd_toEndOf="@+id/learn_more_table_view"
        app:layout_constraintStart_toStartOf="@+id/learn_more_table_view"
        app:layout_constraintTop_toTopOf="@+id/learn_more_table_view"/>
    <Button
        android:id="@+id/return_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_16"
        android:text="@string/maya_label_contact_reference_learn_more_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/learn_more_description_text_view"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
