<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_badge_container_v2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/maya_secondary_feature_badge_height"
        app:cardCornerRadius="@dimen/maya_radius_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:gravity="center"
            android:id="@+id/text_view_badge_label"
            android:paddingLeft="@dimen/maya_secondary_feature_badge_label_inset_horizontal"
            android:paddingTop="@dimen/maya_secondary_feature_badge_label_inset_vertical"
            android:paddingRight="@dimen/maya_secondary_feature_badge_label_inset_horizontal"
            android:paddingBottom="@dimen/maya_secondary_feature_badge_label_inset_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:maxLength="@integer/maya_secondary_feature_badge_text_max_character_limit"
            android:paddingHorizontal="@dimen/maya_secondary_feature_badge_label_inset_horizontal"
            android:paddingVertical="@dimen/maya_secondary_feature_badge_label_inset_vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoOverlineSmall.Secondary"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_badge_dot"
            android:visibility="gone"
            android:layout_width="@dimen/maya_secondary_feature_badge_dot_size"
            android:layout_height="@dimen/maya_secondary_feature_badge_dot_size"
            android:src="@drawable/maya_ic_secondary_feature_badge_dot"
            app:srcCompat="@drawable/maya_ic_secondary_feature_badge_dot"/>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/image_button_secondary_feature_icon"
        android:background="@drawable/maya_bg_selector_image_button_tiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_10"
        android:scaleType="center"
        android:layout_marginEnd="@dimen/maya_margin_extra_small"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/text_view_secondary_feature_name"
        android:paddingLeft="@dimen/maya_padding_2x_small"
        android:paddingRight="@dimen/maya_padding_2x_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:maxLines="2"
        android:paddingHorizontal="@dimen/maya_padding_2x_small"
        app:layout_constraintLeft_toLeftOf="@+id/image_button_secondary_feature_icon"
        app:layout_constraintRight_toRightOf="@+id/image_button_secondary_feature_icon"
        app:layout_constraintTop_toBottomOf="@+id/image_button_secondary_feature_icon"
        style="@style/JekoBoldSmallText.Tertiary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
