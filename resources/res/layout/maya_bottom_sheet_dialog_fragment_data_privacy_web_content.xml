<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/pma_padding_large"
    android:paddingTop="@dimen/pma_padding_48dp"
    android:paddingRight="@dimen/pma_padding_large"
    android:paddingBottom="@dimen/pma_padding_large"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_data_privacy_terms_and_conditions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoBoldH5.Primary"/>
    <com.paymaya.common.widget.ScrollableWebView
        android:scrollbarThumbVertical="@drawable/maya_bg_scrollbar_grey_quaternary"
        android:id="@+id/content_scrollable_web_view"
        android:background="@drawable/maya_bg_color_background_secondary_rounded"
        android:padding="@dimen/pma_padding_small"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/pma_margin_extra_large"
        android:layout_marginBottom="@dimen/pma_margin_small"
        android:fadeScrollbars="true"
        app:layout_constraintBottom_toTopOf="@+id/done_button"
        app:layout_constraintTop_toBottomOf="@+id/title_header_text_view"/>
    <Button
        android:id="@+id/done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_large"
        android:text="@string/maya_label_done"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
