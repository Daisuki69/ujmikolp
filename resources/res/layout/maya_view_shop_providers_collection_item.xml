<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_layout"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/provider_icon_image_view"
        android:background="@drawable/maya_bg_icon_circle_border"
        android:padding="@dimen/maya_padding_extra_small"
        android:layout_width="@dimen/maya_icon_size_length_large"
        android:layout_height="@dimen/maya_icon_size_length_large"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:src="@drawable/maya_ic_shop_placeholder_green"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginVertical="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/provider_icon_placeholder_image_view"
        android:visibility="gone"
        android:layout_width="@dimen/maya_icon_size_length_large"
        android:layout_height="@dimen/maya_icon_size_length_large"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:src="@drawable/maya_ic_shop_placeholder_green"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginVertical="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/provider_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/maya_margin_medium"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="@+id/provider_icon_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/provider_icon_image_view"
        app:layout_constraintTop_toTopOf="@+id/provider_icon_image_view"
        style="@style/JekoSemiBoldTextBody.Primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
