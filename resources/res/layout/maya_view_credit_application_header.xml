<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_credit_application_header_container"
    android:background="@drawable/maya_bg_solid_round_opacity_blue_40"
    android:padding="@dimen/maya_padding_20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_view_credit_application_header_image"
        android:layout_width="@dimen/maya_credit_header_image_width"
        android:layout_height="@dimen/maya_credit_header_image_height"
        android:src="0x7f080254"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_header_image_bottom_space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_20"
        app:layout_constraintEnd_toEndOf="@+id/image_view_credit_application_header_image"
        app:layout_constraintStart_toStartOf="@+id/image_view_credit_application_header_image"
        app:layout_constraintTop_toBottomOf="@+id/image_view_credit_application_header_image"/>
    <TextView
        android:textColor="@color/maya_primary_white"
        android:id="@+id/chip_maya_credit"
        android:background="@drawable/maya_bg_solid_round_green"
        android:paddingTop="@dimen/maya_padding_extra_small"
        android:paddingBottom="@dimen/maya_padding_extra_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:text="@string/pma_label_maya_credit"
        android:paddingStart="@dimen/maya_padding_normal"
        android:paddingEnd="@dimen/maya_padding_normal"
        app:layout_constraintBottom_toTopOf="@+id/text_view_credit_application_header_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_view_credit_application_header_image"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/JekoBoldSmallText"/>
    <TextView
        android:id="@+id/text_view_credit_application_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_credit_approved_header_title"
        android:layout_marginEnd="@dimen/maya_margin_6"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/view_header_image_bottom_space"
        app:layout_constraintEnd_toStartOf="@+id/image_view_credit_application_header_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_maya_credit"
        style="@style/JekoSemiBoldH5.Primary"/>
    <TextView
        android:id="@+id/text_view_credit_application_header_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:text="@string/maya_label_credit_approved_header_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_header_image_bottom_space"
        style="@style/JekoBoldSmallText.Secondary200"/>
    <com.paymaya.common.widget.HtmlTextView
        android:gravity="center_horizontal"
        android:layout_gravity="start"
        android:id="@+id/text_view_enhanced_data_privacy_consent_text"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:text="@string/maya_label_data_privacy_enhanced_consent_with_break_tag"
        app:htmlUnderline="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_credit_application_header_description"
        style="@style/JekoSemiBoldSmallText.Secondary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
