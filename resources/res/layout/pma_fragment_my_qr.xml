<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scroll_view_pma_fragment_my_qr"
    android:background="@color/light_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/instructions_line_text_view_pma_fragment_my_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_20dp"
            android:text="@string/pma_label_ask_sender_to_scan_qr"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Body2DarkMedium"/>
        <ImageView
            android:id="@+id/qr_code_image_view_pma_fragment_my_qr"
            android:layout_width="@dimen/pma_my_qr_qr_length"
            android:layout_height="@dimen/pma_my_qr_qr_length"
            android:layout_marginTop="@dimen/pma_margin_small"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instructions_line_text_view_pma_fragment_my_qr"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/name_text_view_pma_fragment_my_qr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_20dp"
            android:layout_marginTop="@dimen/pma_margin_small"
            android:layout_marginRight="@dimen/pma_margin_20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qr_code_image_view_pma_fragment_my_qr"
            style="@style/BodyDarkMedium"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/number_text_view_pma_fragment_my_qr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_20dp"
            android:layout_marginTop="@dimen/pma_margin_extra_small"
            android:layout_marginRight="@dimen/pma_margin_20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_text_view_pma_fragment_my_qr"
            style="@style/CaptionDark"/>
        <TextView
            android:id="@+id/or_label_text_view_pma_fragment_my_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_extra_large"
            android:text="@string/pma_label_or"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number_text_view_pma_fragment_my_qr"
            style="@style/CaptionDarkLight"/>
        <View
            android:id="@+id/or_left_divider_view_pma_fragment_my_qr"
            android:background="@color/light"
            android:layout_width="0dp"
            android:layout_height="@dimen/pma_height_divider_normal"
            android:layout_marginLeft="@dimen/pma_margin_20dp"
            android:layout_marginRight="@dimen/pma_margin_small"
            android:layout_marginStart="@dimen/pma_margin_20dp"
            android:layout_marginEnd="@dimen/pma_margin_small"
            app:layout_constraintBottom_toBottomOf="@+id/or_label_text_view_pma_fragment_my_qr"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/or_label_text_view_pma_fragment_my_qr"
            app:layout_constraintTop_toTopOf="@+id/or_label_text_view_pma_fragment_my_qr"/>
        <View
            android:id="@+id/or_right_divider_view_pma_fragment_my_qr"
            android:background="@color/light"
            android:layout_width="0dp"
            android:layout_height="@dimen/pma_height_divider_normal"
            android:layout_marginLeft="@dimen/pma_margin_small"
            android:layout_marginRight="@dimen/pma_margin_20dp"
            android:layout_marginStart="@dimen/pma_margin_small"
            android:layout_marginEnd="@dimen/pma_margin_20dp"
            app:layout_constraintBottom_toBottomOf="@+id/or_label_text_view_pma_fragment_my_qr"
            app:layout_constraintLeft_toRightOf="@+id/or_label_text_view_pma_fragment_my_qr"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/or_label_text_view_pma_fragment_my_qr"/>
        <Button
            android:id="@+id/send_request_money_link_button_pma_fragment_my_qr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_20dp"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:layout_marginRight="@dimen/pma_margin_20dp"
            android:text="@string/pma_label_send_request_money_link"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/or_label_text_view_pma_fragment_my_qr"
            style="?attr/secondaryButton"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/request_money_instruction_text_view_pma_fragment_my_qr"
            android:padding="@dimen/pma_padding_extra_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_20dp"
            android:layout_marginTop="@dimen/pma_margin_medium"
            android:layout_marginRight="@dimen/pma_margin_20dp"
            android:layout_marginBottom="@dimen/pma_margin_20dp"
            android:text="@string/pma_label_how_request_money_work"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/send_request_money_link_button_pma_fragment_my_qr"
            app:layout_constraintVertical_bias="0"
            style="@style/Body2Primary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
