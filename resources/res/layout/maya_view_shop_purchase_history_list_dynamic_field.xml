<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dynamic_field_container_constraint_layout"
    android:paddingLeft="@dimen/maya_padding_normal"
    android:paddingTop="@dimen/maya_padding_20dp"
    android:paddingRight="@dimen/maya_padding_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/maya_padding_normal">
    <TextView
        android:id="@+id/shop_dynamic_field_label_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/maya_margin_extra_small"
        app:layout_constraintEnd_toStartOf="@+id/shop_dynamic_field_value_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoSemiBoldSmallText.Tertiary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/shop_dynamic_field_value_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="@dimen/maya_padding_extra_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shop_dynamic_field_label_text_view"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoSemiBoldLink.Primary"/>
    <Space
        android:id="@+id/bottom_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_margin_20"
        app:layout_constraintTop_toBottomOf="@+id/shop_dynamic_field_value_text_view"/>
    <View
        android:id="@+id/shop_history_dynamic_field_divider"
        android:background="?attr/mayaColorDividerBackgroundPrimary"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_height_divider_normal"
        app:layout_constraintTop_toBottomOf="@+id/bottom_space"/>
</androidx.constraintlayout.widget.ConstraintLayout>
