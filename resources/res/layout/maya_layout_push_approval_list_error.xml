        android:id="@+id/text_view_error_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:text="@string/maya_label_connection_issue_split"
        android:textAlignment="center"
        style="@style/CerebriBookLongRead.Secondary"/>
    <Button
        android:id="@+id/button_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:text="@string/maya_label_try_again"
        style="@style/MayaButtonPrimaryLarge"/>
</dOYHB6.lN8Dz0.d8NVX3>
