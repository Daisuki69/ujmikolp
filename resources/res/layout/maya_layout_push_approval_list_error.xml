    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_view_network_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="0x7f0802f0"/>
    <TextView
        android:id="@+id/text_view_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_that_didnt_load_right"
        style="@style/JekoBoldH5.Primary"/>
