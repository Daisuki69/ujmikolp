<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_pma_fragment_inbox"
    android:background="?attr/mayaColorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:theme="@style/MayaToolbar"
        android:id="@+id/inbox_toolbar"
        android:background="@color/light_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/maya_ic_navigation_back"
        app:subtitleTextAppearance="@style/CerebriBookLongRead.Secondary"
        app:titleTextAppearance="@style/JekoBoldTextBody.Primary">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/inbox_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maya_label_inbox"
            style="@style/JekoBoldTextBody.Primary"/>
    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/inbox_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_large"
        android:layout_marginRight="@dimen/pma_margin_large"
        android:layout_marginHorizontal="@dimen/pma_margin_large"
        app:layout_constraintTop_toBottomOf="@+id/inbox_toolbar"
        style="@style/MayaSegmentsLayout"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/inbox_view_pager"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/pma_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inbox_tab_layout"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/inbox_no_notifications_group"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="inbox_no_notifications_icon,inbox_no_notifications_text_view, inbox_back_button"/>
    <ImageView
        android:id="@+id/inbox_no_notifications_icon"
        android:layout_width="@dimen/inbox_empty_notification_icon_width"
        android:layout_height="wrap_content"
        android:src="0x7f0803cd"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:gravity="center"
        android:id="@+id/inbox_no_notifications_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_large"
        android:layout_marginTop="@dimen/pma_margin_extra_large"
        android:layout_marginRight="@dimen/pma_margin_large"
        android:text="@string/maya_label_no_notifications_inbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inbox_no_notifications_icon"
        style="@style/JekoBoldH5.Primary"/>
    <TextView
        android:gravity="center"
        android:id="@+id/inbox_come_back_text_view"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_large"
        android:layout_marginTop="@dimen/pma_margin_extra_large"
        android:layout_marginRight="@dimen/pma_margin_large"
        android:text="@string/maya_label_come_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inbox_no_notifications_text_view"
        style="@style/CerebriBookLink.Secondary200"/>
    <Button
        android:id="@+id/inbox_back_button"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/pma_margin_48dp"
        android:layout_marginTop="@dimen/pma_margin_large"
        android:layout_marginRight="@dimen/pma_margin_48dp"
        android:text="@string/maya_button_back_to_home"
        android:layout_marginHorizontal="@dimen/pma_margin_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inbox_come_back_text_view"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
