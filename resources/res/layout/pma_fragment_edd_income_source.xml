<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pma_fragment_edd_income_source_container"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <dOYHB6.lN8Dz0.gDiks7
        android:id="@+id/scroll_view_pma_fragment_edd_form"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/next_button_pma_fragment_pma_fragment_edd_form"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/pma_margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/pma_text_size_title2"
                android:id="@+id/title_text_view_pma_fragment_edd_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pma_label_edd_step_2"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TitleDarkMedium"/>
            <TextView
                android:id="@+id/spiel_text_view_pma_fragment_edd_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/pma_label_edd_income_source_spiel"
                android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
                app:layout_constraintTop_toBottomOf="@+id/title_text_view_pma_fragment_edd_form"
                style="@style/BodyDarkLight"/>
            <TextView
                android:id="@+id/question_text_view_pma_fragment_edd_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_large"
                android:text="@string/pma_label_edd_income_source_question"
                android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
                app:layout_constraintTop_toBottomOf="@+id/spiel_text_view_pma_fragment_edd_form"
                style="@style/BodyDark"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/choose_one_text_input_layout_pma_fragment_edd_form"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_normal"
                android:layout_marginRight="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:errorTextAppearance="@style/pma_text_input_layout_error_appearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question_text_view_pma_fragment_edd_form"
                app:layout_constraintWidth_percent="0.8">
                <com.google.android.material.textfield.TextInputEditText
                    android:textSize="@dimen/pma_text_size_body"
                    android:id="@+id/choose_one_edit_text_pma_fragment_edd_form"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pma_hint_edd_choose_one"
                    android:drawableRight="0x7f0804a2"
                    android:inputType="none"
                    android:imeOptions="actionNext"
                    android:drawableEnd="0x7f0804a2"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/entries_text_view_pma_fragment_edd_form"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_20dp"
                android:text="@string/pma_label_edd_sources_of_income"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/choose_one_text_input_layout_pma_fragment_edd_form"
                style="@style/BodyDark"/>
            <dOYHB6.lN8Dz0.d8NVX3
                android:orientation="vertical"
                android:id="@+id/dynamic_items_linear_layout_pma_fragment_edd_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_normal"
                app:layout_constraintTop_toBottomOf="@+id/entries_text_view_pma_fragment_edd_form"/>
            <dOYHB6.lN8Dz0.yf3D09
                android:id="@+id/add_item_layout_pma_fragment_edd_form"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dynamic_items_linear_layout_pma_fragment_edd_form">
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:id="@+id/add_item_layout_pma_fragment_edd_form_text"
                    android:background="@null"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pma_margin_extra_small"
                    android:layout_marginBottom="@dimen/pma_margin_extra_small"
                    android:text="@string/pma_label_edd_income_source_add_income_source"
                    android:drawablePadding="@dimen/pma_padding_extra_small"
                    app:drawableStartCompat="@drawable/pma_ic_add"
                    style="@style/BodyPrimary"/>
            </dOYHB6.lN8Dz0.yf3D09>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/add_item_group_pma_fragment_edd_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="dynamic_items_linear_layout_pma_fragment_edd_form,                     entries_text_view_pma_fragment_edd_form"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </dOYHB6.lN8Dz0.gDiks7>
    <Button
        android:textSize="@dimen/pma_text_size_body"
        android:id="@+id/next_button_pma_fragment_pma_fragment_edd_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pma_label_next"
        android:fontFamily="@string/pma_font_family_roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view_pma_fragment_edd_form"
        app:layout_constraintVertical_bias="1"
        style="?attr/solidButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
