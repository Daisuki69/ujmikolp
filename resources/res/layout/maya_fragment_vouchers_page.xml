<?xml version="1.0" encoding="utf-8"?>
<com.liaoinstan.springview.widget.SpringView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/spring_view_vouchers"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:scrollbarSize="@dimen/maya_scrollbar_size_normal"
            android:scrollbarThumbVertical="@color/pma_theme_home_scrollbar_color"
            android:id="@+id/recycler_view_vouchers"
            android:background="?attr/mayaColorBackgroundPrimary"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"/>
        <ImageView
            android:id="@+id/image_view_vouchers_empty"
            android:layout_width="@dimen/maya_voucher_empty_icon_width"
            android:layout_height="wrap_content"
            android:src="0x7f0803bc"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:id="@+id/text_view_vouchers_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_small"
            android:text="@string/maya_label_available_tab_empty_vouchers_title"
            android:layout_marginStart="@dimen/maya_margin_small"
            android:layout_marginEnd="@dimen/maya_margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_vouchers_empty"
            style="@style/JekoBoldH5.Primary"/>
        <TextView
            android:id="@+id/text_view_vouchers_empty_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_small"
            android:text="@string/maya_label_available_empty_vouchers_subtitle"
            android:layout_marginStart="@dimen/maya_margin_small"
            android:layout_marginEnd="@dimen/maya_margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_vouchers_empty_title"
            style="@style/CerebriBookLink.Secondary"/>
        <Button
            android:id="@+id/button_vouchers_deals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/maya_margin_48"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:layout_marginRight="@dimen/maya_margin_48"
            android:text="@string/maya_label_check_deals"
            android:layout_marginHorizontal="@dimen/maya_margin_48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_vouchers_empty_subtitle"
            style="@style/MayaButtonPrimaryLarge"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/vouchers_empty_group_spiels"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="image_view_vouchers_empty,text_view_vouchers_empty_title, text_view_vouchers_empty_subtitle, button_vouchers_deals"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.liaoinstan.springview.widget.SpringView>
