<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/maya_primary_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/view_background_top"
        android:background="@color/black_80_alpha"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view_camera_frame"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/kyc_simple_capture_app_bar_layout"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/maya_elevation_flat"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/maya_toolbar_view"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/maya_ic_navigation_white"
            app:subtitleTextAppearance="@style/CerebriBookLongRead.Secondary"
            app:titleTextAppearance="@style/JekoBoldTextBody.Primary">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolbar_content_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/maya_primary_white"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/toolbar_title_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/maya_kyc_take_id_photo_header"
                    android:maxLines="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/right_inset_space"
                    style="@style/JekoBoldTextBody.Primary"/>
                <TextView
                    android:textColor="@color/maya_primary_white"
                    android:gravity="center"
                    android:id="@+id/steps_indicator_text_view"
                    android:visibility="gone"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/JekoBoldLink.Primary"/>
                <View
                    android:id="@+id/right_inset_space"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:textColor="@color/maya_primary_white"
        android:gravity="center"
        android:id="@+id/text_view_position_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_kyc_simple_capture_text_view_frame_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kyc_simple_capture_app_bar_layout"
        style="@style/CerebriBoldTextBody"/>
    <TextView
        android:textColor="@color/maya_primary_green"
        android:gravity="center"
        android:id="@+id/text_view_document_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:layout_marginStart="@dimen/maya_margin_24"
        android:layout_marginEnd="@dimen/maya_margin_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_position_title"
        style="@style/CerebriBoldTextBody"/>
    <View
        android:id="@+id/view_camera_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_large"
        app:layout_constraintDimensionRatio="h,4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_document_title"/>
    <ImageView
        android:id="@+id/image_view_tap_area"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_bg_drawable_green_rounded_corner_border"
        app:layout_constraintBottom_toBottomOf="@+id/view_camera_frame"
        app:layout_constraintEnd_toEndOf="@+id/view_camera_frame"
        app:layout_constraintStart_toStartOf="@+id/view_camera_frame"
        app:layout_constraintTop_toTopOf="@+id/view_camera_frame"/>
    <TextView
        android:textSize="@dimen/maya_text_size_subline"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/text_view_feedback_label"
        android:background="@drawable/maya_bg_black_50_corner_radius_8"
        android:padding="@dimen/maya_margin_12"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/maya_margin_18"
        android:layout_marginEnd="@dimen/maya_margin_18"
        app:layout_constraintBottom_toBottomOf="@+id/view_camera_frame"
        app:layout_constraintEnd_toEndOf="@+id/view_camera_frame"
        app:layout_constraintStart_toStartOf="@+id/view_camera_frame"
        app:layout_constraintTop_toTopOf="@+id/view_camera_frame"/>
    <View
        android:id="@+id/view_background_bottom"
        android:background="@color/black_80_alpha"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_camera_frame"/>
    <TextView
        android:textColor="@color/maya_primary_white"
        android:id="@+id/text_view_focusing_label"
        android:padding="@dimen/maya_padding_5dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_kyc_simple_capture_status_focusing"
        app:layout_constraintBottom_toBottomOf="@+id/view_camera_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/JekoBoldTextBody.Primary"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_view_tips_for_capturing"
        android:background="@drawable/maya_bg_drawable_opacity_16_white_rounded_corner_border"
        android:padding="@dimen/maya_padding_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/constraint_layout_take_id_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:textColor="@color/ghost_white"
            android:id="@+id/text_view_capture_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            android:text="@string/maya_kyc_simple_capture_tips_header_v3"
            android:lineHeight="@dimen/maya_line_height_26sp"
            app:layout_constraintBottom_toTopOf="@+id/linear_layout_view_tips_for_capturing"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/CerebriBoldTextBody"/>
        <dOYHB6.lN8Dz0.d8NVX3
            android:orientation="vertical"
            android:id="@+id/linear_layout_view_tips_for_capturing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_2x_small"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_capture_tips"
            app:layout_constraintTop_toBottomOf="@+id/text_view_capture_tips"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_take_id_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_extra_large"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/image_view_capture_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/maya_ic_camera_capture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
