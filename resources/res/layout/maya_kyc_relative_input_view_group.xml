<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_separator_relatives_and_bank_roles"
        android:background="@color/maya_shades_of_grey_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/maya_stroke_width_small"
        android:layout_marginTop="@dimen/maya_margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="@color/maya_shades_of_grey_6"
        android:id="@+id/text_view_relatives_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:text="@string/maya_kyc_dosri_relatives_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_separator_relatives_and_bank_roles"
        style="@style/JekoOverlineBig"/>
    <TextView
        android:textColor="@color/maya_primary_green"
        android:id="@+id/text_view_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_cancel"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_relatives_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view_relatives_information"
        style="@style/CerebriBookSmallText"/>
    <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
        android:id="@+id/maya_input_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:hint="@string/maya_kyc_complete_personal_information_first_name_hint"
        android:maxLines="1"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_relatives_information"
        app:milLabel="@string/maya_kyc_complete_personal_information_first_name_label"
        style="@style/MayaInputLayoutProfile"/>
    <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
        android:id="@+id/maya_input_middle_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:hint="@string/maya_kyc_complete_personal_information_middle_name_hint"
        android:maxLines="1"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maya_input_first_name"
        app:milLabel="@string/maya_kyc_complete_personal_information_middle_name_label"
        style="@style/MayaInputLayoutProfile"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:textSize="@dimen/maya_text_size_long_read"
        android:textColor="@color/maya_shades_of_grey_5"
        android:id="@+id/checkbox_middle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:button="?attr/mayaDrawable_CommonCheckboxSelector"
        android:text="@string/maya_kyc_dosri_no_middle_name"
        android:fontFamily="@font/font_cerebri_sans_pro_book"
        android:paddingStart="@dimen/maya_margin_5"
        app:buttonCompat="?attr/mayaDrawable_CommonCheckboxSelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maya_input_middle_name"/>
    <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
        android:id="@+id/maya_input_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:hint="@string/maya_kyc_complete_personal_information_last_name_hint"
        android:maxLines="1"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_middle_name"
        app:milLabel="@string/maya_kyc_complete_personal_information_last_name_label"
        style="@style/MayaInputLayoutProfile"/>
    <com.paymaya.mayaui.common.view.widget.MayaDropDown
        android:id="@+id/maya_dropdown_relationship"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_16"
        android:layout_marginBottom="@dimen/maya_margin_small"
        android:hint="@string/maya_kyc_dosri_relationship_hint"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maya_input_last_name"
        app:mddLabel="@string/maya_kyc_dosri_relationship_label"
        style="@style/MayaDropDown.Profile"/>
</androidx.constraintlayout.widget.ConstraintLayout>
