<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:scrollbarSize="@dimen/maya_scrollbar_size_normal"
        android:scrollbarThumbVertical="@color/pma_theme_home_scrollbar_color"
        android:id="@+id/scroll_view_layout"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/maya_margin_large"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/constraint_layout_travel_saved_qr_ticket_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_title_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_medium"
                android:text="@string/maya_label_travel_operators_header_title"
                android:layout_marginStart="@dimen/maya_margin_large"
                android:layout_marginEnd="@dimen/maya_margin_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoBoldH4.Primary"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_operator_selection"
                android:background="@drawable/maya_bg_content_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/maya_margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title_header"
                app:layout_constraintVertical_bias="0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_travel_saved_qr_ticket_container"
        android:background="@drawable/maya_bg_content_border"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_large"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/image_view_travel_saved_qr_ticket_icon"
            android:layout_width="@dimen/maya_travel_operator_route_icon_size"
            android:layout_height="@dimen/maya_travel_operator_route_icon_size"
            android:layout_marginTop="@dimen/maya_margin_extra_normal"
            android:layout_marginBottom="@dimen/maya_margin_extra_normal"
            android:src="@drawable/maya_ic_other_gallery"
            android:scaleType="fitCenter"
            android:layout_marginStart="@dimen/maya_margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/image_view_travel_saved_qr_ticket_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/maya_margin_medium"
            android:layout_marginTop="@dimen/maya_margin_extra_normal"
            android:layout_marginRight="@dimen/maya_margin_medium"
            android:layout_marginBottom="@dimen/maya_margin_extra_normal"
            android:text="@string/maya_label_travel_saved_qr_tickets"
            android:layout_marginHorizontal="@dimen/maya_margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_view_travel_saved_qr_ticket_arrow"
            app:layout_constraintStart_toEndOf="@+id/image_view_travel_saved_qr_ticket_icon"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldTextBody.Primary"/>
        <ImageView
            android:id="@+id/image_view_travel_saved_qr_ticket_arrow"
            android:layout_width="@dimen/maya_travel_operator_route_icon_size"
            android:layout_height="@dimen/maya_travel_operator_route_icon_size"
            android:layout_marginTop="@dimen/maya_margin_extra_normal"
            android:layout_marginBottom="@dimen/maya_margin_extra_normal"
            android:src="@drawable/maya_ic_chevron_right_grey"
            android:layout_marginEnd="@dimen/maya_margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
