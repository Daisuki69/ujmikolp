<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_limits_banner_card_view"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/pma_radius_16dp"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/maya_opacity_purple_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/banner_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:text="@string/maya_label_account_limits_banner_title"
            android:layout_marginStart="@dimen/maya_margin_normal"
            android:layout_marginEnd="@dimen/maya_margin_normal"
            app:layout_constraintEnd_toStartOf="@+id/banner_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldTextBody.Primary"/>
        <TextView
            android:id="@+id/banner_subtitle_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_small"
            android:text="@string/maya_label_account_limits_banner_subtitle"
            android:layout_marginStart="@dimen/maya_margin_normal"
            android:layout_marginEnd="@dimen/maya_margin_large"
            app:layout_constraintEnd_toStartOf="@+id/banner_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner_title_text_view"
            style="@style/JekoRegularSmallText.Primary"/>
        <TextView
            android:id="@+id/banner_cta_text_view"
            android:background="@color/maya_opacity_purple_25"
            android:paddingLeft="@dimen/maya_margin_normal"
            android:paddingTop="@dimen/maya_padding_medium"
            android:paddingRight="@dimen/maya_margin_normal"
            android:paddingBottom="@dimen/maya_padding_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maya_label_account_limits_banner_cta"
            android:paddingHorizontal="@dimen/maya_margin_normal"
            android:paddingVertical="@dimen/maya_padding_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner_image_view"
            app:layout_constraintVertical_bias="1"
            style="@style/JekoBoldLink.Primary"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/banner_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f080290"
            android:layout_marginEnd="@dimen/maya_margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="0x7f080290"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
