<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_layout_pma_view_shop_v3_confirmation_slider_background"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/pma_theme_home_text_color_primary"
        android:id="@+id/title_text_view_pma_view_shop_v3_confirmation_slider_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_extra_small"
        android:text="@string/pma_label_shop_v3_shop_confirmation_slider_background_title"
        app:layout_constraintBottom_toTopOf="@+id/subtitle_text_view_pma_view_shop_v3_confirmation_slider_instructions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/CaptionDark"/>
    <TextView
        android:textColor="@color/pma_theme_home_text_color_secondary"
        android:id="@+id/subtitle_text_view_pma_view_shop_v3_confirmation_slider_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pma_margin_extra_small"
        android:text="@string/pma_label_shop_v3_shop_confirmation_slider_background_subtitle"
        android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view_pma_view_shop_v3_confirmation_slider_instructions"
        style="@style/DetailDarkLight"/>
</androidx.constraintlayout.widget.ConstraintLayout>
