<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:scrollbarSize="@dimen/maya_scrollbar_size_normal"
        android:scrollbarThumbVertical="@color/pma_theme_home_scrollbar_color"
        android:id="@+id/scroll_view_travel_confirmation"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_travel_confirmation_note"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_confirm_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_travel_confirm_payment_title"
                android:layout_marginStart="@dimen/maya_margin_large"
                android:layout_marginEnd="@dimen/maya_margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoBoldTextBody.Primary"/>
            <TextView
                android:id="@+id/text_view_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:layout_marginStart="@dimen/maya_margin_large"
                android:layout_marginEnd="@dimen/maya_margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_confirm_payment"
                style="@style/JekoBoldH4.Primary"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline_labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>
            <View
                android:id="@+id/view_payment_background"
                android:background="@drawable/maya_bg_content_information"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:layout_marginStart="@dimen/maya_margin_large"
                android:layout_marginEnd="@dimen/maya_margin_large"
                app:layout_constraintBottom_toBottomOf="@+id/view_bottom_space_payment_content"
                app:layout_constraintTop_toBottomOf="@+id/text_view_total_amount"
                app:layout_goneMarginTop="@dimen/maya_margin_normal"/>
            <TextView
                android:id="@+id/text_view_source_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:text="@string/maya_label_receipt_payment_method"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_labels"
                app:layout_constraintStart_toStartOf="@+id/view_payment_background"
                app:layout_constraintTop_toTopOf="@+id/view_payment_background"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_source_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_payment_method_my_wallet"
                android:includeFontPadding="false"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintLeft_toRightOf="@+id/guideline_labels"
                app:layout_constraintRight_toRightOf="@+id/view_payment_background"
                app:layout_constraintTop_toTopOf="@+id/text_view_source_label"
                style="@style/JekoSemiBoldLink.Primary"/>
            <TextView
                android:id="@+id/text_view_source_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_payment_background"
                app:layout_constraintStart_toStartOf="@+id/text_view_source_value"
                app:layout_constraintTop_toBottomOf="@+id/text_view_source_value"
                style="@style/JekoSemiBoldLink.Tertiary"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="text_view_source_label,             text_view_source_number"/>
            <View
                android:id="@+id/view_divider_source"
                android:layout_width="0dp"
                android:layout_height="@dimen/maya_height_divider_normal"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_payment_background"
                app:layout_constraintStart_toStartOf="@+id/view_payment_background"
                app:layout_constraintTop_toBottomOf="@+id/barrier_source"
                style="@style/MayaContentViewDivider"/>
            <TextView
                android:id="@+id/text_view_available_balance_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:text="@string/maya_label_receipt_available_balance"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_labels"
                app:layout_constraintStart_toStartOf="@+id/view_payment_background"
                app:layout_constraintTop_toTopOf="@+id/view_divider_source"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_available_balance_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_payment_background"
                app:layout_constraintStart_toStartOf="@+id/guideline_labels"
                app:layout_constraintTop_toTopOf="@+id/text_view_available_balance_label"
                style="@style/JekoSemiBoldLink.Primary"/>
            <View
                android:id="@+id/view_bottom_space_payment_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_payment_background"
                app:layout_constraintStart_toStartOf="@+id/view_payment_background"
                app:layout_constraintTop_toBottomOf="@+id/text_view_available_balance_label"/>
            <View
                android:id="@+id/view_information_background"
                android:background="@drawable/maya_bg_content_information"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:layout_marginStart="@dimen/maya_margin_large"
                android:layout_marginEnd="@dimen/maya_margin_large"
                app:layout_constraintBottom_toBottomOf="@+id/view_bottom_space_information_content"
                app:layout_constraintTop_toBottomOf="@+id/view_payment_background"
                app:layout_goneMarginTop="@dimen/maya_margin_normal"/>
            <TextView
                android:id="@+id/text_view_operator_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:text="@string/maya_label_travel_operator"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_labels"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toTopOf="@+id/view_information_background"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_operator_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintLeft_toRightOf="@+id/guideline_labels"
                app:layout_constraintRight_toRightOf="@+id/view_information_background"
                app:layout_constraintTop_toTopOf="@+id/text_view_operator_label"
                style="@style/JekoSemiBoldLink.Primary"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_operator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="text_view_operator_label,                 text_view_operator_value"/>
            <View
                android:id="@+id/view_divider_operator"
                android:layout_width="0dp"
                android:layout_height="@dimen/maya_height_divider_normal"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toBottomOf="@+id/barrier_operator"
                style="@style/MayaContentViewDivider"/>
            <TextView
                android:id="@+id/text_view_route_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:text="@string/maya_label_travel_route"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_labels"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toTopOf="@+id/view_divider_operator"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_route_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/guideline_labels"
                app:layout_constraintTop_toTopOf="@+id/text_view_route_label"
                style="@style/JekoSemiBoldLink.Primary"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="text_view_route_label,                 text_view_route_value"/>
            <View
                android:id="@+id/view_divider_route"
                android:layout_width="0dp"
                android:layout_height="@dimen/maya_height_divider_normal"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toBottomOf="@+id/barrier_route"
                style="@style/MayaContentViewDivider"/>
            <TextView
                android:id="@+id/text_view_origin_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:text="@string/maya_label_travel_origin"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_labels"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toTopOf="@+id/view_divider_route"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_origin_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/guideline_labels"
                app:layout_constraintTop_toTopOf="@+id/text_view_origin_label"
                style="@style/JekoSemiBoldLink.Primary"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="text_view_origin_label,                 text_view_origin_value"/>
            <View
                android:id="@+id/view_divider_origin"
                android:layout_width="0dp"
                android:layout_height="@dimen/maya_height_divider_normal"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toBottomOf="@+id/barrier_origin"
                style="@style/MayaContentViewDivider"/>
            <TextView
                android:id="@+id/text_view_destination_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:text="@string/maya_label_travel_destination"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_labels"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toTopOf="@+id/view_divider_origin"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_destination_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/guideline_labels"
                app:layout_constraintTop_toTopOf="@+id/text_view_destination_label"
                style="@style/JekoSemiBoldLink.Primary"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="text_view_destination_label,                 text_view_destination_value"/>
            <View
                android:id="@+id/view_divider_destination"
                android:layout_width="0dp"
                android:layout_height="@dimen/maya_height_divider_normal"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toBottomOf="@+id/barrier_destination"
                style="@style/MayaContentViewDivider"/>
            <TextView
                android:id="@+id/text_view_fare_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:text="@string/maya_label_travel_fare"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_labels"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toTopOf="@+id/view_divider_destination"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_fare_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/guideline_labels"
                app:layout_constraintTop_toTopOf="@+id/text_view_fare_label"
                style="@style/JekoSemiBoldLink.Primary"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_fare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="text_view_fare_label,                 text_view_fare_value"/>
            <View
                android:id="@+id/view_divider_fare"
                android:layout_width="0dp"
                android:layout_height="@dimen/maya_height_divider_normal"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toBottomOf="@+id/barrier_fare"
                style="@style/MayaContentViewDivider"/>
            <TextView
                android:id="@+id/text_view_convenience_fee_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:text="@string/maya_label_convenience_fee"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_labels"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toTopOf="@+id/view_divider_fare"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/text_view_convenience_fee_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/guideline_labels"
                app:layout_constraintTop_toTopOf="@+id/text_view_convenience_fee_label"
                style="@style/JekoSemiBoldLink.Primary"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_convenience_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="text_view_convenience_fee_label,                 text_view_convenience_fee_value"/>
            <View
                android:id="@+id/view_bottom_space_information_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/maya_margin_extra_normal"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/view_information_background"
                app:layout_constraintStart_toStartOf="@+id/view_information_background"
                app:layout_constraintTop_toBottomOf="@+id/barrier_convenience_fee"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:id="@+id/image_view_information_icon"
        android:layout_width="@dimen/maya_input_layout_helper_icon_length"
        android:layout_height="@dimen/maya_input_layout_helper_icon_length"
        android:src="@drawable/maya_ic_information_primary_small"
        android:scaleType="center"
        android:layout_marginStart="@dimen/maya_margin_large"
        app:layout_constraintEnd_toStartOf="@+id/text_view_travel_confirmation_note"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view_travel_confirmation_note"/>
    <TextView
        android:id="@+id/text_view_travel_confirmation_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:text="@string/maya_label_travel_confirmation_note"
        android:layout_marginStart="@dimen/maya_margin_extra_small"
        android:layout_marginEnd="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/button_pay_now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_information_icon"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view_travel_confirmation"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/CerebriMediumSmallText.Secondary"/>
    <Button
        android:id="@+id/button_pay_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:text="@string/maya_label_pay_now"
        android:layout_marginStart="@dimen/maya_margin_large"
        android:layout_marginEnd="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_travel_confirmation_note"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
