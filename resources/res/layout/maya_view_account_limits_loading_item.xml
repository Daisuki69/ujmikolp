<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_light"
    android:layout_width="match_parent"
    android:layout_height="@dimen/maya_view_account_limits_loading_height">
    <include
        android:id="@+id/placeholder_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.3"
        layout="@layout/maya_view_shimmer_rounded"/>
    <include
        android:id="@+id/placeholder_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_small"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="@+id/placeholder_1"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_1"
        app:layout_constraintWidth_percent="0.5"
        layout="@layout/maya_view_shimmer_rounded"/>
    <include
        android:id="@+id/placeholder_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/placeholder_1"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_2"
        app:layout_constraintWidth_percent="0.4"
        layout="@layout/maya_view_shimmer_rounded"/>
    <include
        android:id="@+id/placeholder_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/placeholder_1"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_3"
        app:layout_constraintWidth_percent="0.9"
        layout="@layout/maya_view_shimmer_rounded"/>
    <include
        android:id="@+id/placeholder_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/placeholder_1"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_4"
        app:layout_constraintWidth_percent="0.6"
        layout="@layout/maya_view_shimmer_rounded"/>
</androidx.constraintlayout.widget.ConstraintLayout>
