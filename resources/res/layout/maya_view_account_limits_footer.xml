<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/maya_padding_extra_large"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/info_icon_image_view"
        android:layout_width="@dimen/maya_icon_size_length_small"
        android:layout_height="@dimen/maya_icon_size_length_small"
        android:src="@drawable/maya_ic_information"
        android:layout_marginStart="@dimen/maya_margin_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/limits_reset_text_view"/>
    <com.paymaya.common.widget.HtmlTextView
        android:id="@+id/limits_reset_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginStart="@dimen/maya_margin_6"
        android:layout_marginEnd="@dimen/maya_margin_large"
        app:htmlUnderline="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/info_icon_image_view"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoSemiBoldSmallText.Secondary"/>
    <include
        android:id="@+id/complete_account_banner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_large"
        android:layout_marginStart="@dimen/maya_margin_large"
        android:layout_marginEnd="@dimen/maya_margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limits_reset_text_view"
        layout="@layout/maya_view_account_limits_banner_complete_account"/>
</androidx.constraintlayout.widget.ConstraintLayout>
