<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_contact_reference_info_banner"
        android:background="@drawable/maya_bg_no_border_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_contact">
        <ImageView
            android:id="@+id/image_view_contact_reference_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/maya_ic_information_warning"
            android:layout_marginStart="@dimen/maya_margin_extra_normal"
            android:layout_marginEnd="@dimen/maya_margin_extra_small"
            app:layout_constraintEnd_toStartOf="@+id/text_view_contact_reference_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_view_contact_reference_info"/>
        <com.paymaya.common.widget.HtmlTextView
            android:textColorLink="@color/grown_green"
            android:id="@+id/text_view_contact_reference_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_normal"
            android:layout_marginBottom="@dimen/maya_margin_normal"
            android:text="@string/maya_label_credit_contact_reference_banner_text"
            android:layout_marginStart="@dimen/maya_margin_extra_small"
            android:layout_marginEnd="@dimen/maya_margin_normal"
            app:htmlUnderline="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view_contact_reference_info"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/CerebriBookSmallText.Secondary200"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
