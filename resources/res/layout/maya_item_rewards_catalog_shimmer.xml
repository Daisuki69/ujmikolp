<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/maya_view_catalog_container_width"
    android:layout_height="@dimen/maya_view_catalog_container_height"
    app:cardCornerRadius="@dimen/maya_radius_20dp"
    app:cardElevation="0dp">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/maya_loading_shimmer"
        app:lottie_scale="1"
        app:srcCompat="@drawable/maya_bg_shimmer_rounded_large"/>
</androidx.cardview.widget.CardView>
