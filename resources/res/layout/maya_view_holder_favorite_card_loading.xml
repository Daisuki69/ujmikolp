<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_container"
    android:background="@drawable/maya_bg_content_border"
    android:layout_width="@dimen/maya_view_holder_bank_transfer_favorite_card_min_width"
    android:layout_height="@dimen/maya_view_holder_favorite_card_min_height">
    <include
        android:id="@+id/icon_lottie_animation_view"
        android:layout_width="@dimen/maya_view_holder_favorite_card_icon_size"
        android:layout_height="@dimen/maya_view_holder_favorite_card_icon_size"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/maya_view_shimmer_rounded_2"/>
    <include
        android:id="@+id/text1_lottie_animation_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/text2_lottie_animation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/icon_lottie_animation_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        layout="@layout/maya_view_shimmer_rounded"/>
    <include
        android:id="@+id/text2_lottie_animation_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/text3_lottie_animation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/icon_lottie_animation_view"
        app:layout_constraintTop_toBottomOf="@+id/text1_lottie_animation_view"
        app:layout_constraintWidth_percent="0.45"
        layout="@layout/maya_view_shimmer_rounded"/>
    <include
        android:id="@+id/text3_lottie_animation_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/icon_lottie_animation_view"
        app:layout_constraintTop_toBottomOf="@+id/text2_lottie_animation_view"
        app:layout_constraintWidth_percent="0.45"
        layout="@layout/maya_view_shimmer_rounded"/>
</androidx.constraintlayout.widget.ConstraintLayout>
