<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_money_container"
    android:background="?attr/mayaColorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="?attr/mayaColorBackgroundWithOpacity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <dOYHB6.lN8Dz0.gDiks7
            android:id="@+id/content_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/maya_margin_medium"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/generate_custom_code_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/screenshot_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_container"
                        android:background="?attr/mayaColorBackgroundPrimary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/pma_margin_large"
                        android:layout_marginTop="@dimen/pma_margin_40dp"
                        android:layout_marginRight="@dimen/pma_margin_large"
                        android:layout_marginBottom="@dimen/pma_margin_large"
                        android:layout_marginHorizontal="@dimen/pma_margin_large"
                        app:cardCornerRadius="@dimen/pma_radius_16dp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:ellipsize="end"
                                android:gravity="center"
                                android:id="@+id/title_text_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/pma_margin_normal"
                                android:layout_marginTop="@dimen/pma_margin_40dp"
                                android:layout_marginRight="@dimen/pma_margin_normal"
                                android:maxLines="2"
                                android:maxLength="61"
                                android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/pma_margin_normal"
                                app:autoSizeMaxTextSize="@dimen/pma_text_size_title2"
                                app:autoSizeMinTextSize="@dimen/pma_text_size_body"
                                app:autoSizeStepGranularity="@dimen/pma_auto_size_step_granularity_1sp"
                                app:autoSizeTextType="uniform"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth="wrap_content_constrained"
                                style="@style/JekoBoldSubline.Primary"/>
                            <TextView
                                android:gravity="center"
                                android:id="@+id/text_view_username"
                                android:visibility="gone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/maya_margin_extra_small"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/title_text_view"
                                style="@style/JekoSemiBoldLongRead.Secondary"/>
                            <TextView
                                android:gravity="center"
                                android:id="@+id/mobile_number_container"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_view_username"
                                style="@style/JekoSemiBoldLongRead.Secondary"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/verified_seller_container"
                                android:background="@drawable/maya_bg_verified_seller"
                                android:padding="@dimen/pma_padding_10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/pma_margin_extra_small"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/mobile_number_container">
                                <ImageView
                                    android:id="@+id/verified_seller_info_icon_image_view"
                                    android:layout_width="@dimen/pma_request_money_account_status_badge_length"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/pma_ic_badge_account_verified_seller_white"
                                    android:scaleType="fitCenter"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Verified seller"
                                    android:layout_marginStart="@dimen/pma_margin_4dp"
                                    android:layout_marginEnd="@dimen/pma_margin_4dp"
                                    app:layout_constraintBottom_toBottomOf="@+id/verified_seller_info_icon_image_view"
                                    app:layout_constraintStart_toEndOf="@+id/verified_seller_info_icon_image_view"
                                    app:layout_constraintTop_toTopOf="@+id/verified_seller_info_icon_image_view"
                                    style="@style/JekoBoldSmallText.PrimaryNegative"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <ImageView
                                android:id="@+id/qr_code_image"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginLeft="@dimen/pma_margin_52dp"
                                android:layout_marginTop="@dimen/pma_margin_normal"
                                android:layout_marginRight="@dimen/pma_margin_52dp"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                android:layout_marginHorizontal="@dimen/pma_margin_52dp"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/verified_seller_container"/>
                            <TextView
                                android:gravity="center"
                                android:id="@+id/text_view_transfer_fees_apply"
                                android:background="@drawable/maya_bg_drawable_gray_rounded_corner_border"
                                android:paddingLeft="@dimen/maya_padding_medium"
                                android:paddingTop="@dimen/maya_padding_extra_small"
                                android:paddingRight="@dimen/maya_padding_medium"
                                android:paddingBottom="@dimen/maya_padding_extra_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/maya_label_transfer_fees_may_apply"
                                android:textAlignment="center"
                                android:paddingHorizontal="@dimen/maya_padding_medium"
                                android:paddingVertical="@dimen/maya_padding_extra_small"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/qr_code_image"
                                style="@style/CerebriBookSmallText.Secondary"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/custom_values_container"
                                android:padding="@dimen/pma_padding_medium"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/text_view_transfer_fees_apply">
                                <TextView
                                    android:gravity="center"
                                    android:id="@+id/amount_text_view"
                                    android:visibility="gone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    app:layout_constraintBottom_toTopOf="@+id/purpose_text_view"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    style="@style/JekoSemiBoldH5.Primary"/>
                                <TextView
                                    android:gravity="center"
                                    android:id="@+id/purpose_text_view"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="@dimen/maya_margin_extra_small"
                                    android:maxLines="2"
                                    android:textAlignment="center"
                                    app:autoSizeMaxTextSize="@dimen/pma_text_size_body2"
                                    app:autoSizeMinTextSize="@dimen/pma_text_size_caption"
                                    app:autoSizeStepGranularity="@dimen/pma_auto_size_step_granularity_1sp"
                                    app:autoSizeTextType="uniform"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHeight="wrap_content_constrained"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/amount_text_view"
                                    app:layout_goneMarginBottom="@dimen/pma_margin_extra_large"
                                    app:layout_goneMarginTop="0dp"
                                    style="@style/JekoSemiBoldLongRead.Tertiary"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <ImageView
                                android:id="@+id/dotted_line"
                                android:background="@drawable/maya_bg_horizontal_dotted_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/maya_qr_request_money_divider_height"
                                app:layout_constraintTop_toBottomOf="@+id/custom_values_container"
                                app:layout_goneMarginTop="@dimen/maya_margin_normal"/>
                            <ImageView
                                android:id="@+id/maya_logo"
                                android:paddingBottom="@dimen/pma_margin_14dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/pma_margin_normal"
                                android:src="@drawable/pma_ic_maya_logo_revamp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/dotted_line"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <dOYHB6.lN8Dz0.yf3D09
                        android:background="@drawable/maya_ic_app_icon_circle"
                        android:layout_width="@dimen/maya_qr_request_money_icon_header_size"
                        android:layout_height="@dimen/maya_qr_request_money_icon_header_size"
                        app:layout_constraintBottom_toTopOf="@+id/card_container"
                        app:layout_constraintEnd_toEndOf="@+id/card_container"
                        app:layout_constraintStart_toStartOf="@+id/card_container"
                        app:layout_constraintTop_toTopOf="@+id/card_container"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </dOYHB6.lN8Dz0.gDiks7>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/custom_qr_options_group"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="generate_custom_code_button,share_button"/>
        <Button
            android:id="@+id/generate_custom_code_button"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/pma_margin_normal"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:layout_marginBottom="@dimen/pma_margin_medium"
            android:text="@string/pma_label_generate_custom_qr_code"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintBottom_toTopOf="@+id/share_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/MayaButtonPrimaryLarge.Black"/>
        <Button
            android:id="@+id/share_button"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/pma_margin_normal"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:layout_marginBottom="@dimen/pma_margin_large"
            android:text="@string/pma_label_share_save"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginRight="@dimen/pma_margin_normal"
            style="@style/MayaButtonSecondaryLarge"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
