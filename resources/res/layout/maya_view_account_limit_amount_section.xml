<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_view_account_limit_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_information"
        app:layout_constraintEnd_toStartOf="@+id/text_view_account_limit_remaining_amount"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/text_view_account_limit_remaining_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_account_limits_remaining_cash_in_format"
        android:layout_marginStart="@dimen/pma_margin_extra_small"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_account_limit_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_account_limit_information"
        app:layout_constraintTop_toTopOf="@+id/image_view_account_limit_information"
        style="@style/JekoBoldSmallText.Primary"/>
    <com.paymaya.common.widget.HtmlTextView
        android:id="@+id/text_view_account_limit_learn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:text="@string/maya_label_account_limits_learn_more"
        app:htmlUnderline="false"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_view_account_limit_remaining_amount"
        app:layout_constraintTop_toBottomOf="@+id/text_view_account_limit_remaining_amount"
        style="@style/JekoSemiBoldSmallText.Tertiary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
