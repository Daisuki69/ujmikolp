<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <dOYHB6.lN8Dz0.gDiks7
        android:id="@+id/scrollable_nested_scroll_view"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/next_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
            <TextView
                android:id="@+id/text_view_form_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_medium"
                android:text="@string/maya_user_update_work_details_title"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoBoldH4.Primary"/>
            <TextView
                android:textColor="@color/maya_shades_of_grey_6"
                android:id="@+id/text_view_form_sub_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_user_update_work_details_subtitle"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/text_view_form_header"
                style="@style/CerebriBookLongRead"/>
            <com.paymaya.mayaui.common.view.widget.MayaDropDown
                android:id="@+id/maya_dropdown_nature_of_work"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_16"
                android:hint="@string/maya_work_profile_nature_of_work_dropdown_hint"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/text_view_form_sub_header"
                app:mddLabel="@string/maya_work_profile_nature_of_work_dropdown_label"
                style="@style/MayaDropDown.Profile"/>
            <com.paymaya.mayaui.common.view.widget.MayaDropDown
                android:id="@+id/maya_dropdown_job_title"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_16"
                android:hint="@string/maya_work_profile_job_title_dropdown_hint"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/input_monthly_pay"
                app:mddLabel="@string/maya_work_profile_job_title_dropdown_label"
                style="@style/MayaDropDown.Profile"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_monthly_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_user_update_work_monthly_salary"
                android:maxLines="1"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/maya_dropdown_nature_of_work"
                app:milLabel="@string/maya_user_update_work_label_monthly_salary"
                style="@style/MayaInputLayoutProfile"/>
            <com.paymaya.mayaui.common.view.widget.MayaDropDown
                android:id="@+id/maya_dropdown_source_of_income"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_16"
                android:hint="@string/maya_work_profile_source_of_income_dropdown_hint"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/maya_dropdown_job_title"
                app:mddLabel="@string/maya_work_profile_source_of_income_dropdown_label"
                style="@style/MayaDropDown.Profile"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_company_name"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_user_update_work_company_name"
                android:maxLines="1"
                android:inputType="textNoSuggestions"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/maya_dropdown_source_of_income"
                app:milLabel="@string/maya_user_update_work_label_company_name"
                style="@style/MayaInputLayoutProfile"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </dOYHB6.lN8Dz0.gDiks7>
    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:layout_marginBottom="@dimen/pma_margin_normal"
        android:text="@string/maya_label_button_next"
        android:layout_marginStart="@dimen/maya_margin_24"
        android:layout_marginEnd="@dimen/maya_margin_24"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
