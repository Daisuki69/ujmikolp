<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/form_constraint_layout"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/label_text_view"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_2x_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CerebriBookLongRead.Tertiary"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_text_view">
        <androidx.appcompat.widget.AppCompatEditText
            android:textColorHint="@color/maya_shades_of_grey_4"
            android:gravity="start"
            android:id="@+id/input_edit_text"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/CerebriMediumH5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <dOYHB6.lN8Dz0.d8NVX3
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:id="@+id/error_container"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_content_container">
        <ImageView
            android:id="@+id/error_info_icon"
            android:visibility="gone"
            android:layout_width="@dimen/maya_icon_size_length_medium"
            android:layout_height="@dimen/maya_icon_size_length_medium"
            android:src="@drawable/maya_ic_information_error_badge"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/maya_margin_2x_small"/>
        <TextView
            android:id="@+id/error_text_view"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CerebriBookLongRead.Error"/>
    </dOYHB6.lN8Dz0.d8NVX3>
</androidx.constraintlayout.widget.ConstraintLayout>
