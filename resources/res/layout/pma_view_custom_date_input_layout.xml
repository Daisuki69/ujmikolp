<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/revamp_date_edit_text_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Heading04Standard"/>
    <com.paymaya.ui.common.view.widget.CustomInputLayout
        android:theme="@style/PmaEditTextLineDarkTheme"
        android:id="@+id/day_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/pma_hint_day"
        android:layout_marginEnd="@dimen/pma_margin_extra_small"
        app:cilShowLabel="false"
        app:layout_constraintEnd_toStartOf="@+id/month_input_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/revamp_date_edit_text_label"
        app:layout_goneMarginEnd="@dimen/pma_margin_0dp"/>
    <com.paymaya.ui.common.view.widget.CustomInputLayout
        android:theme="@style/PmaEditTextLineDarkTheme"
        android:id="@+id/month_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/pma_hint_month"
        android:layout_marginStart="@dimen/pma_margin_extra_small"
        android:layout_marginEnd="@dimen/pma_margin_extra_small"
        app:cilShowLabel="false"
        app:layout_constraintEnd_toStartOf="@+id/year_input_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/day_input_layout"
        app:layout_constraintTop_toBottomOf="@+id/revamp_date_edit_text_label"
        app:layout_goneMarginEnd="@dimen/pma_margin_0dp"
        app:layout_goneMarginStart="@dimen/pma_margin_0dp"/>
    <com.paymaya.ui.common.view.widget.CustomInputLayout
        android:theme="@style/PmaEditTextLineDarkTheme"
        android:id="@+id/year_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/pma_hint_year"
        android:layout_marginStart="@dimen/pma_margin_extra_small"
        app:cilShowLabel="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/month_input_layout"
        app:layout_constraintTop_toBottomOf="@+id/revamp_date_edit_text_label"
        app:layout_goneMarginStart="@dimen/pma_margin_0dp"/>
</merge>
