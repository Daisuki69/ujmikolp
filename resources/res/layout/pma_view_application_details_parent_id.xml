<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_view_group_pma_view_application_details_parent_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_pma_view_application_details_parent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.45"/>
    <TextView
        android:id="@+id/parent_id_label_text_view_pma_view_application_details_parent_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/pma_margin_small"
        android:text="@string/pma_label_parent_id"
        android:layout_marginEnd="@dimen/pma_margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline_pma_view_application_details_parent_id"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/BodyDarkLight"/>
    <ImageView
        android:id="@+id/parent_id_image_view_pma_view_application_details_parent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_small"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:maxWidth="@dimen/pma_ekyc_photo_preview_max_width"
        android:maxHeight="@dimen/pma_ekyc_photo_preview_max_height"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_pma_view_application_details_parent_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/parent_id_label_text_view_pma_view_application_details_parent_id"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/parent_id_barrier_pma_view_application_details_parent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="parent_id_label_text_view_pma_view_application_details_parent_id,             parent_id_image_view_pma_view_application_details_parent_id"/>
    <View
        android:id="@+id/parent_id_border_pma_view_application_details_parent_id"
        android:background="@color/pma_border_darker"
        android:layout_width="0dp"
        android:layout_height="@dimen/pma_height_divider_small"
        android:layout_marginTop="@dimen/pma_margin_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parent_id_image_view_pma_view_application_details_parent_id"/>
</androidx.constraintlayout.widget.ConstraintLayout>
