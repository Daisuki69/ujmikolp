<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/maya_margin_large"
    android:layout_marginRight="@dimen/maya_margin_large">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/continue_transfer_button"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/maya_padding_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/transfer_to_wallet_header_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_label_transfer_to_wallet_enhance"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoBoldH4.Primary"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:background="@drawable/maya_bg_content_border_dashboard"
                android:padding="@dimen/maya_padding_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintTop_toBottomOf="@+id/transfer_to_wallet_header_text_view"
                style="@style/MayaContentViewDivider">
                <TextView
                    android:id="@+id/text_view_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/maya_label_transfer_to_wallet_from"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/JekoOverlineBig.Tertiary"/>
                <TextView
                    android:id="@+id/text_view_promissory_note_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maya_margin_medium"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_account"
                    style="@style/JekoBoldSmallText.Tertiary"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_account_icon"
                    android:layout_width="@dimen/maya_icon_size_length_medium"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/maya_margin_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_from"
                    app:srcCompat="0x7f08032d"/>
                <TextView
                    android:id="@+id/text_view_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maya_margin_medium"
                    android:text="@string/maya_label_transfer_to_wallet_maya_credit"
                    android:layout_marginStart="@dimen/maya_margin_small"
                    app:layout_constraintStart_toEndOf="@+id/image_view_account_icon"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_from"
                    style="@style/JekoBoldTextBody.Primary"/>
                <TextView
                    android:id="@+id/text_view_available_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maya_margin_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@+id/text_view_account"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_from"
                    style="@style/JekoBoldTextBody.Primary"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/transfer_amount_maya_input_layout"
                android:paddingBottom="@dimen/maya_margin_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_label_transfer_to_wallet_enter_amount"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                app:milLabel="@string/maya_label_transfer_to_wallet_amount"
                style="@style/MayaInputLayoutDefault"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/continue_transfer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:text="@string/maya_label_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
