<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_shop_provider_products_left_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_shop_provider_products_right_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/spring_view_shop_provider_products_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.core.widget.NestedScrollView
            android:scrollbarThumbVertical="@drawable/maya_bg_scrollbar_grey_quaternary"
            android:id="@+id/scroll_view_shop_provider_products_container"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@+id/recycler_view_shop_provider_products_list"
                android:background="@drawable/maya_bg_content_border"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_large"
                android:layout_marginRight="@dimen/maya_margin_large"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_marginHorizontal="@dimen/maya_margin_large"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </androidx.core.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>
    <ImageView
        android:id="@+id/image_view_shop_provider_products_no_shop_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="0x7f0802e8"
        app:layout_constraintBottom_toTopOf="@+id/text_view_shop_provider_products_no_shop_products_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/text_view_shop_provider_products_no_shop_products_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_product_list_no_products_title"
        app:layout_constraintBottom_toTopOf="@+id/text_view_shop_provider_products_no_shop_products_description"
        app:layout_constraintEnd_toEndOf="@+id/guideline_shop_provider_products_right_margin"
        app:layout_constraintStart_toStartOf="@+id/guideline_shop_provider_products_left_margin"
        app:layout_constraintTop_toBottomOf="@+id/image_view_shop_provider_products_no_shop_products"
        style="@style/JekoBoldH5.Primary"/>
    <TextView
        android:id="@+id/text_view_shop_provider_products_no_shop_products_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_label_product_list_no_products_desc"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline_shop_provider_products_right_margin"
        app:layout_constraintStart_toStartOf="@+id/guideline_shop_provider_products_left_margin"
        app:layout_constraintTop_toBottomOf="@+id/text_view_shop_provider_products_no_shop_products_title"
        style="@style/CerebriBookLink.Secondary"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/view_group_shop_provider_products_no_products"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="image_view_shop_provider_products_no_shop_products,         text_view_shop_provider_products_no_shop_products_title,         text_view_shop_provider_products_no_shop_products_description"/>
</androidx.constraintlayout.widget.ConstraintLayout>
