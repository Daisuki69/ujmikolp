<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shop_list_most_popular_item_container"
    android:background="?attr/mayaContentBorderShadowCard"
    android:layout_width="@dimen/maya_shop_home_box_width"
    android:layout_height="@dimen/maya_shop_home_box_height"
    android:paddingStart="@dimen/maya_padding_2x_small"
    android:paddingEnd="@dimen/maya_padding_2x_small">
    <ImageView
        android:id="@+id/shop_most_popular_product_icon_image_view"
        android:background="@drawable/maya_bg_circle_icon"
        android:padding="@dimen/maya_padding_7dp"
        android:layout_width="@dimen/maya_shop_buy_again_purchase_card_icon_size"
        android:layout_height="@dimen/maya_shop_buy_again_purchase_card_icon_size"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:src="0x7f08050e"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/shop_most_popular_product_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_normal"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:layout_marginRight="@dimen/maya_margin_normal"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginHorizontal="@dimen/maya_margin_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_most_popular_product_icon_image_view"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/JekoBoldTextBody.Primary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/shop_most_popular_product_description_snippet_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_normal"
        android:layout_marginRight="@dimen/maya_margin_normal"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginHorizontal="@dimen/maya_margin_normal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_most_popular_product_name_text_view"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/JekoSemiBoldLink.Tertiary"/>
    <View
        android:id="@+id/voucher_details_divider_1"
        android:background="?attr/mayaColorDividerBackgroundPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_height_divider_normal"
        android:layout_marginLeft="@dimen/maya_margin_normal"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:layout_marginRight="@dimen/maya_margin_normal"
        android:layout_marginHorizontal="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_most_popular_product_description_snippet_text_view"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/shop_most_popular_product_price_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voucher_details_divider_1"
        style="@style/JekoBoldTextBody.Primary"/>
    <TextView
        android:ellipsize="none"
        android:id="@+id/shop_most_popular_product_previous_price_text_view"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginStart="@dimen/maya_margin_extra_small"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="@+id/shop_most_popular_product_price_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/shop_most_popular_product_price_text_view"
        app:layout_constraintTop_toTopOf="@+id/shop_most_popular_product_price_text_view"
        style="@style/JekoRegularSmallText.Tertiary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
