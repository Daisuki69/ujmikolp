<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shop_provider_container_card_view"
    android:background="?attr/mayaContentBorderShadowCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/maya_shop_provider_main_card_height">
    <ImageView
        android:id="@+id/shop_provider_icon_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/maya_margin_normal"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/shop_provider_divider_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/shop_provider_placeholder_icon_image_view"
        android:layout_width="@dimen/maya_shop_provider_placeholder_size"
        android:layout_height="@dimen/maya_shop_provider_placeholder_size"
        android:layout_margin="@dimen/maya_margin_normal"
        android:src="?attr/mayaShopDefaultIcon"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/shop_provider_divider_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/shop_provider_divider_view"
        android:background="?attr/mayaColorDividerBackgroundPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_elevation_1dp"
        android:layout_marginLeft="@dimen/maya_margin_normal"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_normal"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:layout_marginHorizontal="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/shop_provider_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/shop_provider_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/maya_margin_medium"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/JekoBoldTextBody.Primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
