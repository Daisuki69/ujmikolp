<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_holder_container"
    android:background="@drawable/maya_bg_activity_list_clickable_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/maya_margin_normal"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/maya_margin_normal"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/pma_margin_small"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_start"
        app:layout_constraintRight_toLeftOf="@+id/text_view_date"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CerebriBookSmallText.Quaternary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_target"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_extra_small"
        android:layout_marginBottom="@dimen/maya_margin_small"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_start"
        app:layout_constraintRight_toRightOf="@+id/guideline_end"
        app:layout_constraintTop_toBottomOf="@+id/text_view_action"
        style="@style/JekoBoldLink.Primary"/>
    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_view_action"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@+id/text_view_action"
        app:layout_constraintRight_toRightOf="@+id/guideline_end"
        style="@style/CerebriBookSmallText.Quaternary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
