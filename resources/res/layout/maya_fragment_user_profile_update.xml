<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <dOYHB6.lN8Dz0.gDiks7
        android:id="@+id/scrollable_nested_scroll_view"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/form_container"
            android:paddingTop="@dimen/maya_margin_medium"
            android:paddingBottom="@dimen/maya_margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
            <TextView
                android:id="@+id/text_view_form_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/maya_user_profile_update_title"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoBoldH4.Primary"/>
            <TextView
                android:textColor="@color/maya_shades_of_grey_6"
                android:id="@+id/text_view_form_sub_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_user_profile_update_subtitle"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/text_view_form_header"
                style="@style/CerebriBookLongRead"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_email_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_update_profile_email_hint"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/text_view_form_sub_header"
                app:milLabel="@string/maya_update_profile_email_label"
                style="@style/MayaInputLayoutProfile"/>
            <com.paymaya.mayaui.common.view.widget.MayaDropDown
                android:id="@+id/maya_dropdown_gender"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_16"
                android:hint="@string/maya_update_profile_gender_dropdown_hint"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/input_email_address"
                app:mddLabel="@string/maya_update_profile_gender_dropdown_label"
                style="@style/MayaDropDown.Profile"/>
            <com.paymaya.mayaui.common.view.widget.MayaDropDown
                android:id="@+id/maya_dropdown_civil_status"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_16"
                android:hint="@string/maya_update_profile_civil_status_dropdown_hint"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/maya_dropdown_gender"
                app:mddLabel="@string/maya_update_profile_civil_status_dropdown_label"
                style="@style/MayaDropDown.Profile"/>
            <com.paymaya.mayaui.common.view.widget.MayaDropDown
                android:id="@+id/maya_dropdown_educational_attainment"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_16"
                android:hint="@string/maya_update_profile_educational_attainment_hint"
                android:inputType="none"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/maya_dropdown_civil_status"
                app:mddLabel="@string/maya_update_profile_educational_attainment_label"
                style="@style/MayaDropDown.Profile"/>
            <View
                android:id="@+id/mother_name_start_separator_view"
                android:background="#ecedef"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/maya_margin_16"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/maya_dropdown_educational_attainment"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_mothers_maiden_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_update_profile_mother_first_name_hint"
                android:maxLines="1"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/mother_name_start_separator_view"
                app:milLabel="@string/maya_update_profile_mother_first_name_label"
                style="@style/MayaInputLayoutProfile"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_mothers_maiden_middle_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_update_profile_mother_middle_name_hint"
                android:maxLines="1"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/input_mothers_maiden_first_name"
                app:milLabel="@string/maya_update_profile_mother_middle_name_label"
                style="@style/MayaInputLayoutProfile"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:textSize="@dimen/maya_text_size_long_read"
                android:textColor="@color/maya_shades_of_grey_5"
                android:id="@+id/mothers_maiden_middle_name_checkbox"
                android:paddingLeft="@dimen/pma_margin_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_small"
                android:button="?attr/mayaDrawable_CommonCheckboxSelector"
                android:text="@string/maya_update_profile_mother_middle_name_check_box"
                android:fontFamily="@font/font_cerebri_sans_pro_book"
                app:buttonCompat="?attr/mayaDrawable_CommonCheckboxSelector"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/input_mothers_maiden_middle_name"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_mothers_maiden_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_update_profile_mother_last_name_hint"
                android:maxLines="1"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/mothers_maiden_middle_name_checkbox"
                app:milLabel="@string/maya_update_profile_mother_last_name_label"
                style="@style/MayaInputLayoutProfile"/>
            <View
                android:id="@+id/mother_name_end_separator_view"
                android:background="#ecedef"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/maya_margin_16"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/input_mothers_maiden_last_name"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_tin1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_update_profile_tin_hint"
                android:maxLines="1"
                android:maxLength="15"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/mother_name_end_separator_view"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/mother_name_end_separator_view"
                app:layout_constraintTop_toBottomOf="@+id/mother_name_end_separator_view"
                app:milLabel="@string/maya_update_profile_tin_label"
                style="@style/MayaInputLayoutProfile"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_alternate_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_update_profile_alternate_contact_hint"
                android:maxLines="1"
                android:maxLength="12"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="@+id/mother_name_end_separator_view"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/mother_name_end_separator_view"
                app:layout_constraintTop_toBottomOf="@+id/input_tin1"
                app:milLabel="@string/maya_update_profile_alternate_contact_label"
                style="@style/MayaInputLayoutProfile"/>
            <View
                android:id="@+id/user_identification_separator_view"
                android:background="@color/bright_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/maya_stroke_width_large"
                android:layout_marginTop="@dimen/maya_margin_16"
                app:layout_constraintTop_toBottomOf="@+id/input_alternate_contact"/>
            <TextView
                android:textColor="?attr/mayaColorPrimary"
                android:id="@+id/text_view_identification_title"
                android:paddingTop="@dimen/maya_padding_2x_small"
                android:paddingBottom="@dimen/maya_padding_2x_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_update_profile_user_identification_title"
                android:paddingVertical="@dimen/maya_padding_2x_small"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/user_identification_separator_view"
                style="@style/CerebriBoldTextBody"/>
            <TextView
                android:id="@+id/text_view_identification_description"
                android:paddingTop="@dimen/maya_padding_2x_small"
                android:paddingBottom="@dimen/maya_padding_2x_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/maya_update_profile_user_identification_description"
                android:paddingVertical="@dimen/maya_padding_2x_small"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/text_view_identification_title"
                style="@style/CerebriBookLongRead"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/text_view_add_tin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_update_add_tin_label"
                android:drawablePadding="@dimen/maya_padding_6dp"
                android:drawableStart="@drawable/maya_ic_add_green"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/text_view_identification_description"
                style="@style/CerebriBookTextBody.LinksAccent"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_tin"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_update_profile_tin_hint"
                android:maxLines="1"
                android:maxLength="15"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/text_view_add_tin"
                app:milCloseButtonDrawable="@drawable/maya_ic_cross_grey_4"
                app:milLabel="@string/maya_update_profile_tin_label"
                app:milShowCloseIcon="true"
                style="@style/MayaInputLayoutProfile"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_tin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="text_view_add_tin,input_tin"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/text_view_add_sss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_update_add_sss_number_label"
                android:drawablePadding="@dimen/maya_padding_6dp"
                android:drawableStart="@drawable/maya_ic_add_green"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/barrier_tin"
                style="@style/CerebriBookTextBody.LinksAccent"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/input_sss"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:hint="@string/maya_update_profile_sss_hint"
                android:maxLines="1"
                android:maxLength="12"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@+id/barrier_tin"
                app:milCloseButtonDrawable="@drawable/maya_ic_cross_grey_4"
                app:milLabel="@string/maya_update_profile_sss_label"
                app:milShowCloseIcon="true"
                style="@style/MayaInputLayoutProfile"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/identification_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="text_view_identification_title,text_view_identification_description,text_view_add_tin,text_view_add_sss,barrier_tin"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </dOYHB6.lN8Dz0.gDiks7>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_container"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollable_nested_scroll_view">
        <Button
            android:enabled="true"
            android:id="@+id/next_button"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_small"
            android:layout_marginBottom="@dimen/pma_margin_normal"
            android:text="@string/maya_label_button_next"
            android:layout_marginStart="@dimen/maya_margin_24"
            android:layout_marginEnd="@dimen/maya_margin_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/MayaButtonPrimaryLarge"/>
        <Button
            android:enabled="false"
            android:id="@+id/validate_identification_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maya_label_button_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/MayaButtonPrimaryLarge.SharpCorner"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
