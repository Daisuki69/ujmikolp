<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/maya_margin_normal"
    android:layout_marginTop="@dimen/maya_margin_20"
    android:layout_marginRight="@dimen/maya_margin_normal"
    android:layout_marginBottom="@dimen/maya_margin_normal"
    android:layout_marginHorizontal="@dimen/maya_margin_normal">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/middle_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/middle_vertical_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoSemiBoldSmallText.Tertiary"/>
    <TextView
        android:id="@+id/value_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/middle_vertical_guideline"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoSemiBoldLink.Primary"/>
    <TextView
        android:id="@+id/second_value_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/middle_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@+id/value_text_view"
        style="@style/JekoSemiBoldLink.Tertiary"/>
    <ImageView
        android:id="@+id/icon_image_view"
        android:visibility="gone"
        android:layout_width="@dimen/maya_icon_size_length_default"
        android:layout_height="@dimen/maya_icon_size_length_default"
        app:layout_constraintEnd_toEndOf="@+id/value_text_view"
        app:layout_constraintStart_toEndOf="@+id/value_text_view"
        app:layout_constraintTop_toTopOf="@+id/value_text_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>
