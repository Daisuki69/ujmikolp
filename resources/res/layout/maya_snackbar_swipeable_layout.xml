<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/maya_padding_normal"
        android:layout_marginRight="@dimen/maya_padding_normal"
        android:layout_marginHorizontal="@dimen/maya_padding_normal"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="@dimen/maya_radius_24dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/maya_margin_24"
            android:paddingEnd="@dimen/maya_margin_24">
            <ImageView
                android:id="@+id/view_content_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:layout_marginBottom="@dimen/maya_margin_normal"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/view_content_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/maya_margin_large"
                android:layout_marginRight="@dimen/maya_margin_large"
                android:lines="2"
                android:layout_marginHorizontal="@dimen/maya_margin_large"
                app:layout_constraintBottom_toBottomOf="@+id/view_content_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view_content_image"
                app:layout_constraintTop_toTopOf="@+id/view_content_image"
                style="@style/CerebriMediumLongRead.White"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
