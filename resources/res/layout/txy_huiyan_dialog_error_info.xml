<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/txy_black"
        android:id="@+id/txy_huiyan_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txy_protocol_line_space"
        android:text="@string/txy_show_dialog_notice_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:textColor="@color/txy_white"
        android:id="@+id/txy_auth_dialog_ok_btn"
        android:background="@color/txy_btn_bg"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/txy_protocol_line_space"
        android:text="@string/txy_dialog_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textColor="@color/txy_black"
        android:gravity="center"
        android:id="@+id/txy_error_msg_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/txy_auth_dialog_ok_btn"
        app:layout_constraintTop_toBottomOf="@+id/txy_huiyan_dialog_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
