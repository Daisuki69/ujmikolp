                android:layout_height="wrap_content"
                android:text="@string/maya_kyc_ssne_sworn_statement_screen_label"
                style="@style/CerebriBoldH4.Primary"/>
            <TextView
                android:id="@+id/text_view_sub_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_kyc_ssne_sworn_statement_description"
                style="@style/CerebriBookLongRead.Gray"/>
            <View
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/maya_kyc_divider_size"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:layout_marginBottom="@dimen/maya_margin_large"
                android:layout_marginVertical="@dimen/maya_margin_large"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_ssne_sworn_statement_upload_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_medium">
                <dOYHB6.lN8Dz0.d8NVX3
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/linear_layout_ssne_sworn_statement_upload_container"
                    android:background="@drawable/maya_bg_selector_rectangle_with_dashed_stroke"
                    android:paddingTop="@dimen/maya_padding_20dp"
                    android:paddingBottom="@dimen/maya_padding_25dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textSize="@dimen/maya_line_height_24sp"
                        android:id="@+id/text_view_document_facing_up_emoji_front"
                        android:padding="@dimen/maya_padding_2x_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/maya_kyc_upload_philsys_upload_emoji"/>
                    <TextView
                        android:gravity="center_horizontal"
                        android:id="@+id/text_view_ssne_sworn_statement_upload_file_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/maya_kyc_ssne_sworn_statement_upload_title"
                        style="@style/CerebriMediumLongRead.Primary"/>
                    <TextView
                        android:gravity="center_horizontal"
                        android:id="@+id/text_view_ssne_sworn_statement_upload_file_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/maya_kyc_ssne_sworn_statement_file_description"
                        style="@style/CerebriBookSmallText.Secondary"/>
