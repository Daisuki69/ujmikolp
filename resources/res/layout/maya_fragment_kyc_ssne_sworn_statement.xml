                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center_horizontal"
                        android:id="@+id/text_view_ssne_sworn_statement_file_selected_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/maya_margin_12"
                        android:text="@string/maya_kyc_ssne_sworn_statement_file_selected_header"
                        style="@style/CerebriMediumLongRead.Primary"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/maya_line_height_24sp"
                            android:id="@+id/text_view_document_file_selected_graphic"
                            android:background="@drawable/maya_kyc_light_green_rounded_bg"
                            android:padding="@dimen/maya_padding_6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maya_kyc_upload_philsys_upload_emoji"
