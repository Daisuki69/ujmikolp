                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/text_view_document_file_selected_graphic"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:id="@+id/text_view_file_selected_label"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Bartolome_AveryTina1.pdf"
                                android:layout_weight="9"
                                android:layout_marginStart="@dimen/maya_margin_12"
                                style="@style/CerebriBookLongRead.Tertiary"/>
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/image_view_remove_selected_file_icon"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/maya_ic_kyc_clear_close_grey_bg"
                                android:layout_weight="1"
                                android:contentDescription="@string/maya_label_remove"/>
                        </dOYHB6.lN8Dz0.d8NVX3>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </dOYHB6.lN8Dz0.d8NVX3>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </dOYHB6.lN8Dz0.d8NVX3>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/button_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:text="@string/maya_kyc_submit_button"
        android:layout_marginStart="@dimen/maya_margin_large"
        android:layout_marginEnd="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/MayaButtonPrimaryLarge.Cerebri"/>
</androidx.constraintlayout.widget.ConstraintLayout>
