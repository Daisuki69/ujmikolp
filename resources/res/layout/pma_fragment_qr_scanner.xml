<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout_pma_fragment_qr_scanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <dOYHB6.lN8Dz0.yf3D09
        android:id="@+id/scanner_frame_layout_pma_fragment_qr_scanner"
        android:background="@color/pma_background_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/deny_permission_constraint_group_pma_fragment_qr_scanner"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="deny_permission_background_view_pma_fragment_qr_scanner,         allow_permission_title_text_view_pma_fragment_qr_scanner,         allow_permission_message_text_view_pma_fragment_qr_scanner,         enable_camera_text_view_pma_fragment_merchant_qr_scanner"/>
    <View
        android:id="@+id/deny_permission_background_view_pma_fragment_qr_scanner"
        android:background="@color/pma_background_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="@dimen/pma_text_size_title2"
        android:gravity="center_horizontal"
        android:id="@+id/allow_permission_title_text_view_pma_fragment_qr_scanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_normal"
        android:layout_marginRight="@dimen/pma_margin_normal"
        android:text="@string/pma_label_allow_paymaya_to_access_camera"
        app:layout_constraintBottom_toTopOf="@+id/allow_permission_message_text_view_pma_fragment_qr_scanner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/BodyLightLight"/>
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/allow_permission_message_text_view_pma_fragment_qr_scanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_normal"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:layout_marginRight="@dimen/pma_margin_normal"
        android:text="@string/pma_label_allow_camera_access_spiel"
        app:layout_constraintBottom_toTopOf="@+id/enable_camera_text_view_pma_fragment_merchant_qr_scanner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allow_permission_title_text_view_pma_fragment_qr_scanner"
        style="@style/Body2LightLight"/>
    <TextView
        android:id="@+id/enable_camera_text_view_pma_fragment_merchant_qr_scanner"
        android:padding="@dimen/pma_padding_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_large"
        android:text="@string/pma_label_enable_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allow_permission_message_text_view_pma_fragment_qr_scanner"
        style="@style/Body2PrimaryMedium"/>
    <View
        android:id="@+id/bottom_background_view_pma_fragment_qr_scanner"
        android:background="@drawable/pma_background_white_top_corners_round"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/other_ways_text_view_pma_fragment_qr_scanner"/>
    <TextView
        android:id="@+id/other_ways_text_view_pma_fragment_qr_scanner"
        android:paddingLeft="@dimen/pma_padding_normal"
        android:paddingTop="@dimen/pma_padding_normal"
        android:paddingRight="@dimen/pma_padding_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pma_label_other_ways_to_pay"
        app:layout_constraintBottom_toTopOf="@+id/import_from_gallery_text_view_pma_fragment_qr_scanner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/BodyDarkBold"/>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/import_from_gallery_text_view_pma_fragment_qr_scanner"
        android:background="@drawable/pma_selectable_background_stroke_rect_transparent"
        android:padding="@dimen/pma_padding_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pma_margin_small"
        android:text="@string/pma_label_import_qr_from_gallery"
        android:drawableLeft="@drawable/pma_ic_import_from_gallery"
        android:drawablePadding="@dimen/pma_padding_small"
        android:drawableStart="@drawable/pma_ic_import_from_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Body2PrimaryMedium"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/other_option_group_pma_fragment_qr_scanner"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="bottom_background_view_pma_fragment_qr_scanner,import_from_gallery_text_view_pma_fragment_qr_scanner,other_ways_text_view_pma_fragment_qr_scanner"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_image_view_pma_fragment_qr_scanner"
        android:background="@drawable/pma_selectable_background_back_button"
        android:padding="@dimen/pma_padding_normal"
        android:layout_width="@dimen/pma_back_button_size"
        android:layout_height="@dimen/pma_back_button_size"
        android:src="@drawable/pma_ic_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
