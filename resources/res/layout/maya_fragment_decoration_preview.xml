<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_container"
    android:background="?attr/mayaColorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/maya_margin_20"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/text_view_select_design_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <dOYHB6.lN8Dz0.yf3D09
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_animation_view_loading"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/maya_margin_large"
                android:layout_marginRight="@dimen/maya_margin_large"
                android:layout_marginHorizontal="@dimen/maya_margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/maya_loading_animation"
                app:lottie_scale="1"/>
            <include
                android:id="@+id/maya_view_decoration_card_content"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_large"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:layout_marginRight="@dimen/maya_margin_large"
                android:layout_marginHorizontal="@dimen/maya_margin_large"
                layout="@layout/maya_view_decoration_card_content"/>
        </dOYHB6.lN8Dz0.yf3D09>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/text_view_select_design_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pma_label_select_a_design"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view_theme_design_selection"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/JekoBoldH6.Primary"/>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/recycler_view_theme_design_selection"
        android:paddingTop="@dimen/maya_padding_small"
        android:paddingBottom="@dimen/maya_padding_small"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:paddingVertical="@dimen/maya_padding_small"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/constraint_group_theme_design_selection"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="text_view_select_design_label,         recycler_view_theme_design_selection"/>
</androidx.constraintlayout.widget.ConstraintLayout>
