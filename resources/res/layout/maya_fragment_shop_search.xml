<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/mayaColorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
    <dOYHB6.lN8Dz0.d8NVX3
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/search_input_layout"
        android:background="@drawable/maya_bg_shop_search_editable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toStartOf="@+id/clear_search_input_icon"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:layout_marginBottom="@dimen/maya_margin_normal"
            android:src="?attr/mayaSearchIcon"
            android:layout_marginStart="@dimen/maya_margin_large"
            android:layout_marginVertical="@dimen/maya_margin_normal"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:textColorHint="?attr/mayaTextInputHintColor"
            android:layout_gravity="center_vertical"
            android:id="@+id/search_input_edit_text"
            android:background="@color/transparent"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/maya_shop_search_label"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_marginStart="@dimen/maya_margin_normal"
            android:layout_marginEnd="@dimen/maya_margin_large"
            style="@style/JekoSemiBoldTextBody.Primary"/>
    </dOYHB6.lN8Dz0.d8NVX3>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/clear_search_input_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_close"
        android:layout_marginStart="@dimen/maya_margin_medium"
        app:layout_constraintBottom_toBottomOf="@+id/search_input_layout"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/search_input_layout"
        app:layout_constraintTop_toTopOf="@+id/search_input_layout"/>
    <include
        android:id="@+id/view_load_v2_banner"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/search_input_layout"
        layout="@layout/maya_view_shop_load_v2_banner"/>
    <androidx.core.widget.NestedScrollView
        android:scrollbarThumbVertical="@drawable/maya_bg_scrollbar_grey_quaternary"
        android:id="@+id/products_scrollview"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_large"
        android:overScrollMode="never"
        android:layout_marginVertical="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_load_v2_banner">
        <dOYHB6.lN8Dz0.d8NVX3
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/products_recycler_view"
                android:background="@drawable/maya_bg_content_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_large"
                android:layout_marginRight="@dimen/maya_margin_large"
                android:overScrollMode="never"
                android:layout_marginHorizontal="@dimen/maya_margin_large"/>
        </dOYHB6.lN8Dz0.d8NVX3>
    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:id="@+id/no_search_results_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/maya_margin_48"
        android:layout_marginRight="@dimen/maya_margin_48"
        android:src="0x7f0803cc"
        android:layout_marginHorizontal="@dimen/maya_margin_48"
        app:layout_constraintBottom_toTopOf="@+id/no_search_results_title_text_view"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/view_load_v2_banner"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/no_search_results_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_label_shop_no_search_results_title"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/no_search_results_message_text_view"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/no_search_results_image_view"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/JekoSemiBoldH5.Primary"/>
    <TextView
        android:id="@+id/no_search_results_message_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_label_shop_no_search_results_message"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/no_search_results_title_text_view"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/CerebriBookLink.Tertiary"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/no_search_results_group"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="no_search_results_image_view,         no_search_results_title_text_view,         no_search_results_message_text_view"/>
    <include
        android:id="@+id/view_error_content"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_load_v2_banner"
        layout="@layout/maya_view_reusable_resize_error"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_view_loading"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_load_v2_banner"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/maya_loading_animation"/>
    <TextView
        android:id="@+id/loading_message_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_label_wait"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/lottie_animation_view_loading"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/JekoSemiBoldTextBody.Primary"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/loading_group"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="lottie_animation_view_loading, loading_message_text_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>
