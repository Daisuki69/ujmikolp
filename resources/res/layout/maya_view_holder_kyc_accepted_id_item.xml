<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/maya_padding_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/maya_kyc_accepted_ids_icon_image_view"
        android:layout_width="@dimen/maya_kyc_complete_your_maya_experience_accepted_id_checkmark_icon_size"
        android:layout_height="@dimen/maya_kyc_complete_your_maya_experience_accepted_id_checkmark_icon_size"
        android:src="@drawable/maya_ic_check_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/maya_kyc_accepted_ids_foreigners_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="For foreigners"
        android:layout_marginStart="@dimen/maya_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/maya_kyc_accepted_ids_document_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/maya_kyc_accepted_ids_icon_image_view"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoOverlineSmall.Orange"/>
    <TextView
        android:id="@+id/maya_kyc_accepted_ids_document_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/maya_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/maya_kyc_accepted_ids_icon_image_view"
        app:layout_constraintTop_toBottomOf="@+id/maya_kyc_accepted_ids_foreigners_text_view"
        style="@style/JekoSemiBoldTextBody.Primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
