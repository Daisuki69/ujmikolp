<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_card_view_pma_view_holder_favorite_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/pma_margin_small"
    android:layout_marginEnd="@dimen/pma_margin_small"
    app:cardBackgroundColor="@color/light_light"
    app:cardCornerRadius="@dimen/pma_radius_6dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/pma_padding_10dp"
        android:paddingBottom="@dimen/pma_padding_10dp"
        android:layout_width="@dimen/pma_view_holder_favorite_card_min_width"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/pma_view_holder_favorite_card_min_height">
        <ImageView
            android:id="@+id/icon_image_view_pma_view_holder_favorite_card"
            android:layout_width="@dimen/pma_view_holder_favorite_icon_size"
            android:layout_height="@dimen/pma_view_holder_favorite_icon_size"
            android:layout_margin="@dimen/pma_margin_medium"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/alias_text_view_pma_view_holder_favorite_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_medium"
            android:maxLines="2"
            android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
            android:layout_marginStart="@dimen/pma_margin_medium"
            android:layout_marginEnd="@dimen/pma_margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/line1_text_view_pma_view_holder_favorite_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon_image_view_pma_view_holder_favorite_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/Body2DarkMedium"/>
        <TextView
            android:id="@+id/line1_text_view_pma_view_holder_favorite_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_medium"
            android:layout_marginTop="@dimen/pma_margin_extra_small"
            android:maxLines="1"
            android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
            android:layout_marginStart="@dimen/pma_margin_medium"
            android:layout_marginEnd="@dimen/pma_margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/line2_text_view_pma_view_holder_favorite_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon_image_view_pma_view_holder_favorite_card"
            app:layout_constraintTop_toBottomOf="@+id/alias_text_view_pma_view_holder_favorite_card"
            style="@style/CaptionDarkLight"/>
        <TextView
            android:id="@+id/line2_text_view_pma_view_holder_favorite_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_medium"
            android:maxLines="1"
            android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
            android:layout_marginStart="@dimen/pma_margin_medium"
            android:layout_marginEnd="@dimen/pma_margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/maintenance_text_view_pma_view_holder_favorite_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon_image_view_pma_view_holder_favorite_card"
            app:layout_constraintTop_toBottomOf="@+id/line1_text_view_pma_view_holder_favorite_card"
            style="@style/CaptionDarkLight"/>
        <TextView
            android:id="@+id/maintenance_text_view_pma_view_holder_favorite_card"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_medium"
            android:text="@string/pma_label_temporarily_unavailable"
            android:maxLines="1"
            android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
            android:alpha="0.4"
            android:layout_marginStart="@dimen/pma_margin_medium"
            android:layout_marginEnd="@dimen/pma_margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon_image_view_pma_view_holder_favorite_card"
            app:layout_constraintTop_toBottomOf="@+id/line2_text_view_pma_view_holder_favorite_card"
            style="@style/CaptionDarkMedium"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
