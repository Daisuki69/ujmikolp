<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout_pma_view_loading_fullscreen_please_wait"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/pma_fragment_loading_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@+id/container_constraint_layout_pma_view_loading_fullscreen_please_wait"
        app:layout_constraintCircleRadius="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?android:attr/progressBarStyle"/>
    <TextView
        android:id="@+id/loading_text_view_pma_fragment_shop_search"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/pma_margin_medium"
        android:text="@string/pma_progress_message_please_wait2"
        android:layout_below="@+id/pma_fragment_loading_progress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pma_fragment_loading_progress"
        style="@style/Body2DarkLight"/>
</androidx.constraintlayout.widget.ConstraintLayout>
