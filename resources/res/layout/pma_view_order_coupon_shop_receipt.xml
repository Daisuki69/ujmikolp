<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_layout_pma_view_order_coupon_shop_receipt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/pma_radius_5dp"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/pma_background_white_thin_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/left_content_guideline_pma_view_order_coupon_shop_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.25"/>
        <ImageView
            android:id="@+id/coupon_brand_icon_image_view_pma_view_order_coupon_shop_receipt"
            android:layout_width="@dimen/pma_shop_receipt_product_image_size"
            android:layout_height="@dimen/pma_shop_receipt_product_image_size"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/left_content_guideline_pma_view_order_coupon_shop_receipt"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/coupon_name_text_view_pma_view_order_coupon_shop_receipt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:maxLines="2"
            android:lineSpacingExtra="0dp"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintLeft_toLeftOf="@+id/left_content_guideline_pma_view_order_coupon_shop_receipt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/coupon_brand_icon_image_view_pma_view_order_coupon_shop_receipt"
            style="@style/BodyDark"/>
        <TextView
            android:gravity="start|center_vertical"
            android:id="@+id/coupon_description_text_view_pma_view_order_coupon_shop_receipt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_small"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:maxLines="1"
            android:singleLine="true"
            android:lineSpacingExtra="0dp"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintLeft_toLeftOf="@+id/left_content_guideline_pma_view_order_coupon_shop_receipt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coupon_name_text_view_pma_view_order_coupon_shop_receipt"
            style="@style/CaptionDarkLight"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/product_barrier_pma_view_order_coupon_shop_receipt_shop_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="coupon_description_text_view_pma_view_order_coupon_shop_receipt,                                            coupon_brand_icon_image_view_pma_view_order_coupon_shop_receipt"/>
        <View
            android:background="@color/light"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/code_label_text_view_pma_view_order_coupon_shop_receipt_shop_receipt"/>
        <TextView
            android:gravity="start|center_vertical"
            android:id="@+id/code_label_text_view_pma_view_order_coupon_shop_receipt_shop_receipt"
            android:paddingTop="@dimen/pma_padding_normal"
            android:paddingRight="@dimen/pma_padding_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_normal"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:text="@string/pma_label_code_c"
            android:fontFamily="@font/roboto"
            android:paddingEnd="@dimen/pma_padding_small"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_barrier_pma_view_order_coupon_shop_receipt_shop_receipt"
            style="@style/Body2DarkLight"/>
        <TextView
            android:id="@+id/coupon_code_text_view_pma_view_order_coupon_shop_receipt"
            android:paddingTop="@dimen/pma_padding_normal"
            android:paddingBottom="@dimen/pma_padding_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="0dp"
            app:layout_constraintLeft_toRightOf="@+id/code_label_text_view_pma_view_order_coupon_shop_receipt_shop_receipt"
            app:layout_constraintRight_toLeftOf="@+id/copy_view_group_pma_fragment_shop_receipt"
            app:layout_constraintTop_toTopOf="@+id/code_label_text_view_pma_view_order_coupon_shop_receipt_shop_receipt"
            style="@style/Body2DarkBold"/>
        <dOYHB6.lN8Dz0.yf3D09
            android:id="@+id/copy_view_group_pma_fragment_shop_receipt"
            android:background="@drawable/pma_selectable_background_stroke_round_rect_dark_light"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_normal"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/coupon_code_text_view_pma_view_order_coupon_shop_receipt"
            app:layout_constraintTop_toTopOf="@+id/coupon_code_text_view_pma_view_order_coupon_shop_receipt">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/pma_text_size_caption"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:id="@+id/copy_text_pma_fragment_shop_receipt"
                android:paddingLeft="@dimen/pma_padding_medium"
                android:paddingTop="@dimen/pma_padding_extra_small"
                android:paddingRight="@dimen/pma_padding_medium"
                android:paddingBottom="@dimen/pma_padding_extra_small"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pma_label_copy"
                android:drawablePadding="@dimen/pma_padding_extra_small"
                android:textAllCaps="true"
                style="@style/Body2DarkLightBold"/>
        </dOYHB6.lN8Dz0.yf3D09>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
