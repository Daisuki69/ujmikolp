<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/sheet_background_view"
        android:background="@drawable/maya_bg_default_bottom_dialog_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
    <dOYHB6.lN8Dz0.d8NVX3
        android:orientation="vertical"
        android:id="@+id/mission_details_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_52"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toStartOf="@+id/reward_type_graphic_image_view"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:ellipsize="end"
            android:id="@+id/validity_period_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/maya_margin_extra_small"
            android:maxLines="1"
            style="@style/JekoOverlineBig.Accent"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/campaign_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            style="@style/JekoBoldH6.Primary"/>
    </dOYHB6.lN8Dz0.d8NVX3>
    <ImageView
        android:id="@+id/reward_type_graphic_image_view"
        android:layout_width="@dimen/maya_mission_reward_type_image_size"
        android:layout_height="@dimen/maya_mission_reward_type_image_size"
        android:layout_marginTop="@dimen/maya_margin_extra_large"
        android:src="0x7f080254"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="0x7f080255"/>
    <View
        android:id="@+id/partner_logo_background_view"
        android:background="@drawable/maya_bg_icon_white_circle_with_border"
        android:layout_width="@dimen/maya_mission_partner_logo_size"
        android:layout_height="@dimen/maya_mission_partner_logo_size"
        app:layout_constraintBottom_toBottomOf="@+id/reward_type_graphic_image_view"
        app:layout_constraintEnd_toEndOf="@+id/reward_type_graphic_image_view"/>
    <ImageView
        android:id="@+id/partner_logo_icon_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/maya_margin_small"
        app:layout_constraintBottom_toBottomOf="@+id/partner_logo_background_view"
        app:layout_constraintEnd_toEndOf="@+id/partner_logo_background_view"
        app:layout_constraintStart_toStartOf="@+id/partner_logo_background_view"
        app:layout_constraintTop_toTopOf="@+id/partner_logo_background_view"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/partner_logo_constraint_group"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="partner_logo_background_view, partner_logo_icon_image_view"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/header_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="campaign_name_text_view, reward_type_graphic_image_view"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/reward_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="rewards_view, reward_title_text_view, reward_description_text_view, rewards_bottom_space"/>
    <View
        android:id="@+id/rewards_view"
        android:background="@drawable/maya_bg_content_border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="@+id/rewards_bottom_space"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/header_barrier"/>
    <TextView
        android:id="@+id/reward_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_normal"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginRight="@dimen/maya_margin_normal"
        android:layout_marginHorizontal="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/rewards_view"
        app:layout_constraintStart_toStartOf="@+id/rewards_view"
        app:layout_constraintTop_toTopOf="@+id/rewards_view"
        style="@style/JekoBoldTextBody.Primary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/reward_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_normal"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_normal"
        android:maxLines="3"
        android:layout_marginHorizontal="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/rewards_view"
        app:layout_constraintStart_toStartOf="@+id/rewards_view"
        app:layout_constraintTop_toBottomOf="@+id/reward_title_text_view"
        style="@style/CerebriBookLongRead.Secondary"/>
    <Space
        android:id="@+id/rewards_bottom_space"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/rewards_view"
        app:layout_constraintStart_toStartOf="@+id/rewards_view"
        app:layout_constraintTop_toBottomOf="@+id/reward_description_text_view"/>
    <ProgressBar
        android:id="@+id/progress_indicator_progress_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/maya_progress_bar_horizontal_height_normal"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:max="100"
        android:progressDrawable="@drawable/maya_progress_bar_rounded_green"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/rewards_view"
        style="?android:attr/progressBarStyleHorizontal"/>
    <TextView
        android:id="@+id/tasks_completed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/progress_indicator_progress_bar"
        style="@style/CerebriBookSmallText.Quaternary"/>
    <Button
        android:gravity="center"
        android:id="@+id/cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_large"
        android:text="@string/maya_label_missions_preview_cancel"
        android:layout_marginEnd="@dimen/maya_margin_extra_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/learn_more_button"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/tasks_completed_text_view"
        style="@style/MayaButtonSecondaryLarge"/>
    <Button
        android:gravity="center"
        android:id="@+id/learn_more_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_large"
        android:text="@string/maya_label_missions_preview_learn_more"
        android:layout_marginStart="@dimen/maya_margin_extra_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/cancel_button"
        app:layout_constraintTop_toBottomOf="@+id/tasks_completed_text_view"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
