<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_pma_fragment_shop_v3"
    android:background="@color/off_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pma_view_toolbar"
        android:background="@color/light_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/pma_theme_toolbar_white"
        app:title="@string/pma_label_shop"/>
    <ImageView
        android:id="@+id/bg_green_image_view_pma_fragment_shop_v3_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_large"
        android:src="0x7f080438"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pma_view_toolbar"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_pma_fragment_shop_v3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pma_view_toolbar">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_pma_fragment_shop_v3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            style="@style/pma_widget_white_nav_tab_layout"/>
    </androidx.viewpager.widget.ViewPager>
    <include
        android:id="@+id/purchase_history_notification_processing_view_pma_fragment_shop_v3"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pma_margin_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/pma_view_shop_v3_notification_purchase_history_processing"/>
    <include
        android:id="@+id/purchase_history_notification_completed_view_pma_fragment_shop_v3"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pma_margin_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/pma_view_shop_v3_notification_purchase_history_completed"/>
</androidx.constraintlayout.widget.ConstraintLayout>
