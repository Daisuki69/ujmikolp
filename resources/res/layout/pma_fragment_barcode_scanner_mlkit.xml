<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.paymaya.ui.qr.view.widget.CameraSourcePreview
        android:id="@+id/camera_source_preview_pma_fragment_barcode_scanner_mlkit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@color/light_light"
        android:id="@+id/barcode_spiels_text_view_pma_fragment_barcode_scanner_mlkit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pma_margin_normal"
        android:text="@string/pma_label_align_barcode_code"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/barcode_frame_image_view_pma_fragment_barcode_scanner_mlkit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/barcode_frame_image_view_pma_fragment_barcode_scanner_mlkit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="0x7f0804b4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/deny_permission_constraint_group_pma_fragment_qr_scanner"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="deny_permission_background_view_pma_fragment_qr_scanner,         allow_permission_title_text_view_pma_fragment_qr_scanner,         allow_permission_message_text_view_pma_fragment_qr_scanner,         enable_camera_text_view_pma_fragment_merchant_qr_scanner"/>
    <View
        android:id="@+id/deny_permission_background_view_pma_fragment_qr_scanner"
        android:background="@color/pma_background_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="@dimen/pma_text_size_title2"
        android:textColor="@color/pma_text_color_white"
        android:id="@+id/allow_permission_title_text_view_pma_fragment_qr_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pma_margin_small"
        android:text="@string/pma_label_allow_paymaya_to_access_camera"
        app:layout_constraintBottom_toTopOf="@+id/allow_permission_message_text_view_pma_fragment_qr_scanner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:gravity="center"
        android:id="@+id/allow_permission_message_text_view_pma_fragment_qr_scanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_large"
        android:layout_marginRight="@dimen/pma_margin_large"
        android:layout_marginBottom="@dimen/pma_margin_large"
        android:text="@string/pma_label_allow_camera_access_spiel"
        app:layout_constraintBottom_toTopOf="@+id/enable_camera_text_view_pma_fragment_merchant_qr_scanner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allow_permission_title_text_view_pma_fragment_qr_scanner"
        style="@style/Body2LightLight"/>
    <TextView
        android:textSize="@dimen/pma_text_size_body2"
        android:textColor="?attr/colorPrimary"
        android:id="@+id/enable_camera_text_view_pma_fragment_merchant_qr_scanner"
        android:padding="@dimen/pma_padding_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pma_label_enable_camera"
        android:fontFamily="@string/pma_font_family_roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allow_permission_message_text_view_pma_fragment_qr_scanner"/>
    <ImageView
        android:id="@+id/back_image_view_pma_fragment_qr_scanner"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/pma_padding_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_normal"
        android:layout_marginTop="@dimen/pma_margin_large"
        android:src="0x7f08052c"
        android:layout_marginStart="@dimen/pma_margin_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
