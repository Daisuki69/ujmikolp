<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/pma_item_edd_financial_document_label_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.45"/>
    <TextView
        android:id="@+id/pma_item_edd_financial_document_document_label_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_normal"
        android:layout_marginRight="@dimen/pma_margin_small"
        android:text="@string/pma_label_edd_submission_documents"
        android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
        android:layout_marginEnd="@dimen/pma_margin_small"
        app:layout_constraintEnd_toEndOf="@+id/pma_item_edd_financial_document_label_guide_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/BodyDarkLight"/>
    <TextView
        android:id="@+id/pma_item_edd_financial_document_document_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_small"
        android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
        android:layout_marginStart="@dimen/pma_margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pma_item_edd_financial_document_label_guide_line"
        app:layout_constraintTop_toTopOf="@+id/pma_item_edd_financial_document_document_label_text_view"
        style="@style/BodyDark"/>
    <TextView
        android:id="@+id/pma_item_edd_financial_document_photo_label_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_normal"
        android:layout_marginRight="@dimen/pma_margin_small"
        android:text="@string/pma_label_edd_submission_upload_photo"
        android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
        android:layout_marginEnd="@dimen/pma_margin_small"
        app:layout_constraintEnd_toEndOf="@+id/pma_item_edd_financial_document_label_guide_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pma_item_edd_financial_document_document_text_view"
        style="@style/BodyDarkLight"/>
    <ImageView
        android:id="@+id/pma_item_edd_financial_document_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_small"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:maxWidth="@dimen/pma_upgrade_paymaya_plus_sample_id_width"
        android:maxHeight="@dimen/pma_upgrade_paymaya_plus_sample_id_height"
        android:layout_marginStart="@dimen/pma_margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/pma_item_edd_financial_document_label_guide_line"
        app:layout_constraintTop_toTopOf="@+id/pma_item_edd_financial_document_photo_label_text_view"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/pma_item_edd_financial_document_photo_group"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="pma_item_edd_financial_document_photo_label_text_view,         pma_item_edd_financial_document_photo"/>
</androidx.constraintlayout.widget.ConstraintLayout>
