<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/maya_bg_alert_dialog_sheet"
    android:paddingLeft="@dimen/maya_margin_large"
    android:paddingRight="@dimen/maya_margin_large"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/maya_margin_large">
    <ImageView
        android:id="@+id/image_view_graphic_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_large"
        android:src="0x7f0802a7"
        app:layout_constraintBottom_toTopOf="@+id/text_view_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:text="@string/maya_label_verify_registration_welcome_to_maya_title"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/text_view_description"
        app:layout_constraintTop_toBottomOf="@+id/image_view_graphic_header"
        style="@style/JekoBoldH5.Primary"/>
    <com.paymaya.mayaui.common.view.widget.MultiColorTextView
        android:id="@+id/text_view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:text="@string/maya_label_verify_registration_welcome_to_maya_spiel"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title"
        app:mctvSecondaryTextColor="?attr/mayaColorAccent"
        app:mctvSecondaryTextHighlightSpan="@string/maya_label_verify_registration_welcome_to_maya_spiel_highlight"
        style="@style/CerebriBookLongRead.Secondary"/>
    <View
        android:id="@+id/view_submit_invite_code_section"
        android:background="@drawable/maya_bg_content_border"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/space_submit_invite_code_bottom"
        app:layout_constraintTop_toTopOf="@+id/space_submit_invite_code_top"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_left_submit_invite_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/maya_margin_normal"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_right_submit_invite_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/maya_margin_normal"/>
    <Space
        android:id="@+id/space_submit_invite_code_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_margin_normal"
        android:layout_marginTop="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/text_view_submit_invite_code_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_description"/>
    <ImageView
        android:id="@+id/image_view_submit_invite_code_icon"
        android:layout_width="@dimen/maya_registration_success_submit_invite_code_icon_length"
        android:layout_height="@dimen/maya_registration_success_submit_invite_code_icon_length"
        android:layout_marginRight="@dimen/maya_margin_small"
        android:src="0x7f0803aa"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_submit_invite_code_title"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_left_submit_invite_code"
        app:layout_constraintRight_toLeftOf="@+id/text_view_submit_invite_code_title"
        app:layout_constraintTop_toTopOf="@+id/text_view_submit_invite_code_title"/>
    <TextView
        android:id="@+id/text_view_submit_invite_code_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_verify_registration_submit_invite_code_title"
        app:layout_constraintLeft_toRightOf="@+id/image_view_submit_invite_code_icon"
        app:layout_constraintRight_toRightOf="@+id/guideline_right_submit_invite_code"
        app:layout_constraintTop_toBottomOf="@+id/space_submit_invite_code_top"
        style="@style/JekoBoldTextBody.Primary"/>
    <com.paymaya.mayaui.common.view.widget.MultiColorTextView
        android:id="@+id/text_view_submit_invite_code_spiel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_verify_registration_submit_invite_code_spiel"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_submit_invite_code_title"
        app:layout_constraintRight_toRightOf="@+id/guideline_right_submit_invite_code"
        app:layout_constraintTop_toBottomOf="@+id/text_view_submit_invite_code_title"
        app:mctvSecondaryTextColor="?attr/mayaColorAccent"
        app:mctvSecondaryTextHighlightSpan="@string/maya_label_verify_registration_submit_invite_code_spiel_highlight"
        style="@style/CerebriBookLink.Secondary"/>
    <Space
        android:id="@+id/space_submit_invite_code_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_margin_normal"
        app:layout_constraintTop_toBottomOf="@+id/text_view_submit_invite_code_spiel"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/constraint_group_submit_invite_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="space_submit_invite_code_top,         view_submit_invite_code_section,         image_view_submit_invite_code_icon,         text_view_submit_invite_code_title,         text_view_submit_invite_code_spiel,         space_submit_invite_code_bottom"/>
    <Button
        android:id="@+id/button_go_to_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_go_to_home"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/maya_margin_medium"
        app:layout_constraintBottom_toBottomOf="@+id/button_upgrade_now"
        app:layout_constraintEnd_toStartOf="@+id/button_upgrade_now"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_upgrade_now"
        style="@style/MayaButtonSecondaryLarge"/>
    <Button
        android:id="@+id/button_upgrade_now"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_40"
        android:layout_marginBottom="@dimen/maya_margin_large"
        android:text="@string/maya_label_upgrade_now"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_go_to_home"
        app:layout_constraintTop_toBottomOf="@+id/view_submit_invite_code_section"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
