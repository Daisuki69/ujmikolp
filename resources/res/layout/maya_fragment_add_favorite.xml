<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view_favorite_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_save"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/maya_padding_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_title_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_6"
                android:text="@string/maya_label_save_to_favorites_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoBoldH4.Primary"/>
            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_medium"
                android:text="@string/maya_label_save_to_favorites_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title_header"
                style="@style/JekoSemiBoldLongRead.Tertiary"/>
            <com.paymaya.mayaui.common.view.widget.MayaInputLayout
                android:id="@+id/maya_input_layout_favorite_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_40"
                android:hint="@string/maya_hint_name"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_description"
                app:milHelperErrorAppearance="@style/JekoSemiBoldSmallText.Error"
                app:milHelperInfoAppearance="@style/JekoSemiBoldSmallText.Tertiary"
                app:milLabel="@string/maya_label_name"
                app:milPrimaryIconDrawable="@drawable/maya_ic_information_error_badge"
                app:milShowHelperError="false"
                app:milShowHelperInfo="false"
                app:milShowPrimaryIcon="false"/>
            <include
                android:id="@+id/view_favorite_set_reminder_section"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_medium"
                app:layout_constraintTop_toBottomOf="@+id/maya_input_layout_favorite_name"
                layout="@layout/maya_view_favorite_set_reminder"/>
            <TextView
                android:id="@+id/text_view_details_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_favorite_set_reminder_section"
                style="@style/JekoBoldTextBody.Primary"/>
            <View
                android:background="@drawable/maya_bg_color_background_secondary_rounded"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/recycler_view_dynamic_details"
                app:layout_constraintEnd_toEndOf="@+id/recycler_view_dynamic_details"
                app:layout_constraintStart_toStartOf="@+id/recycler_view_dynamic_details"
                app:layout_constraintTop_toTopOf="@+id/recycler_view_dynamic_details"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_dynamic_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                app:layout_constraintTop_toBottomOf="@+id/text_view_details_header"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/button_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:layout_marginBottom="@dimen/pma_margin_normal"
        android:text="@string/maya_label_save"
        android:layout_marginStart="@dimen/maya_margin_large"
        android:layout_marginEnd="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view_favorite_details"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
