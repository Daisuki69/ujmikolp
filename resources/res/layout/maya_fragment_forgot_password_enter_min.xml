<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/mayaColorBackgroundPrimaryAlt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollable_nested_scroll_view"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/next_button"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/maya_margin_24"
            android:paddingEnd="@dimen/maya_margin_24">
            <TextView
                android:id="@+id/text_view_enter_your_number_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_enter_your_number_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/JekoBoldH4.Primary"/>
            <TextView
                android:id="@+id/text_view_enter_your_number_sub_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_8"
                android:text="@string/maya_label_enter_your_number_sub_header"
                android:lineHeight="@dimen/maya_line_height_22sp"
                app:layout_constraintEnd_toEndOf="@+id/text_view_enter_your_number_header"
                app:layout_constraintStart_toStartOf="@+id/text_view_enter_your_number_header"
                app:layout_constraintTop_toBottomOf="@+id/text_view_enter_your_number_header"
                style="@style/CerebriBookLongRead"/>
            <ImageView
                android:id="@+id/image_view_country_badge_icon"
                android:layout_width="@dimen/maya_forgot_password_icon_size_country_badge"
                android:layout_height="@dimen/maya_forgot_password_icon_size_country_badge"
                android:src="0x7f080218"
                android:layout_marginEnd="@dimen/maya_margin_8"
                app:layout_constraintBottom_toBottomOf="@+id/maya_input_layout_current_mobile_number"
                app:layout_constraintEnd_toStartOf="@+id/maya_input_layout_current_mobile_number"
                app:layout_constraintStart_toStartOf="@+id/text_view_enter_your_number_header"
                app:layout_constraintTop_toTopOf="@+id/maya_input_layout_current_mobile_number"/>
            <com.paymaya.mayaui.common.view.widget.MayaProfileInputLayout
                android:id="@+id/maya_input_layout_current_mobile_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_40"
                android:hint="@string/maya_hint_mobile_number"
                android:maxLines="1"
                android:maxLength="10"
                android:inputType="phone"
                android:imeOptions="actionNext"
                app:layout_constraintEnd_toEndOf="@+id/text_view_enter_your_number_header"
                app:layout_constraintStart_toEndOf="@+id/image_view_country_badge_icon"
                app:layout_constraintTop_toBottomOf="@+id/text_view_enter_your_number_sub_header"
                app:milShowFloatingPrefix="true"
                app:milShowLabel="false"
                style="@style/MayaInputLayoutProfile"/>
            <TextView
                android:gravity="center"
                android:id="@+id/mobile_number_helper_error_text_view"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/maya_error_registration_identity_enter_valid_mobile_number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/maya_input_layout_current_mobile_number"
                style="@style/JekoSemiBoldSmallText.Error"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:enabled="false"
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_large"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:layout_marginRight="@dimen/pma_margin_large"
        android:layout_marginBottom="@dimen/pma_margin_normal"
        android:text="@string/maya_label_button_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollable_nested_scroll_view"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
