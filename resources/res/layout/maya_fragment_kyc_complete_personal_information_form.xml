<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarThumbVertical="@drawable/maya_bg_scrollbar_grey_quaternary"
    android:id="@+id/nested_scroll_view_form_container"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_large">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
        <TextView
            android:id="@+id/text_view_form_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_medium"
            android:text="@string/maya_kyc_complete_personal_information_header"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldH2.Primary"/>
        <TextView
            android:id="@+id/text_view_form_sub_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_small"
            android:text="@string/maya_kyc_complete_personal_information_sub_header"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/text_view_form_header"
            style="@style/JekoSemiBoldLongRead.Tertiary"/>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_nature_of_work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_large"
            app:constraint_referenced_ids="text_view_work_details,maya_input_work_nature,maya_input_nature_of_work_others,maya_input_income_source,maya_input_employment_detail"
            app:flow_maxElementsWrap="1"
            app:flow_verticalGap="@dimen/maya_margin_medium"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/text_view_form_sub_header"/>
        <com.paymaya.mayaui.common.view.widget.MultiColorTextView
            android:id="@+id/text_view_work_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/maya_kyc_complete_personal_information_work_nature_header"
            app:mctvSecondaryTextColor="?attr/mayaColorAccent"
            app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_personal_information_annotation"
            style="@style/JekoBoldTextBody.Primary"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_work_nature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_work_nature_hint"
            android:inputType="none"
            app:milLabel="@string/maya_kyc_complete_personal_information_work_nature_label"
            app:milPrimaryIconDrawable="0x7f080277"
            style="@style/MayaInputLayoutDefault"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_nature_of_work_others"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_nature_of_work_others_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_nature_of_work_others_label"
            style="@style/KycRegularTextInputLayout"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_income_source"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_income_source_hint"
            android:inputType="none"
            app:milLabel="@string/maya_kyc_complete_personal_information_income_source_label"
            app:milPrimaryIconDrawable="0x7f080277"
            style="@style/MayaInputLayoutDefault"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_employment_detail"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_company_name_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_company_name_label"
            style="@style/KycRegularTextInputLayout"/>
        <View
            android:id="@+id/view_nature_of_work_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/flow_nature_of_work"
            style="@style/KycPersonalInformationDivider"/>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_kyc_complete_personal_information_section_margin"
            app:constraint_referenced_ids="text_view_name_info,text_view_name_header,maya_input_first_name,maya_input_middle_name,checkbox_middle_name,maya_input_last_name,kyc_info_box"
            app:flow_maxElementsWrap="1"
            app:flow_verticalGap="@dimen/maya_margin_medium"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/view_nature_of_work_divider"/>
        <TextView
            android:id="@+id/text_view_name_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/maya_kyc_complete_personal_information_name_message"
            style="@style/JekoSemiBoldLongRead.Tertiary"/>
        <com.paymaya.mayaui.common.view.widget.MultiColorTextView
            android:id="@+id/text_view_name_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/maya_kyc_complete_personal_information_name_header"
            app:mctvSecondaryTextColor="?attr/mayaColorAccent"
            app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_personal_information_annotation"
            style="@style/JekoBoldTextBody.Primary"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_first_name_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_first_name_label"
            style="@style/KycRegularTextInputLayout"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_middle_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_middle_name_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_middle_name_label"
            style="@style/KycRegularTextInputLayout"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_middle_name"
            android:paddingLeft="@dimen/maya_margin_small"
            android:paddingRight="@dimen/maya_margin_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="?attr/mayaDrawable_CommonCheckboxSelector"
            android:text="@string/maya_kyc_complete_personal_information_middle_name_checkbox"
            android:paddingHorizontal="@dimen/maya_margin_small"
            app:buttonCompat="?attr/mayaDrawable_CommonCheckboxSelector"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_last_name_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_last_name_label"
            style="@style/KycRegularTextInputLayout"/>
        <com.paymaya.mayaui.kyczoloz.view.widget.KycInformationTextView
            android:id="@+id/kyc_info_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:kibvBaseText="@string/maya_kyc_complete_personal_information_name_learn_more"
            app:kibvHighlightSpan="@string/maya_kyc_complete_personal_information_name_learn_more_accent"/>
        <View
            android:id="@+id/view_full_name_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/flow_full_name"
            style="@style/KycPersonalInformationDivider"/>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_birth_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_kyc_complete_personal_information_section_margin"
            app:constraint_referenced_ids="text_view_birth_date,maya_input_birth_date"
            app:flow_maxElementsWrap="1"
            app:flow_verticalGap="@dimen/maya_margin_medium"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/view_full_name_divider"/>
        <com.paymaya.mayaui.common.view.widget.MultiColorTextView
            android:id="@+id/text_view_birth_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/maya_kyc_complete_personal_information_birth_date_header"
            app:mctvSecondaryTextColor="?attr/mayaColorAccent"
            app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_personal_information_annotation"
            style="@style/JekoBoldTextBody.Primary"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_birth_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_birth_date_hint"
            android:maxLength="10"
            android:inputType="number"
            android:imeOptions="actionNext"
            app:milLabel="@string/maya_kyc_complete_personal_information_birth_date_label"
            style="@style/MayaInputLayoutDefault"/>
        <View
            android:id="@+id/view_birth_date_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/flow_birth_date"
            style="@style/KycPersonalInformationDivider"/>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_birth_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_kyc_complete_personal_information_section_margin"
            app:constraint_referenced_ids="text_view_birth_place,maya_input_birth_country,container_birth_state,container_birth_city"
            app:flow_maxElementsWrap="1"
            app:flow_verticalGap="@dimen/maya_margin_medium"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/view_birth_date_divider"/>
        <com.paymaya.mayaui.common.view.widget.MultiColorTextView
            android:id="@+id/text_view_birth_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/maya_kyc_complete_personal_information_birth_place_header"
            app:mctvSecondaryTextColor="?attr/mayaColorAccent"
            app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_personal_information_annotation"
            style="@style/JekoBoldTextBody.Primary"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_birth_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_birth_country_hint"
            android:inputType="none"
            app:milLabel="@string/maya_kyc_complete_personal_information_birth_country_label"
            app:milPrimaryIconDrawable="0x7f080277"
            style="@style/MayaInputLayoutDefault"/>
        <include
            android:id="@+id/container_birth_state"
            android:layout_width="0dp"
            android:hint="@string/maya_kyc_complete_personal_information_select_birth_state_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_birth_state_label"
            layout="@layout/maya_view_kyc_input_layout_shimmer_loader"/>
        <include
            android:id="@+id/container_birth_city"
            android:layout_width="0dp"
            android:hint="@string/maya_kyc_complete_personal_information_birth_city_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_birth_city_label"
            layout="@layout/maya_view_kyc_input_layout_shimmer_loader"/>
        <View
            android:id="@+id/view_birth_place_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/flow_birth_place"
            style="@style/KycPersonalInformationDivider"/>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_nationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_kyc_complete_personal_information_section_margin"
            app:constraint_referenced_ids="text_view_nationality,maya_input_nationality"
            app:flow_maxElementsWrap="1"
            app:flow_verticalGap="@dimen/maya_margin_medium"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/view_birth_place_divider"/>
        <com.paymaya.mayaui.common.view.widget.MultiColorTextView
            android:id="@+id/text_view_nationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/maya_kyc_complete_personal_information_nationality_header"
            app:mctvSecondaryTextColor="?attr/mayaColorAccent"
            app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_personal_information_annotation"
            style="@style/JekoBoldTextBody.Primary"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_nationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_nationality_hint"
            android:inputType="none"
            app:milLabel="@string/maya_kyc_complete_personal_information_nationality_label"
            app:milPrimaryIconDrawable="0x7f080277"
            style="@style/MayaInputLayoutDefault"/>
        <View
            android:id="@+id/view_nationality_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/flow_nationality"
            style="@style/KycPersonalInformationDivider"/>
        <com.paymaya.mayaui.common.view.widget.MultiColorTextView
            android:id="@+id/text_view_current_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_kyc_complete_personal_information_section_margin"
            android:text="@string/maya_kyc_complete_personal_information_current_address_header"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/view_nationality_divider"
            app:mctvSecondaryTextColor="?attr/mayaColorAccent"
            app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_personal_information_annotation"
            style="@style/JekoBoldTextBody.Primary"/>
        <TextView
            android:textSize="@dimen/pma_text_size_body_small"
            android:id="@+id/text_view_current_address_foreign_title"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            android:text="@string/maya_kyc_complete_personal_information_current_address_foreign_info"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/text_view_current_address"/>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_current_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_medium"
            app:constraint_referenced_ids="maya_input_current_country,container_current_state,container_current_city,container_current_district,container_current_zip_code,maya_input_current_full_address,maya_input_current_additional_address,checkbox_use_current_address"
            app:flow_maxElementsWrap="1"
            app:flow_verticalGap="@dimen/maya_margin_medium"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/text_view_current_address_foreign_title"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_current_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_address_country_hint"
            android:inputType="none"
            app:milLabel="@string/maya_kyc_complete_personal_information_address_country_label"
            app:milPrimaryIconDrawable="0x7f080277"
            style="@style/MayaInputLayoutDefault"/>
        <include
            android:id="@+id/container_current_state"
            android:hint="@string/maya_kyc_complete_personal_information_address_state_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_address_state_label"
            layout="@layout/maya_view_kyc_input_layout_shimmer_loader"/>
        <include
            android:id="@+id/container_current_city"
            android:hint="@string/maya_kyc_complete_personal_information_address_city_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_address_city_label"
            layout="@layout/maya_view_kyc_input_layout_shimmer_loader"/>
        <include
            android:id="@+id/container_current_district"
            android:hint="@string/maya_kyc_complete_personal_information_address_district_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_address_district_label"
            layout="@layout/maya_view_kyc_input_layout_shimmer_loader"/>
        <include
            android:id="@+id/container_current_zip_code"
            android:hint="@string/maya_kyc_complete_personal_information_address_zip_code_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_address_zip_code_label"
            layout="@layout/maya_view_kyc_input_layout_shimmer_loader"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_current_full_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_address_full_address_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_address_full_address_label"
            style="@style/KycMultilineTextInputLayout"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_current_additional_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_address_additional_info_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_address_additional_info_label"
            style="@style/KycRegularTextInputLayout"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_use_current_address"
            android:paddingLeft="@dimen/maya_margin_small"
            android:paddingRight="@dimen/maya_margin_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:button="?attr/mayaDrawable_CommonCheckboxSelector"
            android:text="@string/maya_kyc_complete_personal_information_use_current_address"
            android:paddingHorizontal="@dimen/maya_margin_small"
            app:buttonCompat="?attr/mayaDrawable_CommonCheckboxSelector"/>
        <View
            android:id="@+id/view_current_address_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/flow_current_address"
            style="@style/KycPersonalInformationDivider"/>
        <com.paymaya.mayaui.common.view.widget.MultiColorTextView
            android:id="@+id/text_view_permanent_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_kyc_complete_personal_information_section_margin"
            android:text="@string/maya_kyc_complete_personal_information_permanent_address_header"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/view_current_address_divider"
            app:mctvSecondaryTextColor="?attr/mayaColorAccent"
            app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_personal_information_annotation"
            style="@style/JekoBoldTextBody.Primary"/>
        <TextView
            android:textSize="@dimen/pma_text_size_body_small"
            android:id="@+id/text_view_permanent_address_foreign_title"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            android:text="@string/maya_kyc_complete_personal_information_permanent_address_foreign_info"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/text_view_permanent_address"/>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_permanent_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_medium"
            app:constraint_referenced_ids="maya_input_permanent_country,container_permanent_state,container_permanent_city,container_permanent_district,container_permanent_zip_code,maya_input_permanent_full_address,maya_input_permanent_additional_address"
            app:flow_maxElementsWrap="1"
            app:flow_verticalGap="@dimen/maya_margin_medium"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/text_view_permanent_address_foreign_title"/>
        <com.paymaya.mayaui.common.view.widget.MayaInputLayout
            android:id="@+id/maya_input_permanent_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/maya_kyc_complete_personal_information_address_country_hint"
            android:inputType="none"
            app:milLabel="@string/maya_kyc_complete_personal_information_address_country_label"
            app:milPrimaryIconDrawable="0x7f080277"
            style="@style/MayaInputLayoutDefault"/>
        <include
            android:id="@+id/container_permanent_state"
            android:hint="@string/maya_kyc_complete_personal_information_address_state_hint"
            app:milLabel="@string/maya_kyc_complete_personal_information_address_state_label"
            layout="@layout/maya_view_kyc_input_layout_shimmer_loader"/>
