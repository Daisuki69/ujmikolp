<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/growth_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_large"
        android:src="@drawable/pma_ic_growth"
        android:layout_marginEnd="@dimen/pma_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/invest_with_paymaya"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_large"
        android:text="@string/pma_label_invest_with_paymaya"
        android:layout_marginStart="@dimen/pma_margin_normal"
        android:layout_marginEnd="@dimen/pma_margin_normal"
        app:layout_constraintEnd_toStartOf="@+id/growth_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/SubtitleDarkMedium"/>
    <TextView
        android:id="@+id/invest_need_upgrade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:text="@string/pma_format_invest_need_upgrade"
        android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
        android:layout_marginStart="@dimen/pma_margin_normal"
        android:layout_marginEnd="@dimen/pma_margin_normal"
        app:layout_constraintEnd_toStartOf="@+id/growth_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invest_with_paymaya"
        style="@style/Body2Dark"/>
    <androidx.constraintlayout.widget.Barrier
        android:orientation="horizontal"
        android:id="@+id/invest_upgrade_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="growth_icon,invest_need_upgrade"/>
    <View
        android:id="@+id/background_upgrade_now"
        android:background="@drawable/pma_bg_off_light_rounded"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/pma_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invest_upgrade_barrier"/>
    <com.paymaya.common.widget.TextViewWithImages
        android:id="@+id/invest_upgrade_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_extra_large"
        android:text="@string/pma_label_invest_upgrade_tip"
        android:lineSpacingExtra="0sp"
        android:layout_marginStart="@dimen/pma_margin_extra_large"
        android:layout_marginEnd="@dimen/pma_margin_extra_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invest_upgrade_barrier"
        style="@style/Body2Dark"/>
    <TextView
        android:id="@+id/invest_check_kyc_status_button"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_normal"
        android:layout_marginBottom="@dimen/pma_margin_extra_large"
        android:text="@string/pma_label_check_application_status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/invest_upgrade_tip"
        app:layout_constraintStart_toStartOf="@+id/invest_upgrade_tip"
        app:layout_constraintTop_toBottomOf="@+id/invest_upgrade_tip"
        style="?attr/secondaryButton"/>
    <TextView
        android:id="@+id/invest_upgrade_button"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_normal"
        android:layout_marginBottom="@dimen/pma_margin_extra_large"
        android:text="@string/pma_label_upgrade_now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/invest_upgrade_tip"
        app:layout_constraintStart_toStartOf="@+id/invest_upgrade_tip"
        app:layout_constraintTop_toBottomOf="@+id/invest_upgrade_tip"
        style="?attr/primaryButtonFloating"/>
</androidx.constraintlayout.widget.ConstraintLayout>
