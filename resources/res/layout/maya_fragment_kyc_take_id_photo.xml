<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/maya_margin_small"
        app:layout_constraintBottom_toTopOf="@+id/button_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_view_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_large"
                android:layout_marginTop="@dimen/maya_margin_extra_large"
                android:layout_marginRight="@dimen/maya_margin_large"
                android:text="@string/maya_kyc_take_id_photo_header"
                android:layout_marginHorizontal="@dimen/maya_margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/JekoBoldH2.Primary"/>
            <TextView
                android:id="@+id/text_view_header_subtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_kyc_id_photo_header_subtext"
                app:layout_constraintEnd_toEndOf="@+id/text_view_header"
                app:layout_constraintStart_toStartOf="@+id/text_view_header"
                app:layout_constraintTop_toBottomOf="@+id/text_view_header"
                style="@style/JekoSemiBoldLongRead.Tertiary"/>
            <dOYHB6.lN8Dz0.d8NVX3
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_extra_large"
                app:layout_constraintEnd_toEndOf="@+id/text_view_header"
                app:layout_constraintStart_toStartOf="@+id/text_view_header"
                app:layout_constraintTop_toBottomOf="@+id/text_view_header_subtext">
                <ImageView
                    android:id="@+id/image_view_information_icon"
                    android:layout_width="@dimen/maya_kyc_information_icon_size"
                    android:layout_height="@dimen/maya_kyc_information_icon_size"
                    android:src="@drawable/maya_ic_information"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/text_view_information_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maya_kyc_tips_for_taking_id_information_text"
                    android:maxLines="2"
                    android:layout_marginStart="@dimen/maya_margin_small"
                    style="@style/JekoSemiBoldTextBody.Primary"/>
            </dOYHB6.lN8Dz0.d8NVX3>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_tips"
                android:background="@drawable/maya_bg_drawable_gray_rounded_corner_border"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_large"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:layout_marginRight="@dimen/maya_margin_large"
                android:layout_marginBottom="@dimen/maya_margin_extra_large"
                android:layout_marginHorizontal="@dimen/maya_margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_layout"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/button_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_extra_large"
        android:text="@string/maya_label_continue"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
