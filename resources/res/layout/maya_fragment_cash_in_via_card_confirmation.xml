<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/confirm_transaction_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:text="@string/maya_label_confirm_transaction"
            android:layout_marginStart="@dimen/pma_margin_large"
            android:layout_marginEnd="@dimen/pma_margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldTextBody.Primary"/>
        <TextView
            android:id="@+id/amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginStart="@dimen/pma_margin_large"
            android:layout_marginEnd="@dimen/pma_margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirm_transaction_text_view"
            style="@style/JekoBoldH4.Primary"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/labels_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"/>
        <View
            android:id="@+id/labels_content_view"
            android:background="@drawable/maya_bg_content_information"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:layout_marginStart="@dimen/pma_margin_large"
            android:layout_marginEnd="@dimen/pma_margin_large"
            app:layout_constraintBottom_toBottomOf="@+id/labels_content_bottom_space_view"
            app:layout_constraintTop_toBottomOf="@+id/amount_text_view"
            app:layout_goneMarginTop="@dimen/pma_margin_normal"/>
        <TextView
            android:id="@+id/source_label_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:text="@string/pma_hint_shop_v3_source"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="@+id/labels_guide_line"
            app:layout_constraintStart_toStartOf="@+id/labels_content_view"
            app:layout_constraintTop_toTopOf="@+id/labels_content_view"
            style="@style/JekoSemiBoldSmallText.Tertiary"/>
        <TextView
            android:id="@+id/source_card_name_value_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/maya_margin_small"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintBottom_toBottomOf="@+id/logo_image_view"
            app:layout_constraintLeft_toRightOf="@+id/logo_image_view"
            app:layout_constraintRight_toRightOf="@+id/labels_content_view"
            app:layout_constraintTop_toTopOf="@+id/logo_image_view"
            style="@style/JekoSemiBoldLink.Primary"/>
        <ImageView
            android:id="@+id/logo_image_view"
            android:layout_width="@dimen/maya_cash_in_vaulted_card_logo_size"
            android:layout_height="@dimen/maya_cash_in_vaulted_card_logo_size"
            android:scaleType="fitStart"
            app:layout_constraintLeft_toRightOf="@+id/labels_guide_line"
            app:layout_constraintRight_toLeftOf="@+id/source_card_name_value_text_view"
            app:layout_constraintTop_toTopOf="@+id/source_label_text_view"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="logo_image_view, source_card_name_value_text_view"/>
        <TextView
            android:id="@+id/source_card_masked_number_value_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_small"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="@+id/labels_content_view"
            app:layout_constraintStart_toStartOf="@+id/labels_guide_line"
            app:layout_constraintTop_toBottomOf="@+id/barrier_source"
            style="@style/JekoSemiBoldLink.Tertiary"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/source_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="source_label_text_view,             source_card_masked_number_value_text_view"/>
        <View
            android:id="@+id/source_divider_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/pma_height_divider_normal"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="@+id/labels_content_view"
            app:layout_constraintStart_toStartOf="@+id/labels_content_view"
            app:layout_constraintTop_toBottomOf="@+id/source_barrier"
            style="@style/MayaContentViewDivider"/>
        <TextView
            android:id="@+id/cash_in_amount_label_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:text="@string/maya_label_cash_in_amount"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="@+id/labels_guide_line"
            app:layout_constraintStart_toStartOf="@+id/labels_content_view"
            app:layout_constraintTop_toTopOf="@+id/source_divider_view"
            style="@style/JekoSemiBoldSmallText.Tertiary"/>
        <TextView
            android:id="@+id/cash_in_amount_value_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="@+id/labels_content_view"
            app:layout_constraintStart_toStartOf="@+id/labels_guide_line"
            app:layout_constraintTop_toTopOf="@+id/cash_in_amount_label_text_view"
            style="@style/JekoSemiBoldLink.Primary"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/cash_in_amount_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="cash_in_amount_value_text_view"/>
        <View
            android:id="@+id/cash_in_amount_divider_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/pma_height_divider_normal"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="@+id/labels_content_view"
            app:layout_constraintStart_toStartOf="@+id/labels_content_view"
            app:layout_constraintTop_toBottomOf="@+id/cash_in_amount_barrier"
            style="@style/MayaContentViewDivider"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_cash_in_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="cash_in_amount_label_text_view,             cash_in_amount_value_text_view, cash_in_amount_divider_view"/>
        <TextView
            android:id="@+id/transfer_fee_label_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:text="@string/maya_label_transaction_fee"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="@+id/labels_guide_line"
            app:layout_constraintStart_toStartOf="@+id/labels_content_view"
            app:layout_constraintTop_toBottomOf="@+id/cash_in_amount_divider_view"
            style="@style/JekoSemiBoldSmallText.Tertiary"/>
        <TextView
            android:id="@+id/transfer_fee_value_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="@+id/labels_content_view"
            app:layout_constraintStart_toStartOf="@+id/labels_guide_line"
            app:layout_constraintTop_toTopOf="@+id/transfer_fee_label_text_view"
            style="@style/JekoSemiBoldLink.Primary"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/transfer_fee_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="transfer_fee_label_text_view,                     transfer_fee_value_text_view"/>
        <View
            android:id="@+id/labels_content_bottom_space_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="@+id/labels_content_view"
            app:layout_constraintStart_toStartOf="@+id/labels_content_view"
            app:layout_constraintTop_toBottomOf="@+id/transfer_fee_barrier"/>
        <TextView
            android:id="@+id/text_view_cash_in_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:text="@string/maya_label_cash_in_via_card_confirmation_note"
            android:drawablePadding="@dimen/maya_padding_small"
            android:layout_marginStart="@dimen/pma_margin_large"
            android:layout_marginEnd="@dimen/pma_margin_large"
            app:drawableStartCompat="@drawable/maya_ic_information"
            app:layout_constraintTop_toBottomOf="@+id/labels_content_bottom_space_view"
            style="@style/JekoSemiBoldSmallText.Tertiary"/>
        <Button
            android:id="@+id/cash_in_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pma_margin_normal"
            android:text="@string/pma_label_add_money_now_small"
            android:layout_marginStart="@dimen/pma_margin_large"
            android:layout_marginEnd="@dimen/pma_margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/MayaButtonPrimaryLarge"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
