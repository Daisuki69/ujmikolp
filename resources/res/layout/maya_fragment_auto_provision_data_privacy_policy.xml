<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout"
    android:background="?attr/mayaColorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_nested_scroll_view"
        android:background="?attr/mayaColorBackgroundPrimary"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/maya_margin_10"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/click_continue_disclaimer_text_view"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingLeft="@dimen/pma_padding_large"
            android:paddingTop="@dimen/pma_padding_large"
            android:paddingRight="@dimen/pma_padding_large"
            android:paddingBottom="@dimen/pma_padding_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/auto_provisions_header_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/maya_label_auto_provision_data_privacy_title_header"
                style="@style/JekoBoldH4.Primary"/>
            <TextView
                android:id="@+id/auto_provisions_subheader_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/maya_label_auto_provision_data_privacy_subtitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auto_provisions_header_text_view"
                style="@style/CerebriBookLongRead.Secondary200"/>
            <dOYHB6.lN8Dz0.d8NVX3
                android:orientation="vertical"
                android:id="@+id/auto_provisions_container_linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_medium"
                android:layout_marginBottom="@dimen/pma_margin_medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auto_provisions_subheader_text_view"/>
            <TextView
                android:textColor="@drawable/maya_color_selector_content_links_accent"
                android:id="@+id/maya_wallet_terms_and_condition_text_view"
                android:paddingTop="@dimen/maya_padding_2x_small"
                android:paddingBottom="@dimen/maya_padding_2x_small"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_24"
                android:text="@string/maya_label_auto_provision_wallet_terms_and_conditions"
                android:paddingVertical="@dimen/maya_padding_2x_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auto_provisions_container_linear_layout"
                style="@style/JekoSemiBoldSmallText.LinksAccent"/>
            <TextView
                android:textColor="@drawable/maya_color_selector_content_links_accent"
                android:id="@+id/maya_wallet_privacy_policy_text_view"
                android:paddingTop="@dimen/maya_padding_2x_small"
                android:paddingBottom="@dimen/maya_padding_2x_small"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_auto_provision_wallet_privacy_policy"
                android:paddingVertical="@dimen/maya_padding_2x_small"
                app:layout_constraintStart_toStartOf="@+id/maya_wallet_terms_and_condition_text_view"
                app:layout_constraintTop_toBottomOf="@+id/maya_wallet_terms_and_condition_text_view"
                style="@style/JekoSemiBoldSmallText.LinksAccent"/>
            <TextView
                android:textColor="@drawable/maya_color_selector_content_links_accent"
                android:id="@+id/maya_savings_terms_and_condition_text_view"
                android:paddingTop="@dimen/maya_padding_2x_small"
                android:paddingBottom="@dimen/maya_padding_2x_small"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_auto_provision_savings_terms_and_conditions"
                android:paddingVertical="@dimen/maya_padding_2x_small"
                app:layout_constraintStart_toStartOf="@+id/maya_wallet_terms_and_condition_text_view"
                app:layout_constraintTop_toBottomOf="@+id/maya_wallet_privacy_policy_text_view"
                style="@style/JekoSemiBoldSmallText.LinksAccent"/>
            <TextView
                android:textColor="@drawable/maya_color_selector_content_links_accent"
                android:id="@+id/maya_bank_savings_terms_and_condition_text_view"
                android:paddingTop="@dimen/maya_padding_2x_small"
                android:paddingBottom="@dimen/maya_padding_2x_small"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_auto_provision_bank_savings_terms_and_conditions"
                android:paddingVertical="@dimen/maya_padding_2x_small"
                app:layout_constraintStart_toStartOf="@+id/maya_savings_terms_and_condition_text_view"
                app:layout_constraintTop_toBottomOf="@+id/maya_savings_terms_and_condition_text_view"
                style="@style/JekoSemiBoldSmallText.LinksAccent"/>
            <TextView
                android:textColor="@drawable/maya_color_selector_content_links_accent"
                android:id="@+id/maya_savings_privacy_policy_text_view"
                android:paddingTop="@dimen/maya_padding_2x_small"
                android:paddingBottom="@dimen/maya_padding_2x_small"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maya_label_auto_provision_savings_privacy_policy"
                android:paddingVertical="@dimen/maya_padding_2x_small"
                app:layout_constraintStart_toStartOf="@+id/maya_bank_savings_terms_and_condition_text_view"
                app:layout_constraintTop_toBottomOf="@+id/maya_bank_savings_terms_and_condition_text_view"
                style="@style/JekoSemiBoldSmallText.LinksAccent"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/maya_savings_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="maya_savings_terms_and_condition_text_view,maya_savings_privacy_policy_text_view"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/click_continue_disclaimer_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_24"
        android:layout_marginRight="@dimen/maya_margin_24"
        android:layout_marginBottom="@dimen/maya_margin_10"
        android:text="@string/maya_label_auto_provision_continue_disclaimer"
        android:layout_marginHorizontal="@dimen/maya_margin_24"
        app:layout_constraintBottom_toTopOf="@+id/continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/CerebriMediumSmallText.Secondary"/>
    <Button
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_24"
        android:layout_marginRight="@dimen/maya_margin_24"
        android:layout_marginBottom="@dimen/maya_margin_16"
        android:text="@string/maya_label_button_continue"
        android:layout_marginHorizontal="@dimen/maya_margin_24"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
