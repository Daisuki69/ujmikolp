<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/value_text_view_pma_view_holder_primitive_toggle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/value_text_input_layout_pma_view_holder_primitive_toggle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/date_button_pma_view_holder_primitive_toggle"
        app:layout_constraintTop_toBottomOf="@+id/value_text_view_pma_view_holder_primitive_toggle">
        <com.google.android.material.textfield.TextInputEditText
            android:textSize="@dimen/pma_text_size_body2"
            android:id="@+id/value_edit_text_pma_view_holder_primitive_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/date_button_pma_view_holder_primitive_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pma_label_date"
        app:layout_constraintLeft_toRightOf="@+id/value_text_input_layout_pma_view_holder_primitive_toggle"
        app:layout_constraintRight_toLeftOf="@+id/save_button_pma_view_holder_primitive_toggle"
        app:layout_constraintTop_toTopOf="@+id/value_text_input_layout_pma_view_holder_primitive_toggle"/>
    <Button
        android:id="@+id/save_button_pma_view_holder_primitive_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pma_label_save"
        app:layout_constraintLeft_toRightOf="@+id/date_button_pma_view_holder_primitive_toggle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/value_text_input_layout_pma_view_holder_primitive_toggle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
