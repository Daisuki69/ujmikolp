<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_layout"
    android:paddingLeft="@dimen/pma_margin_large"
    android:paddingTop="@dimen/pma_margin_extra_large"
    android:paddingRight="@dimen/pma_margin_large"
    android:paddingBottom="@dimen/pma_margin_extra_large"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/pma_margin_large"
    android:paddingVertical="@dimen/pma_margin_extra_large">
    <TextView
        android:id="@+id/claim_confirm_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_vouchers_confirmation_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoBoldH6.Primary"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/voucher_claim_container"
        android:background="@drawable/maya_bg_content_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_normal"
        app:layout_constraintTop_toBottomOf="@+id/claim_confirm_title_text_view">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/voucher_half_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"/>
        <TextView
            android:id="@+id/claim_confirm_name_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginBottom="@dimen/pma_margin_normal"
            android:text="@string/maya_label_vouchers_name_title"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_small"
            app:layout_constraintEnd_toStartOf="@+id/voucher_half_guideline"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoSemiBoldSmallText.Primary"/>
        <TextView
            android:id="@+id/claim_confirm_voucher_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pma_margin_small"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/voucher_half_guideline"
            app:layout_constraintTop_toTopOf="@+id/claim_confirm_name_label"
            style="@style/JekoSemiBoldLink.Primary"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/claim_confirm_amount_group"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="claim_confirm_divider1, claim_confirm_amount_label, claim_confirm_voucher_amount_text_view"/>
        <View
            android:id="@+id/claim_confirm_divider1"
            android:background="?attr/mayaColorDividerBackgroundPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pma_height_divider_normal"
            android:layout_marginLeft="@dimen/pma_margin_normal"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:layout_marginHorizontal="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/claim_confirm_voucher_name_text_view"/>
        <TextView
            android:id="@+id/claim_confirm_amount_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:text="@string/maya_label_vouchers_amount_title"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_small"
            app:layout_constraintEnd_toStartOf="@+id/voucher_half_guideline"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/claim_confirm_divider1"
            style="@style/JekoSemiBoldSmallText.Primary"/>
        <TextView
            android:id="@+id/claim_confirm_voucher_amount_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pma_margin_small"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/voucher_half_guideline"
            app:layout_constraintTop_toTopOf="@+id/claim_confirm_amount_label"
            style="@style/JekoSemiBoldLink.Primary"/>
        <View
            android:id="@+id/claim_confirm_divider2"
            android:background="?attr/mayaColorDividerBackgroundPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pma_height_divider_normal"
            android:layout_marginLeft="@dimen/pma_margin_normal"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:layout_marginHorizontal="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/claim_confirm_voucher_amount_text_view"/>
        <TextView
            android:id="@+id/claim_confirm_ref_label"
            android:paddingBottom="@dimen/pma_margin_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:text="@string/maya_label_voucher_reference_id_title"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_small"
            app:layout_constraintEnd_toStartOf="@+id/voucher_half_guideline"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/claim_confirm_divider2"
            style="@style/JekoSemiBoldSmallText.Primary"/>
        <TextView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/claim_confirm_voucher_ref_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pma_margin_small"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/voucher_half_guideline"
            app:layout_constraintTop_toTopOf="@+id/claim_confirm_ref_label"
            style="@style/JekoSemiBoldLink.Primary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/claim_confirm_voucher_confirm_buttons_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <Button
        android:id="@+id/claim_confirm_voucher_cancel_button"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/pma_margin_large"
        android:text="@string/maya_label_vouchers_cancel_button"
        android:layout_marginEnd="@dimen/pma_margin_extra_small"
        app:layout_constraintEnd_toEndOf="@+id/claim_confirm_voucher_confirm_buttons_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voucher_claim_container"
        style="@style/MayaButtonSecondaryLarge"/>
    <Button
        android:id="@+id/claim_confirm_voucher_confirm_button"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/pma_margin_large"
        android:text="@string/maya_label_vouchers_confirm_button"
        android:layout_marginStart="@dimen/pma_margin_extra_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/claim_confirm_voucher_confirm_buttons_guideline"
        app:layout_constraintTop_toBottomOf="@+id/voucher_claim_container"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
