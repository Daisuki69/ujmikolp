<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_top_sheet_line"
        android:background="?attr/mayaColorBackgroundPrimary"
        android:layout_width="@dimen/maya_bottom_sheet_line_width"
        android:layout_height="@dimen/maya_bottom_sheet_line_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_background_sheet"
        android:background="@drawable/maya_bg_default_bottom_dialog_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_top_sheet_line"/>
    <TextView
        android:id="@+id/pay_bills_spinner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_extra_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintEnd_toEndOf="@+id/view_background_sheet"
        app:layout_constraintStart_toStartOf="@+id/view_background_sheet"
        app:layout_constraintTop_toTopOf="@+id/view_background_sheet"
        style="@style/JekoBoldSubline.Primary"/>
    <androidx.recyclerview.widget.RecyclerView
        android:scrollbarThumbVertical="?attr/mayaColorScrollbarThumb"
        android:id="@+id/pay_bills_spinner_recylerview"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_extra_large"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pay_bills_spinner_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
