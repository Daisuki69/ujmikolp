<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout_pma_view_holder_share_save"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/pma_margin_normal"
    android:layout_marginBottom="@dimen/pma_margin_normal">
    <ImageView
        android:id="@+id/icon_image_view_pma_view_holder_share_save"
        android:layout_width="@dimen/pma_share_save_icon_size"
        android:layout_height="@dimen/pma_share_save_icon_size"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/text_view_pma_view_holder_share_save"
        android:padding="@dimen/pma_padding_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:lineSpacingExtra="@dimen/pma_line_spacing_2sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_image_view_pma_view_holder_share_save"
        style="@style/NavDarkLight"/>
</androidx.constraintlayout.widget.ConstraintLayout>
