<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view_pma_fragment_maintenance"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_pma_fragment_maintenance"
        android:background="@drawable/pma_background_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo_image_view_pma_fragment_maintenance"
            android:layout_width="@dimen/pma_fragment_login_logo_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_100dp"
            android:src="0x7f0804c9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/bird_image_view_pma_fragment_updater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:src="0x7f080480"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_image_view_pma_fragment_maintenance"/>
        <TextView
            android:textSize="@dimen/pma_text_size_title"
            android:textColor="@color/primary_dark"
            android:gravity="center_horizontal"
            android:id="@+id/title_text_view_pma_fragment_maintenance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_extra_large"
            android:layout_marginTop="@dimen/pma_margin_extra_large"
            android:layout_marginRight="@dimen/pma_margin_extra_large"
            android:text="@string/pma_label_system_maintenance"
            android:fontFamily="@font/roboto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bird_image_view_pma_fragment_updater"/>
        <TextView
            android:textSize="@dimen/pma_text_size_body"
            android:textColor="@color/pma_text_color_dark_grey_two"
            android:gravity="center_horizontal"
            android:id="@+id/message_text_view_pma_fragment_maintenance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_extra_large"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginRight="@dimen/pma_margin_extra_large"
            android:layout_marginBottom="@dimen/pma_margin_normal"
            android:text="@string/pma_label_system_maintenance_subtitle"
            android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
            android:fontFamily="@font/roboto_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view_pma_fragment_maintenance"
            app:layout_constraintVertical_bias="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
