<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_view_status_icon"
        android:paddingTop="@dimen/maya_padding_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_32"
        android:src="@drawable/maya_ic_information_medium"
        android:layout_marginStart="@dimen/maya_margin_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/text_view_id_review_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_10"
        android:layout_marginTop="@dimen/maya_margin_extra_large"
        android:layout_marginRight="@dimen/maya_margin_10"
        android:text="@string/maya_kyc_id_review_header"
        android:layout_marginHorizontal="@dimen/maya_margin_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_status_icon"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoBoldH5.Primary"/>
    <TextView
        android:id="@+id/text_view_id_review_sub_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_kyc_id_review_sub_header"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_id_review_header"
        style="@style/CerebriBookTextBody"/>
    <ImageView
        android:id="@+id/image_view_captured_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_10"
        android:layout_marginBottom="@dimen/maya_margin_10"
        android:scaleType="fitCenter"
        android:layout_marginVertical="@dimen/maya_margin_10"
        app:layout_constraintBottom_toTopOf="@+id/button_primary"
        app:layout_constraintEnd_toEndOf="@+id/text_view_id_review_sub_header"
        app:layout_constraintStart_toStartOf="@+id/text_view_id_review_sub_header"
        app:layout_constraintTop_toBottomOf="@+id/text_view_id_review_sub_header"/>
    <Button
        android:id="@+id/button_primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_16"
        android:text="@string/maya_kyc_everything_clear_label_use_photo"
        app:layout_constraintBottom_toTopOf="@+id/text_view_secondary"
        app:layout_constraintEnd_toEndOf="@+id/text_view_id_review_sub_header"
        app:layout_constraintStart_toStartOf="@+id/text_view_id_review_sub_header"
        style="@style/MayaButtonPrimaryLarge"/>
    <TextView
        android:gravity="center"
        android:id="@+id/text_view_secondary"
        android:padding="@dimen/maya_padding_small"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_32"
        android:text="@string/maya_kyc_everything_clear_label_retake"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_view_id_review_sub_header"
        app:layout_constraintStart_toStartOf="@+id/text_view_id_review_sub_header"
        style="@style/JekoRegularLongRead.LinksAccent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
