<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/pma_margin_48dp">
    <ImageView
        android:id="@+id/image_view_maintenance_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="0x7f0802db"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/text_view_maintenance_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/text_view_maintenance_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:text="@string/maya_label_maintenance_title"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/text_view_maintenance_description"
        app:layout_constraintTop_toBottomOf="@+id/image_view_maintenance_image"
        style="@style/JekoBoldH5.Primary"/>
    <TextView
        android:id="@+id/text_view_maintenance_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:layout_marginBottom="?attr/actionBarSize"
        android:text="@string/maya_label_maintenance_description"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_maintenance_title"
        style="@style/CerebriBookLink.Secondary200"/>
</androidx.constraintlayout.widget.ConstraintLayout>
