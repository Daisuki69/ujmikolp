<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/agreement_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/pma_margin_normal">
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/agreement_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="?attr/mayaDrawable_CommonCheckboxSelector"
        app:buttonCompat="?attr/mayaDrawable_CommonCheckboxSelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/agreement_heading_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_2x_small"
        android:layout_marginStart="@dimen/maya_margin_small"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/agreement_subheading_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/agreement_checkbox"
        app:layout_constraintTop_toTopOf="@+id/agreement_checkbox"
        style="@style/JekoSemiBoldSmallText.Primary"/>
    <TextView
        android:id="@+id/agreement_subheading_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/maya_margin_small"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/agreement_checkbox"
        style="@style/JekoSemiBoldSmallText.Quaternanry"/>
</androidx.constraintlayout.widget.ConstraintLayout>
