<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:background="@drawable/maya_bg_solid_round_opacity_blue_40"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_view_credit_pending_header_image"
        android:layout_width="@dimen/maya_credit_header_image_width"
        android:layout_height="@dimen/maya_credit_header_image_height"
        android:layout_marginTop="@dimen/pma_margin_20dp"
        android:layout_marginBottom="@dimen/pma_margin_20dp"
        android:src="0x7f0802fd"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/pma_margin_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>
    <TextView
        android:id="@+id/text_view_credit_pending_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pma_margin_20dp"
        android:layout_marginEnd="@dimen/pma_margin_6dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/image_view_credit_pending_header_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_view_credit_pending_header_image"
        style="@style/JekoSemiBoldH5.Primary"/>
    <TextView
        android:id="@+id/text_view_credit_pending_header_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_medium"
        android:layout_marginBottom="@dimen/pma_margin_20dp"
        android:layout_marginStart="@dimen/pma_margin_20dp"
        android:layout_marginEnd="@dimen/pma_margin_6dp"
        app:layout_constraintEnd_toStartOf="@+id/image_view_credit_pending_header_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_credit_pending_header_title"
        app:layout_constraintVertical_bias="0"
        style="@style/JekoBoldSmallText.Secondary200"/>
    <TextView
        android:id="@+id/text_view_credit_pending_header_features"
        android:background="@drawable/maya_bg_solid_round_opacity_purple_40"
        android:paddingLeft="@dimen/maya_margin_normal"
        android:paddingTop="@dimen/maya_margin_normal"
        android:paddingRight="@dimen/maya_margin_normal"
        android:paddingBottom="@dimen/maya_margin_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_20"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_20"
        android:text="@string/maya_label_credit_enhanced_not_eligible_features_description"
        android:layout_marginHorizontal="@dimen/maya_margin_20"
        android:paddingHorizontal="@dimen/maya_margin_normal"
        android:paddingVertical="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_credit_pending_header_image"
        style="@style/JekoRegularSmallText.Primary"/>
    <ImageView
        android:id="@+id/image_view_credit_pending_notify_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:src="@drawable/maya_ic_information_primary_badge_grey"
        android:layout_marginStart="@dimen/pma_margin_20dp"
        android:layout_marginEnd="@dimen/pma_margin_6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_credit_pending_header_features"/>
    <TextView
        android:id="@+id/text_view_credit_pending_notify_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:text="@string/maya_label_credit_enhanced_not_eligible_notification"
        android:layout_marginStart="@dimen/maya_margin_small"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_credit_pending_notify_badge"
        app:layout_constraintTop_toBottomOf="@+id/text_view_credit_pending_header_features"
        style="@style/CerebriMediumSmallText.Tertiary200"/>
    <View
        android:id="@+id/view_credit_pending_bottom_space"
        android:layout_width="0dp"
        android:layout_height="@dimen/maya_credit_header_space_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_credit_pending_notify_message"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_credit_pending_enhanced_info"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="text_view_credit_pending_header_features,         image_view_credit_pending_notify_badge,         text_view_credit_pending_notify_message"/>
</androidx.constraintlayout.widget.ConstraintLayout>
