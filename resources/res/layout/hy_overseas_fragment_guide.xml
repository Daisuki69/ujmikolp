<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/txy_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/txy_hy_overseas_btn_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/txy_huiyan_icon_back"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/hy_overseas_start_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/hy_overseas_start_title"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/txy_hy_overseas_btn_back"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#888888"
        android:id="@+id/hy_overseas_start_title_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/hy_overseas_start_title_info"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/hy_overseas_start_title"/>
    <ImageView
        android:id="@+id/hy_liveness_icon_phone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/txy_hy_liveness_icon_phone"
        app:layout_constraintStart_toStartOf="@+id/hy_overseas_start_title_info"
        app:layout_constraintTop_toBottomOf="@+id/hy_overseas_start_title_info"/>
    <TextView
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hy_overseas_start_keep_facing"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/hy_liveness_icon_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hy_liveness_icon_phone"
        app:layout_constraintTop_toTopOf="@+id/hy_liveness_icon_phone"/>
    <ImageView
        android:id="@+id/hy_liveness_icon_ligth"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/txy_hy_liveness_icon_ligth"
        app:layout_constraintStart_toStartOf="@+id/hy_overseas_start_title_info"
        app:layout_constraintTop_toBottomOf="@+id/hy_liveness_icon_phone"/>
    <TextView
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hy_overseas_start_environment"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/hy_liveness_icon_ligth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hy_liveness_icon_ligth"
        app:layout_constraintTop_toTopOf="@+id/hy_liveness_icon_ligth"/>
    <ImageView
        android:id="@+id/hy_liveness_icon_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/txy_hy_liveness_icon_head"
        app:layout_constraintStart_toStartOf="@+id/hy_overseas_start_title_info"
        app:layout_constraintTop_toBottomOf="@+id/hy_liveness_icon_ligth"/>
    <TextView
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hy_overseas_start_block_face"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/hy_liveness_icon_head"
        app:layout_constraintStart_toEndOf="@+id/hy_liveness_icon_head"
        app:layout_constraintTop_toTopOf="@+id/hy_liveness_icon_head"/>
    <Button
        android:textColor="@color/txy_white"
        android:id="@+id/hy_oversea_start_check_btn"
        android:background="@drawable/txy_huiyan_default_button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:text="@string/hy_overseas_start_btn"
        android:textAllCaps="false"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
