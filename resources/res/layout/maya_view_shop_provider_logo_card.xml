<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_card_view_pma_shop_view_v3_provider_logo_card"
    android:background="?attr/mayaContentBorderShadowCard"
    android:layout_width="@dimen/maya_shop_provider_logo_card_width"
    android:layout_height="@dimen/maya_shop_provider_logo_card_height">
    <ImageView
        android:id="@+id/shop_provider_icon_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/maya_margin_normal"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/shop_provider_placeholder_icon_image_view"
        android:layout_width="@dimen/maya_shop_provider_placeholder_size"
        android:layout_height="@dimen/maya_shop_provider_placeholder_size"
        android:layout_margin="@dimen/maya_margin_normal"
        android:src="?attr/mayaShopDefaultIcon"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
