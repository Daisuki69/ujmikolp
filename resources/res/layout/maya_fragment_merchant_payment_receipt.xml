<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_pma_fragment_merchant_payment_receipt"
    android:paddingLeft="@dimen/pma_padding_extra_large"
    android:paddingTop="@dimen/pma_padding_normal"
    android:paddingRight="@dimen/pma_padding_extra_large"
    android:paddingBottom="@dimen/pma_padding_normal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/label_guide_pma_fragment_merchant_payment_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.44"/>
    <dOYHB6.lN8Dz0.zvMGC1
        android:id="@+id/merchant_container_pma_fragment_merchant_payment_receipt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <dOYHB6.lN8Dz0.zvMGC1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/pma_margin_small"
            android:layout_toLeftOf="@+id/merchant_image_view_pma_fragment_merchant_payment_receipt"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/pma_margin_small"
            android:layout_toStartOf="@+id/merchant_image_view_pma_fragment_merchant_payment_receipt"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/merchant_title_text_pma_fragment_merchant_payment_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pma_label_merchant"
                style="@style/Body2DarkLight"/>
            <TextView
                android:id="@+id/merchant_text_pma_fragment_merchant_payment_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_2x_small"
                android:layout_marginRight="@dimen/pma_margin_normal"
                android:layout_below="@+id/merchant_title_text_pma_fragment_merchant_payment_receipt"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                style="@style/BodyDarkBold"/>
        </dOYHB6.lN8Dz0.zvMGC1>
        <ImageView
            android:id="@+id/merchant_image_view_pma_fragment_merchant_payment_receipt"
            android:background="@drawable/pma_background_display_photo"
            android:padding="@dimen/pma_padding_10dp"
            android:layout_width="@dimen/pma_send_money_receipt_product_image_size"
            android:layout_height="@dimen/pma_send_money_receipt_product_image_size"
            android:src="0x7f0804d3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription=""
            android:layout_alignParentEnd="true"/>
    </dOYHB6.lN8Dz0.zvMGC1>
    <View
        android:id="@+id/merchant_divider_pma_fragment_merchant_payment_receipt"
        android:background="@drawable/pma_broken_line_receipt_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/pma_height_divider_large"
        android:layout_marginTop="@dimen/pma_margin_normal"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merchant_container_pma_fragment_merchant_payment_receipt"/>
    <TextView
        android:id="@+id/amount_title_text_pma_fragment_merchant_payment_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_normal"
        android:text="@string/pma_label_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merchant_divider_pma_fragment_merchant_payment_receipt"
        style="@style/Body2DarkLight"/>
    <TextView
        android:textSize="@dimen/pma_send_money_receipt_message_amount_text_size"
        android:textColor="@color/error"
        android:id="@+id/amount_text_pma_fragment_merchant_payment_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_2x_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_title_text_pma_fragment_merchant_payment_receipt"
        style="@style/BodyDarkBold"/>
    <TextView
        android:textSize="@dimen/pma_text_size_caption"
        android:textColor="@color/dark_light"
        android:id="@+id/completed_text_pma_fragment_merchant_payment_receipt"
        android:background="@drawable/pma_drawable_completed_button"
        android:padding="@dimen/pma_padding_extra_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pma_label_completed"
        android:drawableLeft="@drawable/pma_ic_check_status"
        android:drawableStart="@drawable/pma_ic_check_status"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="@+id/amount_text_pma_fragment_merchant_payment_receipt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/amount_title_text_pma_fragment_merchant_payment_receipt"/>
    <View
        android:id="@+id/amount_divider_pma_fragment_merchant_payment_receipt"
        android:background="@drawable/pma_broken_line_receipt_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/pma_height_divider_large"
        android:layout_marginTop="@dimen/pma_margin_normal"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_text_pma_fragment_merchant_payment_receipt"
        app:layout_goneMarginTop="@dimen/pma_margin_normal"/>
    <TextView
        android:id="@+id/transaction_details_title_text_pma_fragment_merchant_payment_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_normal"
        android:text="@string/pma_label_transaction_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_divider_pma_fragment_merchant_payment_receipt"
        style="@style/BodyDarkMedium"/>
    <TextView
        android:id="@+id/reference_id_title_text_pma_fragment_merchant_payment_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_normal"
        android:text="@string/pma_label_reference_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transaction_details_title_text_pma_fragment_merchant_payment_receipt"
        style="@style/Body2DarkLight"/>
    <TextView
        android:id="@+id/reference_id_text_pma_fragment_merchant_payment_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/reference_id_title_text_pma_fragment_merchant_payment_receipt"
        app:layout_constraintStart_toStartOf="@+id/label_guide_pma_fragment_merchant_payment_receipt"
        app:layout_constraintTop_toTopOf="@+id/reference_id_title_text_pma_fragment_merchant_payment_receipt"
        style="@style/Body2DarkBold"/>
</androidx.constraintlayout.widget.ConstraintLayout>
