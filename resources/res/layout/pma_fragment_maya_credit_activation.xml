<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_pma_fragment_maya_credit_activation"
    android:background="@color/pearl_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Space
            android:id="@+id/top_card_guide_pma_fragment_maya_credit_activation"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="@+id/card_view_pma_fragment_maya_credit_activation"
            app:layout_constraintStart_toStartOf="@+id/card_view_pma_fragment_maya_credit_activation"
            app:layout_constraintTop_toTopOf="@+id/card_view_pma_fragment_maya_credit_activation"/>
        <View
            android:id="@+id/card_shadow_view_pma_fragment_maya_credit_activation"
            android:background="@drawable/pma_card_shadow2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/pma_dimen_maya_credit_shadow_space"
            android:layout_marginBottom="@dimen/pma_dimen_maya_credit_shadow_space"
            app:layout_constraintBottom_toBottomOf="@+id/card_view_pma_fragment_maya_credit_activation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_view_pma_fragment_maya_credit_activation"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_view_pma_fragment_maya_credit_activation"
            android:background="@drawable/pma_background_white_all_corners_round"
            android:paddingBottom="@dimen/pma_padding_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:layout_marginBottom="@dimen/pma_margin_normal"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintBottom_toTopOf="@+id/policies_title_view_pma_fragment_maya_credit_activation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/center_guide_pma_fragment_maya_credit_activation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>
            <TextView
                android:id="@+id/amount_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_large"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:layout_constraintBottom_toTopOf="@+id/offer_expire_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Display02StandardGray200"/>
            <TextView
                android:gravity="center"
                android:id="@+id/offer_expire_text_view_pma_fragment_maya_credit_activation"
                android:background="@drawable/pma_bg_offer_expiration"
                android:padding="@dimen/pma_padding_extra_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/pma_label_maya_credit_offer_expire"
                android:maxLines="1"
                android:textAlignment="center"
                android:paddingStart="@dimen/pma_padding_small"
                android:paddingEnd="@dimen/pma_padding_small"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:autoSizeMaxTextSize="@dimen/pma_text_size_body2"
                app:autoSizeMinTextSize="@dimen/pma_text_size_auto_size_min_smallest_fixed"
                app:autoSizeTextType="uniform"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/thanks_for_joining_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/amount_text_view_pma_fragment_maya_credit_activation"
                style="@style/Heading05BoldGray200"/>
            <TextView
                android:id="@+id/thanks_for_joining_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/pma_label_maya_credit_activation_caption"
                android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:layout_constraintBottom_toTopOf="@+id/thanks_for_joining_divider_view_pma_fragment_maya_credit_activation"
                app:layout_constraintTop_toBottomOf="@+id/offer_expire_text_view_pma_fragment_maya_credit_activation"
                style="@style/BodyMediumLightGray180"/>
            <View
                android:id="@+id/thanks_for_joining_divider_view_pma_fragment_maya_credit_activation"
                android:background="@color/light"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pma_height_divider_normal"
                android:layout_marginTop="@dimen/pma_margin_small"
                app:layout_constraintTop_toBottomOf="@+id/thanks_for_joining_text_view_pma_fragment_maya_credit_activation"/>
            <TextView
                android:id="@+id/billing_coverage_title_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/pma_label_maya_credit_due_date_title"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:layout_constraintBottom_toTopOf="@+id/billing_coverage_value_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="@+id/center_guide_pma_fragment_maya_credit_activation"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thanks_for_joining_divider_view_pma_fragment_maya_credit_activation"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/BodyMediumEmphasisGray200"/>
            <TextView
                android:id="@+id/billing_coverage_value_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_extra_small"
                android:layout_marginBottom="@dimen/pma_margin_small"
                android:text="@string/pma_label_maya_credit_due_date_value"
                android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:layout_constraintBottom_toTopOf="@+id/billing_bottom_barrier_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="@+id/center_guide_pma_fragment_maya_credit_activation"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/billing_coverage_title_text_view_pma_fragment_maya_credit_activation"
                style="@style/BodyMediumLightGray180"/>
            <View
                android:id="@+id/billing_divider_view_pma_fragment_maya_credit_activation"
                android:background="@color/light"
                android:layout_width="@dimen/pma_height_divider_normal"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/billing_bottom_barrier_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="@+id/center_guide_pma_fragment_maya_credit_activation"
                app:layout_constraintTop_toBottomOf="@+id/thanks_for_joining_divider_view_pma_fragment_maya_credit_activation"/>
            <TextView
                android:id="@+id/billing_end_date_title_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/pma_label_maya_credit_billing_end_date_title"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:layout_constraintBottom_toTopOf="@+id/billing_end_date_value_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/center_guide_pma_fragment_maya_credit_activation"
                app:layout_constraintTop_toBottomOf="@+id/thanks_for_joining_divider_view_pma_fragment_maya_credit_activation"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/BodyMediumEmphasisGray200"/>
            <TextView
                android:id="@+id/billing_end_date_value_text_view_pma_fragment_maya_credit_activation"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_extra_small"
                android:text="@string/pma_label_maya_credit_billing_end_date_value"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:layout_constraintBottom_toTopOf="@+id/customize_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/center_guide_pma_fragment_maya_credit_activation"
                app:layout_constraintTop_toBottomOf="@+id/billing_end_date_title_text_view_pma_fragment_maya_credit_activation"
                style="@style/BodyMediumLightGray180"/>
            <com.paymaya.common.widget.HtmlTextView
                android:textColor="@color/primary"
                android:id="@+id/customize_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_2x_small"
                android:layout_marginBottom="@dimen/pma_margin_small"
                android:text="@string/pma_label_maya_credit_customize"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:htmlUnderline="true"
                app:layout_constraintBottom_toTopOf="@+id/billing_bottom_barrier_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/center_guide_pma_fragment_maya_credit_activation"
                app:layout_constraintTop_toBottomOf="@+id/billing_end_date_value_text_view_pma_fragment_maya_credit_activation"
                app:layout_goneMarginTop="@dimen/pma_margin_extra_small"
                style="@style/BodyMediumLinkPrimary100"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/billing_bottom_barrier_pma_fragment_maya_credit_activation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="billing_coverage_value_text_view_pma_fragment_maya_credit_activation,customize_text_view_pma_fragment_maya_credit_activation"/>
            <View
                android:id="@+id/billing_bottom_divider_view_pma_fragment_maya_credit_activation"
                android:background="@color/light"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pma_height_divider_normal"
                app:layout_constraintTop_toBottomOf="@+id/billing_bottom_barrier_pma_fragment_maya_credit_activation"/>
            <TextView
                android:id="@+id/interest_rate_title_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/pma_label_maya_credit_service_fee_title"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:layout_constraintBottom_toTopOf="@+id/interest_rate_value_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/billing_bottom_divider_view_pma_fragment_maya_credit_activation"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/BodyMediumEmphasisGray200"/>
            <TextView
                android:id="@+id/interest_rate_value_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_2x_small"
                android:layout_marginBottom="@dimen/pma_margin_2x_small"
                android:text="@string/pma_label_maya_credit_service_fee_value_p"
                android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:htmlUnderline="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/interest_rate_title_text_view_pma_fragment_maya_credit_activation"
                style="@style/BodyMediumLightGray180"/>
            <com.paymaya.common.widget.HtmlTextView
                android:textColor="@color/pma_gray_160_shade"
                android:id="@+id/know_more_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_2x_small"
                android:layout_marginBottom="@dimen/pma_margin_small"
                android:text="@string/pma_label_maya_credit_know_more"
                android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:htmlUnderline="true"
                app:layout_constraintBottom_toTopOf="@+id/interest_rate_divider_view_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/interest_rate_value_text_view_pma_fragment_maya_credit_activation"
                style="@style/BodyMediumLinkPrimary100"/>
            <View
                android:id="@+id/interest_rate_divider_view_pma_fragment_maya_credit_activation"
                android:background="@color/light"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pma_height_divider_normal"
                app:layout_constraintBottom_toTopOf="@+id/billing_statement_email_title_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintTop_toBottomOf="@+id/interest_rate_value_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/billing_statement_email_title_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:text="@string/pma_label_maya_credit_billing_statement_email"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:layout_constraintBottom_toTopOf="@+id/no_billing_statement_email_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/interest_rate_divider_view_pma_fragment_maya_credit_activation"
                style="@style/BodyMediumEmphasisGray200"/>
            <TextView
                android:id="@+id/no_billing_statement_email_text_view_pma_fragment_maya_credit_activation"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:layout_marginBottom="@dimen/pma_margin_medium"
                android:text="@string/pma_label_maya_credit_no_billing_statement_email"
                android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/billing_statement_email_value_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/billing_statement_email_title_text_view_pma_fragment_maya_credit_activation"
                style="@style/BodyMediumItalicGray120"/>
            <TextView
                android:id="@+id/billing_statement_email_value_text_view_pma_fragment_maya_credit_activation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pma_margin_small"
                android:layout_marginBottom="@dimen/pma_margin_medium"
                android:lineSpacingExtra="@dimen/pma_line_spacing_3sp"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pma_margin_normal"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/billing_statement_verified_image_view_pma_fragment_maya_credit_activation"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/no_billing_statement_email_text_view_pma_fragment_maya_credit_activation"
                app:layout_goneMarginEnd="@dimen/pma_margin_normal"
                style="@style/BodyMediumLightGray180"/>
            <ImageView
                android:id="@+id/billing_statement_verified_image_view_pma_fragment_maya_credit_activation"
                android:layout_width="@dimen/pma_dimen_maya_credit_email_verified_size"
                android:layout_height="@dimen/pma_dimen_maya_credit_email_verified_size"
                android:src="@drawable/pma_ic_maya_credit_verified_email"
                android:layout_marginStart="@dimen/pma_margin_extra_small"
                android:layout_marginEnd="@dimen/pma_margin_normal"
                app:layout_constraintBottom_toBottomOf="@+id/billing_statement_email_value_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/billing_statement_email_value_text_view_pma_fragment_maya_credit_activation"
                app:layout_constraintTop_toTopOf="@+id/billing_statement_email_value_text_view_pma_fragment_maya_credit_activation"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:textColor="@color/light_light"
            android:id="@+id/exclusive_offer_chip_view_pma_fragment_maya_credit_activation"
            android:background="@drawable/pma_background_solid_round_rect_purple"
            android:paddingTop="@dimen/pma_padding_extra_small"
            android:paddingBottom="@dimen/pma_padding_extra_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pma_label_exclusive_offer"
            android:paddingStart="@dimen/pma_padding_small"
            android:paddingEnd="@dimen/pma_padding_small"
            app:layout_constraintBottom_toBottomOf="@+id/top_card_guide_pma_fragment_maya_credit_activation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/top_card_guide_pma_fragment_maya_credit_activation"
            style="@style/Heading04EmphasisGray200"/>
        <TextView
            android:id="@+id/policies_title_view_pma_fragment_maya_credit_activation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pma_margin_small"
            android:text="@string/pma_label_maya_credit_policies_title"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/pma_margin_normal"
            app:layout_constraintBottom_toTopOf="@+id/policies_content_recycler_view_pma_fragment_maya_credit_activation"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Heading04EmphasisGray200"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/policies_content_recycler_view_pma_fragment_maya_credit_activation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pma_margin_medium"
            android:overScrollMode="never"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintBottom_toTopOf="@+id/submit_button_view_pma_fragment_maya_credit_activation"/>
        <Button
            android:id="@+id/submit_button_view_pma_fragment_maya_credit_activation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pma_bottom_button"
            android:layout_marginBottom="@dimen/pma_margin_small"
            android:text="@string/pma_label_maya_credit_activate"
            android:layout_marginStart="@dimen/pma_margin_normal"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintBottom_toTopOf="@+id/powered_by_lending_description_view_pma_fragment_maya_credit_activation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/pma_primary_green_button_floating"/>
        <TextView
            android:id="@+id/powered_by_lending_description_view_pma_fragment_maya_credit_activation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pma_margin_extra_large"
            android:text="@string/pma_label_maya_credit_lending_corporation"
            app:htmlUnderline="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/BodySmallStandardGray140"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
