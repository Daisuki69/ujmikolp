<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/maya_padding_large"
    android:paddingTop="?attr/actionBarSize"
    android:paddingRight="@dimen/maya_padding_large"
    android:paddingBottom="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/maya_padding_large"
    android:paddingVertical="?attr/actionBarSize">
    <ImageView
        android:id="@+id/image_view_maya_banner"
        android:layout_width="@dimen/maya_maintenance_banner_graphic_logo_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_normal"
        android:layout_marginTop="@dimen/maya_margin_28"
        android:layout_marginRight="@dimen/maya_margin_normal"
        android:src="0x7f08029d"
        android:adjustViewBounds="true"
        android:layout_marginHorizontal="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/image_view_maintenance_image"
        app:layout_constraintStart_toStartOf="@+id/image_view_maintenance_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/image_view_maintenance_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:src="0x7f0802db"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/text_view_maintenance_title"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_maya_banner"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/text_view_maintenance_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:text="@string/maya_label_app_maintenance_title"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/text_view_maintenance_description"
        app:layout_constraintTop_toBottomOf="@+id/image_view_maintenance_image"
        style="@style/JekoBoldH4"/>
    <com.paymaya.common.widget.HtmlTextView
        android:textColor="@color/maya_shades_of_grey_4"
        android:id="@+id/text_view_maintenance_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:layout_marginBottom="@dimen/maya_margin_medium"
        android:text="@string/maya_label_app_maintenance_description"
        android:textAlignment="center"
        app:htmlUnderline="false"
        app:layout_constraintBottom_toTopOf="@+id/layout_help_center_card_container"
        app:layout_constraintTop_toBottomOf="@+id/text_view_maintenance_title"
        style="@style/CerebriBookLink"/>
    <include
        android:id="@+id/layout_help_center_card_container"
        android:background="@drawable/maya_bg_content_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginBottom="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1"
        layout="@layout/maya_view_help_center_card_container"/>
</androidx.constraintlayout.widget.ConstraintLayout>
