<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error_constraint_layout"
    android:background="@drawable/maya_bg_content_borderless_ghost_white"
    android:paddingLeft="@dimen/maya_padding_medium"
    android:paddingRight="@dimen/maya_padding_medium"
    android:paddingBottom="@dimen/maya_padding_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/maya_padding_medium">
    <ImageView
        android:id="@+id/error_emoji_image_view"
        android:layout_width="@dimen/maya_emoji_width"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_eye_emoji"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/error_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_negative_margin_8"
        android:text="@string/maya_label_rewards_catalog_error_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_emoji_image_view"
        style="@style/CerebriMediumLongRead"/>
    <TextView
        android:id="@+id/error_retry_text_view"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_2x_small"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/maya_label_try_again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_title_text_view"
        style="@style/CerebriMediumLongRead.Accent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
