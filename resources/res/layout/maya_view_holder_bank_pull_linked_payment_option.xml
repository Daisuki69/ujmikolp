<?xml version="1.0" encoding="utf-8"?>
<com.paymaya.common.widget.ItemSlideLayoutView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_remove_content"
        android:background="@drawable/maya_bg_solid_round_red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/maya_margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/image_view_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/maya_ic_reject"
            app:layout_constraintBottom_toTopOf="@+id/text_view_remove"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:textColor="@color/maya_primary_white"
            android:id="@+id/text_view_remove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            android:text="@string/maya_label_remove"
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/maya_margin_extra_small"
            android:layout_marginEnd="@dimen/maya_margin_extra_small"
            android:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="@dimen/maya_text_size_small_text"
            app:autoSizeMinTextSize="@dimen/maya_text_size_auto_size_min_smallest"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_remove"
            style="@style/JekoSemiBoldSmallText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_card_content"
        android:background="@drawable/maya_bg_solid_round_primary_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/maya_margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="@dimen/maya_cash_in_bank_pull_v2_logo_size"
            android:layout_height="@dimen/maya_cash_in_bank_pull_v2_logo_size"
            android:layout_marginTop="@dimen/maya_margin_medium"
            android:layout_marginBottom="@dimen/maya_margin_medium"
            android:scaleType="fitCenter"
            android:layout_marginStart="@dimen/maya_margin_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/text_view_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_small"
            android:layout_marginStart="@dimen/maya_margin_medium"
            android:layout_marginEnd="@dimen/maya_margin_small"
            app:layout_constraintBottom_toTopOf="@+id/text_view_message"
            app:layout_constraintEnd_toStartOf="@+id/image_view_more"
            app:layout_constraintStart_toEndOf="@+id/image_view_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_goneMarginBottom="@dimen/maya_margin_normal"
            app:layout_goneMarginEnd="@dimen/maya_margin_small"
            style="@style/JekoSemiBoldTextBody.Secondary"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/text_view_message"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            android:layout_marginBottom="@dimen/maya_margin_small"
            android:maxLines="2"
            android:layout_marginEnd="@dimen/maya_margin_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_view_more"
            app:layout_constraintStart_toStartOf="@+id/text_view_name"
            app:layout_constraintTop_toBottomOf="@+id/text_view_name"
            app:layout_goneMarginEnd="@dimen/maya_margin_small"
            style="@style/CerebriBookSmallText.Quaternary"/>
        <ImageView
            android:id="@+id/image_view_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/maya_ic_service_help_grey_arrow"
            android:layout_marginEnd="@dimen/maya_margin_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.paymaya.common.widget.ItemSlideLayoutView>
