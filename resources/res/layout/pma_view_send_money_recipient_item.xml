<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pma_background_white"
    android:paddingTop="@dimen/pma_padding_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/colorPrimary"
        android:id="@+id/recent_indicator_text_view_pma_view_send_money_recipient_item"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_small"
        android:text="@string/pma_label_recent"
        android:fontFamily="@string/pma_font_family_roboto_medium"
        android:layout_marginStart="@dimen/pma_margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/contact_name_text_view_pma_view_send_money_recipient_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_small"
        android:singleLine="true"
        android:fontFamily="@string/pma_font_family_roboto_medium"
        android:layout_marginStart="@dimen/pma_margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/type_text_view_pma_view_send_money_recipient_item"
        app:layout_constraintTop_toBottomOf="@+id/recent_indicator_text_view_pma_view_send_money_recipient_item"/>
    <TextView
        android:gravity="right"
        android:id="@+id/type_text_view_pma_view_send_money_recipient_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/pma_margin_small"
        android:text="@string/pma_label_mobile"
        android:layout_marginEnd="@dimen/pma_margin_small"
        app:layout_constraintLeft_toRightOf="@+id/contact_name_text_view_pma_view_send_money_recipient_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contact_name_text_view_pma_view_send_money_recipient_item"/>
    <TextView
        android:id="@+id/mobile_number_text_view_pma_view_send_money_recipient_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_small"
        android:layout_marginRight="@dimen/pma_margin_small"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_name_text_view_pma_view_send_money_recipient_item"/>
    <View
        android:background="@color/pma_border"
        android:layout_width="0dp"
        android:layout_height="@dimen/pma_height_divider_small"
        android:layout_marginTop="@dimen/pma_margin_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobile_number_text_view_pma_view_send_money_recipient_item"/>
</androidx.constraintlayout.widget.ConstraintLayout>
