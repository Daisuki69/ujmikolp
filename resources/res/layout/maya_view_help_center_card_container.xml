<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_help_center_card_container"
    android:background="@drawable/maya_bg_content_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_view_help_icon"
        android:layout_width="@dimen/maya_help_card_container_icon_size"
        android:layout_height="@dimen/maya_help_card_container_icon_size"
        android:src="0x7f0803aa"
        android:layout_marginStart="@dimen/maya_margin_normal"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constraintEnd_toStartOf="@+id/text_view_help_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view_help_title"
        app:layout_constraintVertical_bias="0.4"/>
    <TextView
        android:id="@+id/text_view_help_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:text="@string/maya_label_help_center_title"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/html_text_view_help_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_help_icon"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoBoldTextBody.Primary"/>
    <com.paymaya.common.widget.HtmlTextView
        android:id="@+id/html_text_view_help_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_medium"
        android:text="@string/maya_html_help_center_description"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:htmlUnderline="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_view_help_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_help_title"
        style="@style/JekoBoldLink.Tertiary200"/>
</androidx.constraintlayout.widget.ConstraintLayout>
