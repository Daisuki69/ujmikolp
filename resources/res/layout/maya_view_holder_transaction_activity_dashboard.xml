<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_container"
    android:background="@drawable/maya_bg_activity_list_clickable_item"
    android:paddingBottom="@dimen/maya_margin_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/maya_margin_normal"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/maya_margin_normal"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CerebriBookSmallText.Quaternary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_target"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/text_view_action"
        app:layout_constraintStart_toStartOf="@+id/text_view_action"
        app:layout_constraintTop_toBottomOf="@+id/text_view_action"
        app:layout_goneMarginBottom="@dimen/maya_margin_medium"
        style="@style/JekoBoldLink.Primary"/>
    <TextView
        android:id="@+id/text_view_fee_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/text_view_target"
        style="@style/CerebriBookSmallText.Quaternary"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.6"/>
    <TextView
        android:gravity="end|center_vertical"
        android:id="@+id/text_view_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CerebriBookSmallText.Quaternary"/>
    <TextView
        android:gravity="end|center_vertical"
        android:id="@+id/text_view_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_view_target"
        app:layout_constraintEnd_toEndOf="@+id/text_view_date"
        app:layout_constraintStart_toStartOf="@+id/text_view_date"
        style="@style/JekoBoldLink.Accent"/>
    <TextView
        android:gravity="end|center_vertical"
        android:id="@+id/text_view_fee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/text_view_fee_label"
        style="@style/CerebriBookSmallText.Quaternary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
