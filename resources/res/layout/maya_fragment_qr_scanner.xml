<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout_maya_fragment_qr_scanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/guide_line_border_scan_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3669"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/guideline_center_constraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/guide_line_border_scan_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.6379"/>
    <dOYHB6.lN8Dz0.yf3D09
        android:id="@+id/qr_scanner_frame_layout"
        android:background="@color/maya_shades_of_grey_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include
        android:id="@+id/view_scan_qr_header_default"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_18"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/guide_line_border_scan_top"
        app:layout_constraintTop_toBottomOf="@+id/back_image_view"
        app:layout_constraintVertical_bias="1"
        layout="@layout/view_scan_qr_header_default"/>
    <com.paymaya.mayaui.qr.view.widget.MayaCameraHeaderQRPH
        android:id="@+id/view_scan_qr_header_qrph_banks"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/guide_line_border_scan_top"
        app:layout_constraintTop_toBottomOf="@+id/back_image_view"
        app:layout_constraintVertical_bias="0"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="center_horizontal"
        android:id="@+id/text_view_qrph_scan_error"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_label_please_scan_another_code"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_line_border_scan_bottom"
        style="@style/JekoBoldH6.Error"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/deny_permission_constraint_group"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="deny_permission_background_view,         allow_permission_title_text_view,         allow_permission_message_text_view,         enable_camera_text_view,         text_view_camera_label"/>
    <View
        android:id="@+id/deny_permission_background_view"
        android:background="@color/maya_shades_of_grey_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/text_view_camera_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_camera"
        android:drawablePadding="@dimen/maya_padding_small"
        app:drawableStartCompat="0x7f08022b"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_center_constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_center_constraint"
        style="@style/JekoBoldSubline.White"/>
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/allow_permission_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_56"
        android:layout_marginRight="@dimen/maya_margin_56"
        android:layout_marginBottom="@dimen/maya_margin_44"
        android:text="@string/maya_label_allow_access_to_following"
        app:layout_constraintBottom_toTopOf="@+id/text_view_camera_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/JekoBoldH5.MainSecondary"/>
    <TextView
        android:textSize="@dimen/maya_text_size_text_body"
        android:gravity="center_horizontal"
        android:id="@+id/allow_permission_message_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_medium"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:text="@string/maya_label_camera_permission_spiel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_camera_label"
        style="@style/JekoRegularLongRead.Quaternary"/>
    <TextView
        android:id="@+id/enable_camera_text_view"
        android:padding="@dimen/maya_padding_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_40"
        android:text="@string/maya_label_open_phone_settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allow_permission_message_text_view"
        style="@style/JekoBoldLink.Accent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_image_view"
        android:background="@drawable/maya_bg_selector_button_transparent_default"
        android:padding="@dimen/maya_padding_normal"
        android:layout_width="@dimen/maya_button_height_large"
        android:layout_height="@dimen/maya_button_height_large"
        android:src="@drawable/maya_ic_left_arrow_white"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/toolbar_text_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_service_scan_qr"
        app:layout_constraintBottom_toBottomOf="@+id/back_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_image_view"
        style="@style/JekoSemiBoldTextBody.Primary"/>
    <com.paymaya.common.widget.MayaButtonWithIcon
        android:id="@+id/upload_qr_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_52"
        android:layout_marginStart="@dimen/maya_margin_20"
        android:layout_marginEnd="@dimen/maya_margin_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_show_my_qr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginEnd="@dimen/maya_margin_20"
        app:mbviButtonIconDrawable="@drawable/maya_ic_resources"
        app:mbviButtonText="@string/maya_label_upload_qr"/>
    <com.paymaya.common.widget.MayaButtonWithIcon
        android:id="@+id/button_show_my_qr"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_52"
        android:layout_marginStart="@dimen/maya_margin_5"
        android:layout_marginEnd="@dimen/maya_margin_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/upload_qr_button"
        app:mbviButtonIconDrawable="@drawable/maya_ic_resources"
        app:mbviButtonText="@string/maya_label_show_my_qr"/>
</androidx.constraintlayout.widget.ConstraintLayout>
