<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_container_pma_fragment_request_money"
    android:background="@color/light_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">
    <dOYHB6.lN8Dz0.gDiks7
        android:id="@+id/scroll_view_pma_fragment_request_money"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/continue_button_pma_fragment_request_money"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="@dimen/pma_padding_extra_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/amount_text_input_layout_pma_fragment_request_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pma_margin_20dp"
                app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:textSize="@dimen/pma_text_size_body"
                    android:id="@+id/amount_edit_text_pma_fragment_request_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pma_hint_amount"
                    android:cursorVisible="false"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:fontFamily="@font/roboto"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/message_text_input_layout_pma_fragment_request_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pma_margin_20dp"
                app:layout_constraintTop_toBottomOf="@+id/amount_text_input_layout_pma_fragment_request_money">
                <com.google.android.material.textfield.TextInputEditText
                    android:textSize="@dimen/pma_text_size_body"
                    android:id="@+id/message_edit_text_pma_fragment_request_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pma_hint_message_optional"
                    android:maxLines="5"
                    android:maxLength="@integer/pma_message_max_length"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"
                    android:fontFamily="@font/roboto"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </dOYHB6.lN8Dz0.gDiks7>
    <Button
        android:id="@+id/continue_button_pma_fragment_request_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pma_label_continue"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view_pma_fragment_request_money"
        style="?attr/primaryButtonBottom"/>
</androidx.constraintlayout.widget.ConstraintLayout>
