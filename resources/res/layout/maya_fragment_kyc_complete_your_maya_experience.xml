<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginHorizontal="@dimen/maya_margin_large">
        <com.paymaya.mayaui.common.view.widget.MultiColorTextView
            android:id="@+id/maya_kyc_header_multi_color_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_medium"
            android:text="@string/maya_kyc_complete_your_maya_experience_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:mctvSecondaryTextColor="?attr/mayaColorAccent"
            app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_your_maya_experience_highlighted_header"
            style="@style/JekoBoldH4.Primary"/>
        <TextView
            android:id="@+id/maya_kyc_sub_header_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_small"
            android:text="@string/maya_kyc_complete_your_maya_experience_benefits_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_header_multi_color_text_view"
            style="@style/JekoSemiBoldLongRead.Tertiary"/>
        <com.paymaya.mayaui.kyczoloz.view.widget.ExpandableBenefitsRecyclerView
            android:id="@+id/maya_kyc_expandable_benefits_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_sub_header_text_view"/>
        <View
            android:id="@+id/view_divider_steps"
            android:layout_marginTop="@dimen/maya_margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_expandable_benefits_recycler_view"
            style="@style/MayaContentViewDivider"/>
        <TextView
            android:id="@+id/maya_kyc_steps_information_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:text="@string/maya_kyc_complete_your_maya_experience_steps_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_steps"
            style="@style/JekoBoldTextBody.Primary"/>
        <TextView
            android:gravity="center"
            android:id="@+id/maya_kyc_first_step_text_view"
            android:background="@drawable/maya_bg_content_information_oval_green"
            android:padding="@dimen/maya_margin_2x_small"
            android:layout_width="@dimen/maya_kyc_complete_your_maya_experience_step_icon_size"
            android:layout_height="@dimen/maya_kyc_complete_your_maya_experience_step_icon_size"
            android:text="@string/maya_kyc_complete_your_maya_experience_first_step_icon_text"
            android:layout_marginEnd="@dimen/maya_margin_medium"
            app:layout_constraintBottom_toBottomOf="@+id/maya_kyc_accepted_ids_text_view"
            app:layout_constraintEnd_toStartOf="@+id/maya_kyc_first_step_content_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/maya_kyc_first_step_content_text_view"
            style="@style/JekoBoldTextBody.Accent"/>
        <TextView
            android:id="@+id/maya_kyc_first_step_content_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:text="@string/maya_kyc_complete_your_maya_experience_first_step"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/maya_kyc_first_step_text_view"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_steps_information_text_view"
            style="@style/JekoSemiBoldLongRead.Primary"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/maya_kyc_accepted_ids_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/maya_kyc_complete_your_maya_experience_first_step_available_ids"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/maya_kyc_first_step_content_text_view"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_first_step_content_text_view"
            style="@style/JekoSemiBoldLongRead.Accent"/>
        <ImageView
            android:id="@+id/maya_kyc_first_to_second_dotted_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/maya_drawable_dotted_line_vertical_green"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toTopOf="@+id/maya_kyc_second_step_text_view"
            app:layout_constraintEnd_toEndOf="@+id/maya_kyc_first_step_text_view"
            app:layout_constraintStart_toStartOf="@+id/maya_kyc_first_step_text_view"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_first_step_text_view"/>
        <TextView
            android:gravity="center"
            android:id="@+id/maya_kyc_second_step_text_view"
            android:background="@drawable/maya_bg_content_information_green"
            android:padding="@dimen/maya_padding_2x_small"
            android:layout_width="@dimen/maya_kyc_complete_your_maya_experience_step_icon_size"
            android:layout_height="@dimen/maya_kyc_complete_your_maya_experience_step_icon_size"
            android:text="@string/maya_kyc_complete_your_maya_experience_second_step_icon_text"
            android:layout_marginEnd="@dimen/maya_margin_medium"
            app:layout_constraintBottom_toBottomOf="@+id/maya_kyc_second_step_content_text_view"
            app:layout_constraintEnd_toStartOf="@+id/maya_kyc_second_step_content_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/maya_kyc_second_step_content_text_view"
            style="@style/JekoBoldTextBody.Accent"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/maya_kyc_second_step_content_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:minHeight="@dimen/maya_kyc_complete_your_maya_experience_step_min_height"
            android:text="@string/maya_kyc_complete_your_maya_experience_second_step"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/maya_kyc_second_step_text_view"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_accepted_ids_text_view"
            style="@style/JekoSemiBoldLongRead.Primary"/>
        <ImageView
            android:id="@+id/maya_kyc_second_to_third_dotted_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/maya_drawable_dotted_line_vertical_green"
            app:layout_constraintBottom_toTopOf="@+id/maya_kyc_third_step_text_view"
            app:layout_constraintEnd_toEndOf="@+id/maya_kyc_second_step_text_view"
            app:layout_constraintStart_toStartOf="@+id/maya_kyc_second_step_text_view"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_second_step_text_view"/>
        <TextView
            android:gravity="center"
            android:id="@+id/maya_kyc_third_step_text_view"
            android:background="@drawable/maya_bg_content_information_oval_green"
            android:padding="@dimen/maya_padding_2x_small"
            android:layout_width="@dimen/maya_kyc_complete_your_maya_experience_step_icon_size"
            android:layout_height="@dimen/maya_kyc_complete_your_maya_experience_step_icon_size"
            android:layout_marginBottom="@dimen/maya_margin_large"
            android:text="@string/maya_kyc_complete_your_maya_experience_third_step_icon_text"
            android:layout_marginEnd="@dimen/maya_margin_medium"
            app:layout_constraintEnd_toStartOf="@+id/maya_kyc_third_step_content_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/maya_kyc_third_step_content_text_view"
            style="@style/JekoBoldTextBody.Accent"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/maya_kyc_third_step_content_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:layout_marginBottom="@dimen/maya_margin_large"
            android:minHeight="@dimen/maya_kyc_complete_your_maya_experience_step_min_height"
            android:text="@string/maya_kyc_complete_your_maya_experience_third_step"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/maya_kyc_third_step_text_view"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_second_step_content_text_view"
            style="@style/JekoSemiBoldLongRead.Primary"/>
        <ImageView
            android:id="@+id/maya_kyc_information_image_view"
            android:layout_width="@dimen/maya_kyc_complete_your_maya_experience_information_icon_size"
            android:layout_height="@dimen/maya_kyc_complete_your_maya_experience_information_icon_size"
            android:src="@drawable/maya_ic_information"
            app:layout_constraintEnd_toStartOf="@+id/maya_kyc_note_multi_color_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/maya_kyc_note_multi_color_text_view"/>
        <com.paymaya.mayaui.common.view.widget.MultiColorTextView
            android:id="@+id/maya_kyc_note_multi_color_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:text="@string/maya_kyc_complete_your_maya_experience_internet_connection_information"
            android:layout_marginStart="@dimen/maya_margin_extra_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/maya_kyc_information_image_view"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_third_step_text_view"
            app:mctvSecondaryTextColor="?attr/mayaColorPrimary"
            app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_your_maya_experience_internet_connection_highlighted_information"
            style="@style/CerebriMediumSmallText.Tertiary"/>
        <View
            android:id="@+id/view_divider_identified"
            android:layout_marginTop="@dimen/maya_margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_note_multi_color_text_view"
            style="@style/MayaContentViewDivider"/>
        <dOYHB6.lN8Dz0.d8NVX3
            android:orientation="vertical"
            android:id="@+id/linear_layout_get_identified_easier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_identified">
            <TextView
                android:id="@+id/text_view_get_identified_easier_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/maya_kyc_complete_your_maya_experience_get_identified_header"
                style="@style/JekoBoldTextBody.Primary"/>
            <com.paymaya.mayaui.common.view.widget.MultiColorTextView
                android:id="@+id/multi_color_text_view_get_identified_easier_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_kyc_complete_your_maya_experience_get_identified_information"
                app:mctvSecondaryTextColor="?attr/mayaColorAccent"
                app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_your_maya_experience_get_identified_information_highlight"
                style="@style/JekoSemiBoldLongRead.Tertiary"/>
        </dOYHB6.lN8Dz0.d8NVX3>
        <View
            android:id="@+id/view_divider_privacy"
            android:layout_marginTop="@dimen/maya_margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_get_identified_easier"
            style="@style/MayaContentViewDivider"/>
        <dOYHB6.lN8Dz0.d8NVX3
            android:orientation="vertical"
            android:id="@+id/linear_layout_data_privacy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_privacy">
            <TextView
                android:id="@+id/text_view_get_data_privacy_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/maya_kyc_complete_your_maya_experience_data_privacy_title"
                style="@style/JekoBoldTextBody.Primary"/>
            <com.paymaya.mayaui.common.view.widget.MultiColorTextView
                android:id="@+id/multi_color_text_view_data_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_kyc_complete_your_maya_experience_data_privacy_message"
                app:mctvSecondaryTextColor="?attr/mayaColorAccent"
                app:mctvSecondaryTextHighlightSpan="@string/maya_kyc_complete_your_maya_experience_privacy_statement"
                style="@style/JekoSemiBoldLongRead.Tertiary"/>
        </dOYHB6.lN8Dz0.d8NVX3>
        <Button
            android:id="@+id/maya_kyc_bottom_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_large"
            android:layout_marginBottom="@dimen/maya_margin_extra_large"
            android:text="@string/maya_kyc_complete_your_maya_experience_lets_go_button_text"
            android:layout_marginVertical="@dimen/maya_margin_extra_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_data_privacy"
            style="@style/MayaButtonPrimaryLarge"/>
        <TextView
            android:id="@+id/textview_do_it_later"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/maya_margin_large"
            android:layout_marginTop="@dimen/maya_margin_extra_large"
            android:layout_marginRight="@dimen/maya_margin_large"
            android:layout_marginBottom="@dimen/maya_margin_extra_large"
            android:text="@string/maya_label_do_later"
            android:layout_marginHorizontal="@dimen/maya_margin_large"
            android:layout_marginVertical="@dimen/maya_margin_extra_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maya_kyc_bottom_button"
            style="@style/JekoBoldLink.Accent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
