<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_header_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:text="@string/maya_label_cash_in_via_card_title"
            android:layout_marginStart="@dimen/maya_margin_large"
            android:layout_marginEnd="@dimen/maya_margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldH4.Primary"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center_vertical"
            android:id="@+id/use_new_card_text_view"
            android:background="@drawable/maya_bg_content_border"
            android:paddingTop="@dimen/maya_padding_18dp"
            android:paddingBottom="@dimen/maya_padding_18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            android:text="@string/maya_label_use_new_card"
            android:drawablePadding="@dimen/maya_padding_medium"
            android:paddingStart="@dimen/maya_padding_normal"
            android:paddingEnd="@dimen/maya_padding_normal"
            android:layout_marginStart="@dimen/maya_margin_large"
            android:layout_marginEnd="@dimen/maya_margin_large"
            app:drawableEndCompat="@drawable/maya_ic_chevron_right_grey"
            app:drawableStartCompat="@drawable/maya_ic_credit_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_header_text_view"
            style="@style/JekoSemiBoldTextBody.Primary"/>
        <TextView
            android:id="@+id/my_cards_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_30"
            android:text="@string/maya_label_my_cards"
            android:textAllCaps="true"
            android:layout_marginStart="@dimen/maya_margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/use_new_card_text_view"
            style="@style/JekoOverlineBig.Tertiary"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vaulted_cards_recycler_view"
            android:background="@drawable/maya_bg_content_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_medium"
            android:layout_marginStart="@dimen/maya_margin_large"
            android:layout_marginEnd="@dimen/maya_margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_cards_title_text_view"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/swipe_left_delete_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:layout_marginBottom="@dimen/maya_margin_medium"
            android:text="@string/maya_label_cash_in_via_card_swipe_left_delete"
            android:layout_marginStart="@dimen/maya_margin_large"
            android:layout_marginEnd="@dimen/maya_margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vaulted_cards_recycler_view"
            app:layout_constraintVertical_bias="0"
            style="@style/JekoSemiBoldLongRead.Primary"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/vaulted_cards_group"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="my_cards_title_text_view,             vaulted_cards_recycler_view,             swipe_left_delete_text_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
