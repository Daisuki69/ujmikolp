<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inbox_item_container"
    android:background="@drawable/maya_bg_inbox_undread"
    android:paddingTop="@dimen/maya_padding_normal"
    android:paddingBottom="@dimen/maya_padding_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/maya_margin_normal"
    android:layout_marginRight="@dimen/maya_margin_normal"
    android:layout_marginHorizontal="@dimen/maya_margin_normal"
    android:paddingVertical="@dimen/maya_padding_normal">
    <ImageView
        android:id="@+id/inbox_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_inbox"
        android:paddingStart="@dimen/maya_padding_normal"
        android:paddingEnd="@dimen/maya_padding_medium"
        app:layout_constraintBottom_toTopOf="@+id/inbox_item_description_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inbox_item_title_text_view"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/inbox_item_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="inbox_item_icon"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/inbox_item_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constraintEnd_toStartOf="@+id/inbox_item_green_dot_image"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/inbox_item_barrier"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoBoldTextBody.Primary"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/inbox_item_green_dot_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_bg_grown_green_circle"
        android:layout_marginEnd="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="@+id/inbox_item_title_text_view"
        app:layout_constraintEnd_toStartOf="@+id/inbox_item_date_text_view"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@+id/inbox_item_title_text_view"/>
    <TextView
        android:id="@+id/inbox_item_date_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="@+id/inbox_item_title_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inbox_item_title_text_view"
        style="@style/JekoBoldSmallText.Tertiary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/inbox_item_description_text_view"
        android:paddingBottom="@dimen/maya_margin_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintLeft_toRightOf="@+id/inbox_item_barrier"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inbox_item_title_text_view"
        style="@style/JekoBoldLink.Tertiary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
