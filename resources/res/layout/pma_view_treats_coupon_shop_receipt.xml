<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_layout_pma_view_treats_coupon_shop_receipt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/pma_radius_5dp"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/treats_logo_image_view_pma_view_treats_coupon_shop_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_medium"
            android:src="0x7f080512"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/coupon_brand_icon_image_view_pma_view_treats_coupon_shop_receipt"
            android:layout_width="@dimen/pma_shop_receipt_product_image_size"
            android:layout_height="@dimen/pma_shop_receipt_product_image_size"
            android:layout_marginTop="@dimen/pma_margin_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/left_content_guideline_pma_view_treats_coupon_shop_receipt"
            app:layout_constraintTop_toBottomOf="@+id/treats_logo_image_view_pma_view_treats_coupon_shop_receipt"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/left_content_guideline_pma_view_treats_coupon_shop_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.25"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/coupon_name_text_view_pma_view_treats_coupon_shop_receipt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_medium"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:maxLines="2"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintLeft_toLeftOf="@+id/left_content_guideline_pma_view_treats_coupon_shop_receipt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/treats_logo_image_view_pma_view_treats_coupon_shop_receipt"
            style="@style/BodyDark"/>
        <TextView
            android:id="@+id/coupon_description_text_view_pma_view_treats_coupon_shop_receipt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_extra_small"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintLeft_toLeftOf="@+id/left_content_guideline_pma_view_treats_coupon_shop_receipt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coupon_name_text_view_pma_view_treats_coupon_shop_receipt"
            style="@style/CaptionDarkLight"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_pma_view_treats_coupon_shop_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="coupon_description_text_view_pma_view_treats_coupon_shop_receipt,                                            coupon_brand_icon_image_view_pma_view_treats_coupon_shop_receipt"/>
        <View
            android:background="@color/light"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/code_label_text_view_pma_view_treats_coupon_shop_receipt"
            app:layout_constraintVertical_bias="0"/>
        <TextView
            android:gravity="start"
            android:id="@+id/code_label_text_view_pma_view_treats_coupon_shop_receipt"
            android:paddingTop="@dimen/pma_padding_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_normal"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:text="@string/pma_label_code_c"
            android:layout_marginStart="@dimen/pma_margin_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier_pma_view_treats_coupon_shop_receipt"
            style="@style/BodyDarkLight"/>
        <TextView
            android:textSize="@dimen/pma_text_size_body2"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:id="@+id/coupon_code_text_view_pma_view_treats_coupon_shop_receipt"
            android:paddingTop="@dimen/pma_padding_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_small"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginRight="@dimen/pma_margin_normal"
            android:maxLines="3"
            android:maxLength="41"
            android:layout_marginStart="@dimen/pma_margin_small"
            android:layout_marginEnd="@dimen/pma_margin_normal"
            app:layout_constraintLeft_toRightOf="@+id/code_label_text_view_pma_view_treats_coupon_shop_receipt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier_pma_view_treats_coupon_shop_receipt"/>
        <TextView
            android:id="@+id/powered_by_text_view_pma_view_treats_coupon_shop_receipt"
            android:paddingBottom="@dimen/pma_padding_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:text="@string/pma_label_powered_by"
            android:maxLines="1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/share_treats_text_view_pma_view_treats_coupon_shop_receipt"
            app:layout_constraintTop_toBottomOf="@+id/coupon_code_text_view_pma_view_treats_coupon_shop_receipt"
            style="@style/CaptionDarkLight"/>
        <TextView
            android:textColor="?attr/colorPrimary"
            android:id="@+id/share_treats_text_view_pma_view_treats_coupon_shop_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pma_label_share_treats"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@+id/powered_by_text_view_pma_view_treats_coupon_shop_receipt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/powered_by_text_view_pma_view_treats_coupon_shop_receipt"
            style="@style/CaptionDarkLight"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
