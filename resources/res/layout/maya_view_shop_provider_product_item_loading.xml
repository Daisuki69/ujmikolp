<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container"
    android:background="@color/transparent"
    android:paddingTop="@dimen/maya_padding_normal"
    android:paddingBottom="@dimen/maya_padding_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/maya_padding_normal"
    android:paddingEnd="@dimen/maya_padding_normal">
    <include
        android:id="@+id/loading_product_icon"
        android:layout_width="@dimen/maya_icon_size_length_large"
        android:layout_height="@dimen/maya_icon_size_length_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/maya_view_shimmer_rounded"/>
    <include
        android:id="@+id/loading_name_view"
        android:layout_width="@dimen/maya_shop_provider_product_item_text_1_loading_width"
        android:layout_height="@dimen/maya_shop_provider_product_item_text_loading_height"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:layout_marginStart="@dimen/maya_margin_20"
        app:layout_constraintBottom_toTopOf="@+id/loading_description_view"
        app:layout_constraintStart_toEndOf="@+id/loading_product_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="spread"
        layout="@layout/maya_view_shimmer_rounded"/>
    <include
        android:id="@+id/loading_description_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/maya_shop_provider_product_item_text_loading_height"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        app:layout_constraintBottom_toTopOf="@+id/loading_price_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/loading_name_view"
        app:layout_constraintTop_toBottomOf="@+id/loading_name_view"
        layout="@layout/maya_view_shimmer_rounded"/>
    <include
        android:id="@+id/loading_price_view"
        android:layout_width="@dimen/maya_shop_provider_product_item_text_2_loading_width"
        android:layout_height="@dimen/maya_shop_provider_product_item_text_loading_height"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/loading_name_view"
        app:layout_constraintTop_toBottomOf="@+id/loading_description_view"
        layout="@layout/maya_view_shimmer_rounded"/>
</androidx.constraintlayout.widget.ConstraintLayout>
