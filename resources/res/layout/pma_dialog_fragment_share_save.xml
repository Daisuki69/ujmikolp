<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pma_dialog_fragment_share_save"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:ellipsize="end"
        android:id="@+id/title_textview_pma_dialog_fragment_share_save"
        android:paddingTop="@dimen/pma_margin_extra_large"
        android:paddingBottom="@dimen/pma_padding_large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pma_label_share_or_save"
        android:maxLines="1"
        android:paddingStart="@dimen/pma_padding_large"
        android:paddingEnd="@dimen/pma_padding_2x_large"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/BodyDarkMedium"/>
    <ImageView
        android:id="@+id/close_image_view_pma_dialog_fragment_share_save"
        android:background="?attr/actionBarItemBackground"
        android:padding="@dimen/pma_padding_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_extra_small"
        android:src="@drawable/pma_ic_close_dark"
        android:contentDescription="@string/pma_label_close"
        android:layout_marginEnd="@dimen/pma_margin_small"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_textview_pma_dialog_fragment_share_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_textview_pma_dialog_fragment_share_save"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view_pma_dialog_fragment_share_save"
        android:paddingBottom="@dimen/pma_share_save_bottom_padding"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textview_pma_dialog_fragment_share_save"
        app:layout_constraintVertical_bias="0">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_pma_dialog_fragment_share_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:splitMotionEvents="false"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
