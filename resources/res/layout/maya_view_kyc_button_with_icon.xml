<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_copy_number"
    android:padding="@dimen/maya_padding_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/MayaButtonGreySmall">
    <ImageView
        android:id="@+id/maya_button_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maya_ic_referral_copy"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/maya_button_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/maya_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_kyc_account_under_review_label_copy_number"
        app:layout_constraintBottom_toBottomOf="@+id/maya_button_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/maya_button_icon"
        app:layout_constraintTop_toTopOf="@+id/maya_button_icon"
        style="@style/JekoBoldTextBody.Primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
