<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/container_layout_pma_view_clevertap_ad_item"
        android:layout_width="@dimen/pma_dashboard_announcement_item_width"
        android:layout_height="@dimen/pma_dashboard_announcement_item_height"
        app:cardCornerRadius="@dimen/pma_radius_4dp"
        app:cardElevation="@dimen/pma_elevation_flat"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:orientation="vertical"
            android:id="@+id/image_view_pma_view_clevertap_ad_item"
            android:layout_width="@dimen/pma_dashboard_announcement_item_width"
            android:layout_height="@dimen/pma_dashboard_announcement_item_height"
            android:scaleType="fitXY"/>
        <dOYHB6.lN8Dz0.d8NVX3
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/text_container_pma_view_clevertap_ad_item"
            android:background="@drawable/pma_background_gradient_dark"
            android:padding="@dimen/pma_padding_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/pma_text_size_caption"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/title_view_pma_view_clevertap_ad_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:textSize="@dimen/pma_text_size_caption"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/message_view_pma_view_clevertap_ad_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:fontFamily="@font/roboto"/>
        </dOYHB6.lN8Dz0.d8NVX3>
    </androidx.cardview.widget.CardView>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_banner_ad_message"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/text_view_banner_ad_sub_message"
        app:layout_constraintTop_toBottomOf="@+id/container_layout_pma_view_clevertap_ad_item"
        app:layout_goneMarginBottom="0dp"
        style="@style/CerebriMediumLongRead.Primary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_banner_ad_sub_message"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/text_view_banner_ad_message"
        app:layout_goneMarginTop="@dimen/maya_margin_small"
        style="@style/CerebriBookSmallText.Secondary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
