<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_search_item_container"
    android:background="@color/transparent"
    android:paddingLeft="@dimen/maya_padding_normal"
    android:paddingTop="@dimen/maya_padding_large"
    android:paddingRight="@dimen/maya_padding_normal"
    android:paddingBottom="@dimen/maya_padding_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/maya_padding_normal">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/product_image_view"
        android:layout_width="@dimen/maya_icon_size_length_large"
        android:layout_height="@dimen/maya_icon_size_length_large"
        android:src="@drawable/maya_ic_shop_placeholder_green"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/product_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="@dimen/maya_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/product_description_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/product_image_view"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/JekoSemiBoldTextBody.Primary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/product_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_small"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/product_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/product_name_text_view"
        style="@style/JekoSemiBoldSmallText.Tertiary"/>
    <TextView
        android:id="@+id/product_not_available_text_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:text="@string/maya_label_shop_product_not_available"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/product_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/product_description_text_view"
        style="@style/JekoBoldTextBody.Tertiary"/>
    <TextView
        android:id="@+id/product_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:text="@string/maya_currency_with_value"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/product_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/product_description_text_view"
        app:layout_constraintVertical_bias="0"
        style="@style/JekoBoldTextBody.Primary"/>
    <TextView
        android:id="@+id/product_previous_price_text_view"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:text="@string/maya_currency_with_value"
        android:maxLines="1"
        android:layout_marginStart="@dimen/maya_margin_extra_small"
        app:layout_constraintBaseline_toBaselineOf="@+id/product_price_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/product_price_text_view"
        app:layout_constraintTop_toBottomOf="@+id/product_description_text_view"
        style="@style/JekoRegularTextBody.Tertiary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
