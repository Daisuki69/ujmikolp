<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/maya_bg_color_background_primary_clickable_item"
    android:paddingLeft="@dimen/maya_padding_normal"
    android:paddingTop="@dimen/maya_padding_medium"
    android:paddingRight="@dimen/maya_padding_normal"
    android:paddingBottom="@dimen/maya_padding_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/maya_padding_normal"
    android:paddingVertical="@dimen/maya_padding_medium">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_contact_avatar"
        android:layout_width="@dimen/maya_view_holder_contact_avatar_icon_length"
        android:layout_height="@dimen/maya_view_holder_contact_avatar_icon_length"
        android:src="@drawable/maya_ic_contacts_avatar_light"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/maya_ic_contacts_avatar_light"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginStart="@dimen/maya_margin_medium"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toTopOf="@+id/text_view_contact_mobile_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_contact_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        style="@style/JekoBoldTextBody.Primary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_contact_mobile_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginStart="@dimen/maya_margin_medium"
        android:layout_marginEnd="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_contact_avatar"
        app:layout_constraintTop_toBottomOf="@+id/text_view_contact_name"
        style="@style/JekoSemiBoldLongRead.Tertiary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
