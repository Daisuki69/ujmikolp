<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container_pma_fragment_data_and_personalization"
    android:background="@color/light_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <dOYHB6.lN8Dz0.gDiks7
        android:id="@+id/scroll_view_pma_fragment_data_and_personalization"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/next_button_pma_fragment_data_and_personalization"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/bird_image_view_pma_fragment_data_and_personalization"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="0x7f08047c"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/spiel_text_view_pma_fragment_personalization"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pma_margin_normal"
                android:layout_marginTop="@dimen/pma_margin_normal"
                android:layout_marginRight="@dimen/pma_margin_normal"
                android:text="@string/pma_label_allow_us_to_process_your_data"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bird_image_view_pma_fragment_data_and_personalization"
                style="@style/pma_theme_home_text_view"/>
            <CheckBox
                android:theme="@style/pma_widget_checkbox_green"
                android:id="@+id/enable_check_box_pma_fragment_data_and_personalization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pma_margin_normal"
                android:layout_marginTop="@dimen/pma_margin_normal"
                android:layout_marginStart="@dimen/pma_margin_normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spiel_text_view_pma_fragment_personalization"/>
            <TextView
                android:id="@+id/enable_spiel_text_view_pma_fragment_data_and_personalization"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pma_margin_small"
                android:text="@string/pma_label_enable_all_data_and_personalization"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="@dimen/pma_margin_normal"
                app:layout_constraintBaseline_toBaselineOf="@+id/enable_check_box_pma_fragment_data_and_personalization"
                app:layout_constraintLeft_toRightOf="@+id/enable_check_box_pma_fragment_data_and_personalization"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/border_enable_button_pma_fragment_data_and_personalization"
                android:background="@color/pma_border"
                android:layout_width="0dp"
                android:layout_height="@dimen/pma_height_divider_small"
                android:layout_marginTop="@dimen/pma_margin_normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enable_check_box_pma_fragment_data_and_personalization"/>
            <dOYHB6.lN8Dz0.d8NVX3
                android:orientation="vertical"
                android:id="@+id/container_linear_layout_pma_fragment_data_and_personalization"
                android:padding="@dimen/pma_padding_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pma_margin_normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/border_enable_button_pma_fragment_data_and_personalization"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </dOYHB6.lN8Dz0.gDiks7>
    <Button
        android:textSize="@dimen/pma_text_size_body"
        android:id="@+id/next_button_pma_fragment_data_and_personalization"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pma_bottom_button"
        android:text="@string/pma_label_next"
        android:fontFamily="@string/pma_font_family_roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view_pma_fragment_data_and_personalization"
        style="?attr/solidButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
