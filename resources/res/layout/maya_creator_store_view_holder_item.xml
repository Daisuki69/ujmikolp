<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_creator_store_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/maya_margin_small"
    app:cardCornerRadius="@dimen/maya_radius_16dp"
    app:cardElevation="@dimen/maya_elevation_1dp"
    app:cardPreventCornerOverlap="false">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_view_creator_store_header_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="H,1:0.7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/image_view_creator_store_logo"
            android:background="@drawable/maya_creator_store_icon_background"
            android:padding="@dimen/maya_padding_extra_small"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_creator_store_header_image"
            app:layout_constraintDimensionRatio="3.6:2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_creator_store_header_image"
            app:layout_constraintWidth_percent="0.57"/>
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/text_view_creator_store_name"
            android:paddingTop="@dimen/maya_padding_small"
            android:paddingBottom="@dimen/maya_padding_large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingStart="@dimen/maya_padding_medium"
            android:paddingEnd="@dimen/maya_padding_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_creator_store_logo"
            style="@style/JekoBoldLongRead.Primary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
