<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_constraint_layout"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_shop_provider_left_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline_shop_provider_right_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
    <dOYHB6.lN8Dz0.d8NVX3
        android:orientation="horizontal"
        android:id="@+id/container_layout_shop_provider_product_search"
        android:background="@drawable/maya_bg_shop_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/guideline_shop_provider_right_margin"
        app:layout_constraintStart_toStartOf="@+id/guideline_shop_provider_left_margin"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:layout_marginBottom="@dimen/maya_margin_normal"
            android:src="?attr/mayaSearchIcon"
            android:layout_marginStart="@dimen/maya_margin_large"
            android:layout_marginVertical="@dimen/maya_margin_normal"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maya_shop_search_product_within_brand_hint"
            android:layout_marginStart="@dimen/maya_margin_normal"
            style="@style/JekoSemiBoldTextBody.Quaternary"/>
    </dOYHB6.lN8Dz0.d8NVX3>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_shop_provider_banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="3"
        app:layout_constraintEnd_toEndOf="@+id/guideline_shop_provider_right_margin"
        app:layout_constraintStart_toStartOf="@+id/guideline_shop_provider_left_margin"
        app:layout_constraintTop_toBottomOf="@+id/container_layout_shop_provider_product_search"
        app:shapeAppearanceOverlay="@style/MayaRoundedCornerBanner"/>
    <include
        android:id="@+id/lottie_view_shop_provider_banner_loading"
        android:layout_width="0dp"
        android:layout_height="@dimen/maya_shop_provider_products_banner_loading_height"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/guideline_shop_provider_right_margin"
        app:layout_constraintStart_toStartOf="@+id/guideline_shop_provider_left_margin"
        app:layout_constraintTop_toBottomOf="@+id/container_layout_shop_provider_product_search"
        layout="@layout/maya_view_shimmer_rounded"/>
    <com.paymaya.common.widget.MayaResizingTabLayout
        android:id="@+id/tab_layout_shop_provider_subcategories_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maya_shop_tab_layout_height"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintTop_toBottomOf="@+id/image_view_shop_provider_banner"
        style="@style/MayaTabLayoutDashboardTabs"/>
    <include
        android:id="@+id/lottie_view_shop_provider_subcategory_tabs_loading"
        android:layout_width="0dp"
        android:layout_height="@dimen/maya_shop_tab_layout_height"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintStart_toStartOf="@+id/guideline_shop_provider_left_margin"
        app:layout_constraintTop_toBottomOf="@+id/image_view_shop_provider_banner"
        layout="@layout/maya_view_shop_provider_subcategory_tabs_loading"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_shop_provider_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="image_view_shop_provider_banner,             lottie_view_shop_provider_banner_loading,             tab_layout_shop_provider_subcategories_tabs,             lottie_view_shop_provider_subcategory_tabs_loading"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_shop_provider_products_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier_shop_provider_banner"/>
    <include
        android:id="@+id/lottie_view_shop_provider_products_container_loading"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_shop_provider_right_margin"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/guideline_shop_provider_left_margin"
        app:layout_constraintTop_toBottomOf="@+id/barrier_shop_provider_banner"
        layout="@layout/maya_view_shop_provider_page_products_list_loading"/>
</androidx.constraintlayout.widget.ConstraintLayout>
