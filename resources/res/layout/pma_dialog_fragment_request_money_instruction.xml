<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scroll_view_pma_dialog_request_money_instruction"
    android:background="@color/light_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/left_guideline_pma_dialog_request_money_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/pma_margin_large"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/steps_guideline_pma_dialog_request_money_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/pma_margin_2x_large"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/right_guideline_pma_dialog_request_money_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="@dimen/pma_margin_large"/>
        <ImageView
            android:id="@+id/close_image_view_pma_dialog_request_money_instruction"
            android:padding="@dimen/pma_padding_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pma_ic_close_dark"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/title_text_view_pma_dialog_request_money_instruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_medium"
            android:text="@string/pma_label_how_request_money_work_title"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintStart_toStartOf="@+id/left_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintTop_toBottomOf="@+id/close_image_view_pma_dialog_request_money_instruction"
            style="@style/BodyDarkBold"/>
        <TextView
            android:id="@+id/step_1_text_view_pma_dialog_request_money_instruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_large"
            android:text="@string/pma_label_request_money_link_step_1"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintStart_toStartOf="@+id/steps_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view_pma_dialog_request_money_instruction"
            style="@style/Body2Dark"/>
        <TextView
            android:gravity="center"
            android:id="@+id/number_1_text_view_pma_dialog_request_money_instruction"
            android:background="@drawable/pma_border_instruction_number"
            android:padding="@dimen/pma_padding_extra_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/pma_margin_small"
            android:text="@string/pma_label_1"
            android:layout_marginEnd="@dimen/pma_margin_small"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/steps_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintTop_toTopOf="@+id/step_1_text_view_pma_dialog_request_money_instruction"
            style="@style/BodyDarkBold"/>
        <TextView
            android:id="@+id/step_2_text_view_pma_dialog_request_money_instruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:text="@string/pma_label_request_money_link_step_2"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintStart_toStartOf="@+id/steps_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintTop_toBottomOf="@+id/step_1_text_view_pma_dialog_request_money_instruction"
            style="@style/Body2Dark"/>
        <TextView
            android:gravity="center"
            android:id="@+id/number_2_text_view_pma_dialog_request_money_instruction"
            android:background="@drawable/pma_border_instruction_number"
            android:padding="@dimen/pma_padding_extra_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/pma_margin_small"
            android:text="@string/pma_label_2"
            android:layout_marginEnd="@dimen/pma_margin_small"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/steps_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintTop_toTopOf="@+id/step_2_text_view_pma_dialog_request_money_instruction"
            style="@style/BodyDarkBold"/>
        <TextView
            android:id="@+id/step_3_text_view_pma_dialog_request_money_instruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_normal"
            android:layout_marginBottom="@dimen/pma_margin_48dp"
            android:text="@string/pma_label_request_money_link_step_3"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintStart_toStartOf="@+id/steps_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintTop_toBottomOf="@+id/step_2_text_view_pma_dialog_request_money_instruction"
            app:layout_constraintVertical_bias="0"
            style="@style/Body2Dark"/>
        <TextView
            android:gravity="center"
            android:id="@+id/number_3_text_view_pma_dialog_request_money_instruction"
            android:background="@drawable/pma_border_instruction_number"
            android:padding="@dimen/pma_padding_extra_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/pma_margin_small"
            android:text="@string/pma_label_3"
            android:layout_marginEnd="@dimen/pma_margin_small"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/steps_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintTop_toTopOf="@+id/step_3_text_view_pma_dialog_request_money_instruction"
            style="@style/BodyDarkBold"/>
        <View
            android:id="@+id/divider_view_pma_dialog_request_money_instruction"
            android:background="@color/light"
            android:layout_width="0dp"
            android:layout_height="@dimen/pma_height_divider_normal"
            android:layout_marginTop="@dimen/pma_margin_20dp"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintStart_toStartOf="@+id/left_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintTop_toBottomOf="@+id/step_3_text_view_pma_dialog_request_money_instruction"/>
        <TextView
            android:id="@+id/disclaimer_text_view_pma_dialog_request_money_instruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_20dp"
            android:layout_marginBottom="@dimen/pma_margin_20dp"
            android:text="@string/pma_label_request_money_link_disclaimer"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintStart_toStartOf="@+id/left_guideline_pma_dialog_request_money_instruction"
            app:layout_constraintTop_toBottomOf="@+id/divider_view_pma_dialog_request_money_instruction"
            app:layout_constraintVertical_bias="0"
            style="@style/CaptionDarkLight"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
