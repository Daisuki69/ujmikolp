<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/maya_margin_large"
    android:layout_marginEnd="@dimen/maya_margin_large"
    app:cardCornerRadius="@dimen/maya_radius_16dp"
    app:cardElevation="@dimen/maya_elevation_2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/maya_padding_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:layout_marginStart="@dimen/maya_margin_normal"
            android:layout_marginEnd="@dimen/maya_margin_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldSubline.Primary"/>
        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            app:layout_constraintLeft_toLeftOf="@+id/text_view_title"
            app:layout_constraintRight_toRightOf="@+id/text_view_title"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"
            style="@style/JekoRegularSmallText.Primary"/>
        <TextView
            android:id="@+id/text_view_remaining_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            app:layout_constraintLeft_toLeftOf="@+id/text_view_description"
            app:layout_constraintTop_toBottomOf="@+id/text_view_description"
            style="@style/JekoBoldLink.Accent"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="@dimen/maya_progress_bar_horizontal_height_extra_large"
            android:layout_marginLeft="@dimen/maya_margin_normal"
            android:layout_marginTop="@dimen/maya_margin_medium"
            android:layout_marginRight="@dimen/maya_margin_normal"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/pma_progress_bar_rounded"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_remaining_amount"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <TextView
            android:id="@+id/text_view_used_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            android:layout_marginStart="@dimen/maya_margin_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            style="@style/CerebriBookSmallText.Quaternary"/>
        <TextView
            android:textSize="@dimen/maya_text_size_small_text"
            android:textColor="@color/maya_shades_of_grey_5"
            android:id="@+id/text_view_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/maya_margin_normal"
            android:layout_marginTop="@dimen/maya_margin_extra_small"
            android:layout_marginRight="@dimen/maya_margin_normal"
            android:fontFamily="@font/font_cerebri_sans_pro_medium"
            android:layout_marginStart="@dimen/maya_margin_normal"
            android:layout_marginEnd="@dimen/maya_margin_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_used_amount"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
