<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_pma_fragment_shop_search"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:scrollbarSize="@dimen/pma_scrollbar_size_normal"
        android:scrollbarThumbVertical="@color/pma_theme_home_scrollbar_color"
        android:id="@+id/recycler_view_pma_fragment_shop_search"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/empty_group_pma_fragment_shop_search"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="background_view_pma_fragment_shop_search,         image_view_pma_fragment_shop_search,         empty_title_text_view_pma_fragment_shop_search,         empty_body_text_view_pma_fragment_shop_search"/>
    <View
        android:id="@+id/background_view_pma_fragment_shop_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:theme="@style/pma_theme_home_base"
        android:id="@+id/image_view_pma_fragment_shop_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="0x7f080483"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/empty_title_text_view_pma_fragment_shop_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        style="@android:style/Widget.ProgressBar.Inverse"/>
    <TextView
        android:id="@+id/empty_title_text_view_pma_fragment_shop_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_20dp"
        android:text="@string/pma_label_no_results_found"
        app:layout_constraintBottom_toTopOf="@+id/empty_body_text_view_pma_fragment_shop_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_pma_fragment_shop_search"
        style="@style/BodyDarkMedium"/>
    <TextView
        android:gravity="center"
        android:id="@+id/empty_body_text_view_pma_fragment_shop_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_normal"
        android:layout_marginTop="@dimen/pma_margin_medium"
        android:layout_marginRight="@dimen/pma_margin_normal"
        android:text="@string/pma_label_we_could_not_find_what_you_are_looking_for"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_title_text_view_pma_fragment_shop_search"
        style="@style/Body2DarkLight"/>
</androidx.constraintlayout.widget.ConstraintLayout>
