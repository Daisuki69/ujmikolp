<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarThumbVertical="@drawable/maya_bg_scrollbar_grey_quaternary"
    android:id="@+id/nested_scroll_view_form_container"
    android:background="@color/maya_shades_of_grey_1"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_form_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/maya_margin_large"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="@dimen/maya_margin_large"/>
        <TextView
            android:id="@+id/text_view_form_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_normal"
            android:text="@string/maya_kyc_dosri_header"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldH4.Primary"/>
        <TextView
            android:textColor="@color/maya_shades_of_grey_6"
            android:id="@+id/text_view_form_sub_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_small"
            android:text="@string/maya_kyc_dosri_sub_header"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/text_view_form_header"
            style="@style/CerebriBookLongRead"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_maya_job_roles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_large"
            app:cardCornerRadius="@dimen/maya_radius_16dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/text_view_form_sub_header">
            <com.paymaya.common.widget.MayaRadioGroupView
                android:orientation="vertical"
                android:id="@+id/radio_group_maya_dosri_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_medium"
                android:layout_marginBottom="@dimen/maya_margin_normal"
                android:layout_marginStart="@dimen/maya_margin_normal"
                android:layout_marginEnd="@dimen/maya_margin_normal"/>
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/view_divider"
            android:background="@color/maya_shades_of_grey_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/maya_margin_6"
            android:layout_marginTop="@dimen/maya_margin_large"
            app:layout_constraintTop_toBottomOf="@+id/card_view_maya_job_roles"/>
        <dOYHB6.lN8Dz0.d8NVX3
            android:orientation="vertical"
            android:id="@+id/linear_layout_relatives_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/view_divider"/>
        <TextView
            android:textColor="@color/maya_primary_green"
            android:id="@+id/text_view_add_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_small"
            android:text="@string/maya_kyc_dosri_add_relative"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_relatives_container"
            style="@style/CerebriBookLongRead"/>
        <Button
            android:id="@+id/button_continue_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/maya_margin_26"
            android:layout_marginBottom="@dimen/maya_margin_16"
            android:text="@string/maya_kyc_complete_personal_information_continue_action"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/text_view_add_relative"
            app:layout_constraintVertical_bias="1"
            style="@style/MayaButtonPrimaryLarge"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
