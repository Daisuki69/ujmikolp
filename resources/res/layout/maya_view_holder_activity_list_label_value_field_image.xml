<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/maya_padding_normal"
    android:layout_marginTop="@dimen/maya_margin_extra_small"
    android:layout_marginRight="@dimen/maya_padding_normal"
    android:layout_marginBottom="@dimen/maya_margin_extra_small"
    android:layout_marginHorizontal="@dimen/maya_padding_normal"
    android:layout_marginVertical="@dimen/maya_margin_extra_small">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/text_view_activity_list_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.4"/>
    <TextView
        android:id="@+id/text_view_activity_list_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_view_activity_list_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CerebriBookSmallText.Secondary"/>
    <ImageView
        android:id="@+id/text_view_activity_list_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_view_activity_list_divider"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
