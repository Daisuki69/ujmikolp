<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_view_device_information_icon"
        android:background="@drawable/maya_bg_content_information_grey_2_small"
        android:padding="@dimen/maya_margin_extra_small"
        android:layout_width="@dimen/maya_icon_size_length_large"
        android:layout_height="@dimen/maya_icon_size_length_large"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/maya_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        style="@style/JekoSemiBoldH5.Primary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_device_information_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="@dimen/maya_margin_medium"
        android:layout_marginEnd="@dimen/maya_margin_medium"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/image_view_device_information_arrow"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/text_view_device_information_icon"
        app:layout_constraintTop_toTopOf="@+id/text_view_device_information_icon"
        style="@style/JekoSemiBoldTextBody.Primary"/>
    <ImageView
        android:id="@+id/image_view_device_information_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:src="@drawable/maya_ic_service_help_grey_arrow"
        android:layout_marginEnd="@dimen/maya_margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_device_information_last_logged_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_2x_small"
        android:maxLines="2"
        android:layout_marginStart="@dimen/maya_margin_medium"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/image_view_device_information_arrow"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/text_view_device_information_icon"
        app:layout_constraintTop_toBottomOf="@+id/text_view_device_information_name"
        style="@style/CerebriBookLink.Secondary"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/text_view_device_information_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:maxLines="2"
        android:layout_marginStart="@dimen/maya_margin_medium"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_view_device_information_arrow"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/text_view_device_information_icon"
        app:layout_constraintTop_toBottomOf="@+id/text_view_device_information_last_logged_in"
        style="@style/CerebriBookLink.Secondary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
