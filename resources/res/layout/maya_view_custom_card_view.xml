<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_card_view"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/pma_radius_16dp"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/custom_card_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/label_text_view"
            android:background="@drawable/maya_bg_color_content_primary_rounded"
            android:paddingLeft="@dimen/pma_padding_normal"
            android:paddingTop="@dimen/pma_padding_extra_small"
            android:paddingRight="@dimen/pma_padding_normal"
            android:paddingBottom="@dimen/pma_padding_extra_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pma_margin_large"
            android:layout_marginTop="@dimen/pma_margin_medium"
            android:layout_marginRight="@dimen/pma_margin_large"
            android:layout_marginHorizontal="@dimen/pma_margin_large"
            android:paddingHorizontal="@dimen/pma_padding_normal"
            android:paddingVertical="@dimen/pma_padding_extra_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/JekoBoldSmallText.PrimaryNegative"/>
        <TextView
            android:id="@+id/primary_text_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_small"
            android:layout_marginStart="@dimen/pma_margin_large"
            android:layout_marginEnd="@dimen/pma_margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_text_view"
            style="@style/JekoBoldH5.Primary"/>
        <TextView
            android:id="@+id/secondary_text_text_view"
            android:paddingLeft="@dimen/pma_padding_large"
            android:paddingTop="@dimen/pma_padding_small"
            android:paddingRight="@dimen/pma_padding_large"
            android:paddingBottom="@dimen/pma_padding_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pma_margin_small"
            android:paddingHorizontal="@dimen/pma_padding_large"
            android:paddingVertical="@dimen/pma_padding_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/primary_text_text_view"
            style="@style/JekoBoldLongRead.Primary"/>
        <ImageView
            android:id="@+id/bottom_right_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
