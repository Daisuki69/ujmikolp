<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_top_sheet_line"
        android:background="@color/maya_primary_white"
        android:layout_width="@dimen/maya_bottom_sheet_line_width"
        android:layout_height="@dimen/maya_height_divider_normal"
        android:layout_marginLeft="@dimen/maya_margin_extra_large"
        android:layout_marginRight="@dimen/maya_margin_extra_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_background_sheet"
        android:background="@drawable/maya_bg_default_bottom_dialog_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/maya_margin_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_52"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:textAlignment="textStart"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/text_view_description"
        app:layout_constraintEnd_toEndOf="@+id/view_background_sheet"
        app:layout_constraintStart_toStartOf="@+id/view_background_sheet"
        app:layout_constraintTop_toTopOf="@+id/view_background_sheet"
        style="@style/JekoBoldH5.Primary"/>
    <TextView
        android:id="@+id/text_view_description"
        android:background="@drawable/maya_bg_color_background_secondary_rounded"
        android:paddingTop="@dimen/maya_margin_20"
        android:paddingBottom="@dimen/maya_margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:textAlignment="textStart"
        android:paddingStart="@dimen/maya_padding_normal"
        android:paddingEnd="@dimen/maya_padding_large"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        android:paddingVertical="@dimen/maya_margin_20"
        app:layout_constraintBottom_toTopOf="@+id/button_primary"
        app:layout_constraintEnd_toEndOf="@+id/view_background_sheet"
        app:layout_constraintStart_toStartOf="@+id/view_background_sheet"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title"
        style="@style/CerebriBookLongRead.Secondary"/>
    <Button
        android:id="@+id/button_primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maya_margin_large"
        android:layout_marginTop="@dimen/maya_margin_small"
        android:layout_marginRight="@dimen/maya_margin_large"
        android:layout_marginBottom="@dimen/maya_margin_normal"
        android:layout_marginHorizontal="@dimen/maya_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_background_sheet"
        app:layout_constraintStart_toStartOf="@+id/view_background_sheet"
        app:layout_constraintTop_toBottomOf="@+id/text_view_description"
        style="@style/MayaButtonPrimaryLarge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
