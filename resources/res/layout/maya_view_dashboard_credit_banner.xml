<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_credit_banner"
    android:paddingTop="@dimen/maya_padding_medium"
    android:paddingBottom="@dimen/maya_padding_medium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/maya_padding_normal"
    android:paddingEnd="@dimen/maya_padding_normal">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_credit_header_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_dashboard_credit_banner_main"
        app:layout_constraintBottom_toTopOf="@+id/text_view_credit_header_sub"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/JekoBoldSubline.Primary"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_credit_header_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/CerebriBookSmallText.Tertiary"/>
    <Button
        android:id="@+id/button_dashboard_credit_banner"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_5"
        android:minHeight="@dimen/maya_icon_size_length_medium"
        android:text="@string/maya_button_dashboard_credit_banner_cta"
        android:contentDescription="@string/maya_button_dashboard_credit_banner_cta"
        android:paddingStart="@dimen/maya_margin_medium"
        android:paddingEnd="@dimen/maya_margin_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view_credit_header_main"
        style="@style/MayaButtonPrimarySmall"/>
    <ImageView
        android:id="@+id/image_view_credit_chevron"
        android:visibility="gone"
        android:layout_width="@dimen/maya_icon_size_length_small"
        android:layout_height="@dimen/maya_icon_size_length_small"
        android:src="@drawable/maya_ic_chevron_right_green"
        android:contentDescription="@string/maya_label_dashboard_credit_banner_main"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_credit_header_main"
        app:layout_constraintStart_toEndOf="@+id/text_view_credit_header_main"
        app:layout_constraintTop_toTopOf="@+id/text_view_credit_header_main"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_credit_accepted_header_main"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/text_view_credit_accepted_header_sub"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/JekoBoldSubline.Primary"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_credit_accepted_header_sub"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maya_label_dashboard_credit_banner_sub_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/CerebriBookSmallText.Tertiary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
