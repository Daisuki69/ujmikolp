<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container_pma_view_shop_v3_product_item"
    android:background="@drawable/pma_selectable_background_stroke_rect_white"
    android:paddingLeft="@dimen/pma_padding_normal"
    android:paddingTop="@dimen/pma_padding_normal"
    android:paddingRight="@dimen/pma_padding_normal"
    android:paddingBottom="@dimen/pma_padding_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/pma_shop_provider_product_item_height">
    <ImageView
        android:id="@+id/product_icon_image_view_pma_view_shop_v3_product_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHeight_max="@dimen/pma_shop_provider_product_item_icon_max_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/pma_shop_provider_product_item_icon_max_width"/>
    <TextView
        android:textColor="@color/pma_theme_home_text_color_primary"
        android:ellipsize="end"
        android:id="@+id/product_name_text_view_pma_view_shop_v3_product_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_20dp"
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
        app:layout_constraintBottom_toTopOf="@+id/product_description_text_view_pma_view_shop_v3_product_item"
        app:layout_constraintLeft_toRightOf="@+id/product_icon_image_view_pma_view_shop_v3_product_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/Body2DarkMedium"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/product_description_text_view_pma_view_shop_v3_product_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_small"
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/pma_line_spacing_4sp"
        app:layout_constraintBottom_toTopOf="@+id/product_bottom_details_barrier_pma_view_shop_v3_product_item"
        app:layout_constraintLeft_toLeftOf="@+id/product_name_text_view_pma_view_shop_v3_product_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name_text_view_pma_view_shop_v3_product_item"
        style="@style/Caption2DarkLight"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/product_bottom_details_barrier_pma_view_shop_v3_product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="product_not_available_text_view_pma_view_shop_v3_product_item,         product_price_text_view_pma_view_shop_v3_product_item"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/dark_light"
        android:id="@+id/product_not_available_text_view_pma_view_shop_v3_product_item"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_extra_small"
        android:text="@string/pma_label_shop_item_not_available"
        android:maxLines="1"
        android:lineSpacingExtra="@dimen/pma_line_spacing_5sp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/product_name_text_view_pma_view_shop_v3_product_item"
        app:layout_constraintTop_toBottomOf="@+id/product_description_text_view_pma_view_shop_v3_product_item"
        style="@style/BodyDarkLight"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/product_price_text_view_pma_view_shop_v3_product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pma_margin_extra_small"
        android:maxLines="1"
        android:lineSpacingExtra="@dimen/pma_line_spacing_5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@+id/product_name_text_view_pma_view_shop_v3_product_item"
        app:layout_constraintTop_toBottomOf="@+id/product_description_text_view_pma_view_shop_v3_product_item"
        style="@style/BodyPrimaryBold"/>
    <TextView
        android:textColor="@color/pma_theme_home_text_color_secondary"
        android:gravity="center"
        android:id="@+id/product_previous_price_text_view_pma_view_shop_v3_product_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pma_margin_small"
        android:maxLines="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/product_price_text_view_pma_view_shop_v3_product_item"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/product_price_text_view_pma_view_shop_v3_product_item"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/BodyDarkBold"/>
</androidx.constraintlayout.widget.ConstraintLayout>
