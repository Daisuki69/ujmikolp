<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_pma_fragment_pay_bills_confirmation"
    android:background="?attr/mayaColorBackgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <dOYHB6.lN8Dz0.gDiks7
        android:id="@+id/scroll_view_pma_fragment_pay_bills_confirmation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingLeft="@dimen/maya_margin_large"
            android:paddingRight="@dimen/maya_margin_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/maya_margin_large">
            <ImageView
                android:id="@+id/image_view_biller_icon"
                android:background="@drawable/maya_bg_icon_circle_border"
                android:padding="@dimen/maya_padding_extra_small"
                android:visibility="gone"
                android:layout_width="@dimen/maya_button_height_normal"
                android:layout_height="@dimen/maya_button_height_normal"
                android:layout_marginTop="@dimen/maya_margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/text_view_confirm_payment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:text="@string/maya_label_pay_bills_confirm_payment_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_biller_icon"
                style="@style/JekoBoldTextBody.Primary"/>
            <TextView
                android:id="@+id/currency_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:text="@string/maya_php_currency"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toStartOf="@+id/text_view_amount"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_confirm_payment_title"
                style="@style/JekoBoldH4.Primary"/>
            <TextView
                android:id="@+id/text_view_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/currency_text_view"
                app:layout_constraintTop_toBottomOf="@+id/text_view_confirm_payment_title"
                style="@style/JekoBoldH4.Primary"/>
            <View
                android:id="@+id/payment_method_view"
                android:background="@drawable/maya_bg_color_background_secondary_rounded"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/maya_margin_large"
                app:layout_constraintBottom_toBottomOf="@+id/payment_method_bottom_space"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_amount"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/vertical_middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>
            <TextView
                android:id="@+id/source_label_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/maya_margin_normal"
                android:layout_marginTop="@dimen/maya_margin_20"
                android:layout_marginRight="@dimen/maya_margin_normal"
                android:text="@string/maya_label_pay_bills_payment_method_title"
                android:layout_marginHorizontal="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toStartOf="@+id/vertical_middle_guideline"
                app:layout_constraintStart_toStartOf="@+id/payment_method_view"
                app:layout_constraintTop_toTopOf="@+id/payment_method_view"
                style="@style/JekoSemiBoldSmallText.Tertiary"/>
            <TextView
                android:id="@+id/payment_method_value_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_20"
                android:text="@string/maya_label_pay_bills_my_wallet"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="@+id/payment_method_view"
                app:layout_constraintStart_toEndOf="@+id/vertical_middle_guideline"
                app:layout_constraintTop_toTopOf="@+id/payment_method_view"
                style="@style/JekoSemiBoldLink.Primary"/>
            <TextView
                android:id="@+id/text_view_payment_method_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_small"
                android:layout_marginEnd="@dimen/maya_margin_normal"
                app:layout_constraintBottom_toTopOf="@+id/payment_method_bottom_space"
                app:layout_constraintEnd_toEndOf="@+id/payment_method_view"
                app:layout_constraintStart_toEndOf="@+id/vertical_middle_guideline"
                app:layout_constraintTop_toBottomOf="@+id/payment_method_value_text_view"
                style="@style/JekoSemiBoldLink.Tertiary"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_payment_method"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:constraint_referenced_ids="text_view_payment_method_phone_number,                 payment_method_value_text_view,                 source_label_text_view,                 vertical_middle_guideline,                 payment_method_view"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="payment_method_view,                 text_view_amount"/>
            <Space
                android:id="@+id/payment_method_bottom_space"
                android:layout_width="0dp"
                android:layout_height="@dimen/maya_margin_medium"
                app:layout_constraintEnd_toEndOf="@+id/payment_method_view"
                app:layout_constraintStart_toStartOf="@+id/payment_method_view"
                app:layout_constraintTop_toBottomOf="@+id/text_view_payment_method_phone_number"/>
            <com.paymaya.mayaui.common.view.widget.inforeviewlist.MayaReviewInfoRecyclerView
                android:id="@+id/review_info_recycler_view_payment_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier_payment_method"
                app:rirvItemDividerLength="short"/>
            <com.paymaya.mayaui.common.view.widget.inforeviewlist.MayaReviewInfoRecyclerView
                android:id="@+id/review_info_recycler_view_additional_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_normal"
                android:layout_marginBottom="@dimen/maya_margin_large"
                app:layout_constraintBottom_toTopOf="@+id/button_pay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/review_info_recycler_view_payment_details"
                app:layout_constraintVertical_bias="0"
                app:rirvItemDividerLength="short"/>
            <Button
                android:id="@+id/button_view_initial_receipt"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:layout_marginBottom="@dimen/maya_margin_large"
                android:text="@string/maya_label_pay_bills_view_initial_receipt"
                android:layout_marginVertical="@dimen/maya_margin_large"
                app:layout_constraintBottom_toTopOf="@+id/button_pay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/MayaButtonPrimaryLarge"/>
            <Button
                android:id="@+id/button_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maya_margin_large"
                android:layout_marginBottom="@dimen/maya_margin_large"
                android:text="@string/maya_label_pay_bills_pay"
                android:layout_marginVertical="@dimen/maya_margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/MayaButtonPrimaryLarge"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </dOYHB6.lN8Dz0.gDiks7>
</androidx.constraintlayout.widget.ConstraintLayout>
