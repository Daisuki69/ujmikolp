<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/maya_shades_of_grey_11"
    android:padding="@dimen/maya_padding_extra_large"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_view_media_icon"
        android:layout_width="@dimen/maya_icon_size_length_extra_large"
        android:layout_height="@dimen/maya_icon_size_length_extra_large"
        android:src="0x7f08039b"
        app:layout_constraintBottom_toTopOf="@+id/text_view_media_permission_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/text_view_media_permission_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_large"
        android:text="@string/maya_label_media_permission_title"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/text_view_media_permission_description"
        app:layout_constraintEnd_toEndOf="@+id/image_view_media_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/image_view_media_icon"
        app:layout_constraintTop_toBottomOf="@+id/image_view_media_icon"
        style="@style/JekoBoldH5.MainSecondary"/>
    <TextView
        android:id="@+id/text_view_media_permission_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_normal"
        android:text="@string/maya_label_media_permission_description"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/text_view_enable_media"
        app:layout_constraintEnd_toEndOf="@+id/image_view_media_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/image_view_media_icon"
        app:layout_constraintTop_toBottomOf="@+id/text_view_media_permission_header"
        style="@style/JekoRegularLongRead.Quaternary"/>
    <TextView
        android:id="@+id/text_view_enable_media"
        android:padding="@dimen/maya_padding_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maya_margin_extra_large"
        android:text="@string/maya_label_enable_media_access"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/image_view_media_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/image_view_media_icon"
        app:layout_constraintTop_toBottomOf="@+id/text_view_media_permission_description"
        style="@style/JekoBoldLongRead.Accent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
